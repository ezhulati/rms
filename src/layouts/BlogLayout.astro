---
import BaseLayout from './BaseLayout.astro';
import '../pages/blog/blog-styles.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'RealMindSolutions Blog | Mental Health Resources',
  description = 'Expert guides, news, and insights on mental health and online therapy.',
  image
} = Astro.props;
---

<BaseLayout title={title} description={description} image={image}>
  <div class="blog-container">
    <div class="blog-content-container">
      <slot />
    </div>
  </div>
</BaseLayout>
