---
import Header from '../components/react/Header';
import Footer from '../components/Footer.astro';
import '../index.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'RealMindSolutions | Find Your Perfect Mental Health Solution',
  description = 'Compare, review, and discover the best online therapy platforms tailored to your unique needs.',
  image = 'https://images.unsplash.com/photo-1507413245164-6160d8298b31?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1200&q=80'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/images/RMS_icon.svg" />
    <meta name="generator" content={Astro.generator} />

    {/* SEO Meta Tags */}
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    {/* Open Graph */}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    {/* Twitter */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    {/* Additional SEO Meta Tags */}
    <meta name="robots" content="index, follow" />
    <meta name="author" content="RealMindSolutions" />
    <meta name="theme-color" content="#3ECF8E" />

    {/* Structured Data - Organization */}
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "RealMindSolutions",
        "url": "https://realmindsolutions.com",
        "logo": "https://realmindsolutions.com/images/RMS_logo_horizontal.svg",
        "description": "Compare, review, and discover the best online therapy platforms tailored to your unique needs.",
        "sameAs": [
          "https://twitter.com/realmindsolutions",
          "https://facebook.com/realmindsolutions"
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "Customer Service",
          "email": "contact@realmindsolutions.com"
        }
      })}
    </script>

    {/* Structured Data - Website */}
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "RealMindSolutions",
      "url": "https://realmindsolutions.com",
      "description": "Compare, review, and discover the best online therapy platforms tailored to your unique needs."
    })} />
  </head>
  <body class="bg-white">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-brand-primary-600 focus:text-white focus:px-4 focus:py-2 focus:rounded">
      Skip to main content
    </a>
    <div class="flex flex-col min-h-screen">
      <Header client:load />
      <main id="main-content" class="flex-grow w-full bg-white" role="main">
        <slot />
      </main>
      <Footer />
    </div>

  </body>
</html>
