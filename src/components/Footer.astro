      <div class="mt-2 space-x-4">
        <a href="/privacy-policy" class="text-brand-primary-400 hover:text-brand-primary-300 transition-colors">Privacy Policy</a>
        <a href="/terms-of-service" class="text-brand-primary-400 hover:text-brand-primary-300 transition-colors">Terms of Service</a>
        <a href="/accessibility" class="text-brand-primary-400 hover:text-brand-primary-300 transition-colors">Accessibility</a>
      </div>
    </div>
    </div>
  </div>
