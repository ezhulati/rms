---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ArrowRight, Brain, Search, Users, Heart, GitCompare, Star, Award, Wrench, BookOpen, GraduationCap } from 'lucide-react';

// Homepage-specific structured data
const homepageStructuredData = {
  "@context": "https://schema.org",
  "@type": "MedicalWebPage",
  "name": "RealMindSolutions - Mental Health Platform Comparison",
  "description": "Compare, review, and discover the best online therapy platforms tailored to your unique needs.",
  "about": {
    "@type": "MedicalCondition",
    "name": "Mental Health"
  },
  "audience": {
    "@type": "PatienceAudience",
    "audienceType": "People seeking mental health support"
  }
};
---

<BaseLayout
  title="Online Therapy Comparison & Reviews | RealMindSolutions"
  description="Compare 25+ online therapy platforms with unbiased expert reviews. Find the best match for your needs with side-by-side cost, feature & therapist comparisons."
  image="/images/concepts/homepage.jpg"
>
  <script type="application/ld+json" set:html={JSON.stringify(homepageStructuredData)} />
  {/* Hero Section */}
  <section class="relative bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-24 md:pt-24 md:pb-32 overflow-hidden">
    {/* Background decoration */}
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-brand-primary-100 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-brand-accent-100 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-brand-secondary-100 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6 lg:px-12 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="animate-fade-in-up">
          {/* Badge */}
          <div class="inline-flex items-center gap-2 bg-brand-primary-100 text-brand-primary-700 px-4 py-2 rounded-full mb-6">
            <span class="w-2 h-2 bg-brand-primary-500 rounded-full animate-pulse"></span>
            <span class="font-sans text-sm font-semibold">Trusted by 50,000+ people finding care</span>
          </div>

          {/* Main heading */}
          <h1 class="font-heading text-5xl md:text-6xl lg:text-7xl font-black text-neutral-900 mb-6 leading-[1.1] tracking-tight">
            Find the right
            <span class="block text-brand-primary-600">therapy platform</span>
            for your needs
          </h1>

          {/* Subheading */}
          <p class="font-serif italic text-xl md:text-2xl text-neutral-600 mb-8 leading-relaxed">
            Compare costs, features, and therapist credentials across all major online therapy platforms â€” in one place.
          </p>

          {/* CTA Buttons */}
          <div class="flex flex-col sm:flex-row gap-4 mb-10">
            <a href="/tools/assessments/mental-health-assessment" class="btn btn-primary btn-lg inline-flex items-center justify-center font-sans font-semibold shadow-lg hover:shadow-xl transition-all whitespace-nowrap">
              Take 3-Min Assessment
              <ArrowRight class="ml-2 h-5 w-5" />
            </a>
            <a href="/compare" class="btn btn-light btn-lg inline-flex items-center justify-center font-sans font-semibold border-2 border-neutral-300 hover:border-brand-primary-500 whitespace-nowrap">
              Compare Platforms
            </a>
          </div>

          {/* Trust indicators */}
          <div class="flex flex-wrap items-center gap-6 pt-6 border-t border-neutral-200">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-brand-accent-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
              <span class="font-sans text-sm text-neutral-700"><span class="font-bold text-neutral-900">4.8/5</span> from 12,000+ reviews</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-brand-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              <span class="font-sans text-sm text-neutral-700">100% HIPAA compliant</span>
            </div>
          </div>
        </div>

        {/* Right side - Image/Visual */}
        <div class="hidden lg:block animate-slide-in-right">
          <div class="relative">
            {/* Main image card */}
            <div class="bg-white rounded-2xl shadow-xl p-6 transform transition-transform hover:scale-[1.02]">
              <img
                src="/images/blog/index.jpg"
                alt="Person finding mental health support through online therapy platforms"
                class="rounded-xl w-full h-80 object-cover mb-6"
                loading="eager"
                width="800"
                height="320"
              />

              {/* Quick stats overlay */}
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-brand-primary-50 rounded-lg p-4">
                  <div class="font-heading text-3xl font-bold text-brand-primary-600 mb-1">25+</div>
                  <div class="font-sans text-sm text-neutral-600">Platforms Reviewed</div>
                </div>
                <div class="bg-brand-accent-50 rounded-lg p-4">
                  <div class="font-heading text-3xl font-bold text-brand-accent-600 mb-1">100%</div>
                  <div class="font-sans text-sm text-neutral-600">Unbiased Reviews</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Features Section */}
  <section class="bg-white py-20 md:py-24" aria-labelledby="features-heading">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="text-center mb-16">
        <h2 id="features-heading" class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-neutral-900 mb-4">How We Help You Find the Right Solution</h2>
        <p class="font-serif italic text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto">
          We provide comprehensive resources to help you navigate the world of online therapy and mental health services.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {/* Feature 1 */}
        <div class="bg-white border-2 border-neutral-100 rounded-2xl p-8 text-center hover:border-brand-primary-200 hover:shadow-lg transition-all">
          <div class="bg-brand-primary-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6">
            <Search class="h-8 w-8 text-brand-primary-600" />
          </div>
          <h3 class="font-heading text-xl font-bold text-neutral-900 mb-3">Compare Platforms</h3>
          <p class="font-sans text-neutral-600 mb-6 leading-relaxed text-sm">
            Side-by-side comparisons of top online therapy platforms to help you make an informed decision.
          </p>
          <a href="/compare" class="text-brand-primary-600 hover:text-brand-primary-700 font-sans font-semibold inline-flex items-center text-sm">
            Explore Comparisons <ArrowRight class="ml-2 h-4 w-4" />
          </a>
        </div>

        {/* Feature 2 */}
        <div class="bg-white border-2 border-neutral-100 rounded-2xl p-8 text-center hover:border-brand-secondary-200 hover:shadow-lg transition-all">
          <div class="bg-brand-secondary-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6">
            <Users class="h-8 w-8 text-brand-secondary-600" />
          </div>
          <h3 class="font-heading text-xl font-bold text-neutral-900 mb-3">Expert Reviews</h3>
          <p class="font-sans text-neutral-600 mb-6 leading-relaxed text-sm">
            In-depth, unbiased reviews of therapy platforms, features, and specialties.
          </p>
          <a href="/reviews" class="text-brand-primary-600 hover:text-brand-primary-700 font-sans font-semibold inline-flex items-center text-sm">
            Read Reviews <ArrowRight class="ml-2 h-4 w-4" />
          </a>
        </div>

        {/* Feature 3 */}
        <div class="bg-white border-2 border-neutral-100 rounded-2xl p-8 text-center hover:border-brand-accent-200 hover:shadow-lg transition-all">
          <div class="bg-brand-accent-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6">
            <Heart class="h-8 w-8 text-brand-accent-600" />
          </div>
          <h3 class="font-heading text-xl font-bold text-neutral-900 mb-3">Personalized Tools</h3>
          <p class="font-sans text-neutral-600 mb-6 leading-relaxed text-sm">
            Assessments and matchers to help you find the perfect mental health solution for your needs.
          </p>
          <a href="/tools" class="text-brand-primary-600 hover:text-brand-primary-700 font-sans font-semibold inline-flex items-center text-sm">
            Try Our Tools <ArrowRight class="ml-2 h-4 w-4" />
          </a>
        </div>
      </div>
    </div>
  </section>

  {/* Explore Resources Section */}
  <section class="bg-neutral-50 py-20 md:py-28" aria-labelledby="resources-heading">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="text-center mb-16">
        <h2 id="resources-heading" class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-neutral-900 mb-4">
          Explore Our Resources
        </h2>
        <p class="font-serif italic text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto">
          Everything you need to make informed decisions about your mental health care
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {/* Compare */}
        <a href="/compare" class="group bg-white rounded-xl border-2 border-neutral-200 p-6 hover:border-brand-primary-400 hover:shadow-lg transition-all">
          <div class="flex items-start gap-4 mb-4">
            <div class="bg-brand-primary-100 rounded-lg p-3 group-hover:bg-brand-primary-500 transition-colors">
              <GitCompare class="h-6 w-6 text-brand-primary-600 group-hover:text-white transition-colors" />
            </div>
            <div class="flex-1">
              <h3 class="font-heading text-xl font-bold text-neutral-900 mb-2">Compare</h3>
              <p class="font-sans text-sm text-neutral-600 leading-relaxed">
                Side-by-side comparisons of platforms, features, and pricing
              </p>
            </div>
          </div>
          <div class="flex items-center text-brand-primary-600 font-sans font-medium text-sm group-hover:text-brand-primary-700">
            Explore comparisons <ArrowRight class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" />
          </div>
        </a>

        {/* Reviews */}
        <a href="/reviews" class="group bg-white rounded-xl border-2 border-neutral-200 p-6 hover:border-brand-secondary-400 hover:shadow-lg transition-all">
          <div class="flex items-start gap-4 mb-4">
            <div class="bg-brand-secondary-100 rounded-lg p-3 group-hover:bg-brand-secondary-500 transition-colors">
              <Star class="h-6 w-6 text-brand-secondary-600 group-hover:text-white transition-colors" />
            </div>
            <div class="flex-1">
              <h3 class="font-heading text-xl font-bold text-neutral-900 mb-2">Reviews</h3>
              <p class="font-sans text-sm text-neutral-600 leading-relaxed">
                In-depth reviews of therapy platforms and their features
              </p>
            </div>
          </div>
          <div class="flex items-center text-brand-primary-600 font-sans font-medium text-sm group-hover:text-brand-primary-700">
            Read reviews <ArrowRight class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" />
          </div>
        </a>

        {/* Best For You */}
        <a href="/best" class="group bg-white rounded-xl border-2 border-neutral-200 p-6 hover:border-brand-accent-400 hover:shadow-lg transition-all">
          <div class="flex items-start gap-4 mb-4">
            <div class="bg-brand-accent-100 rounded-lg p-3 group-hover:bg-brand-accent-500 transition-colors">
              <Award class="h-6 w-6 text-brand-accent-600 group-hover:text-white transition-colors" />
            </div>
            <div class="flex-1">
              <h3 class="font-heading text-xl font-bold text-neutral-900 mb-2">Best For You</h3>
              <p class="font-sans text-sm text-neutral-600 leading-relaxed">
                Curated recommendations based on your needs and conditions
              </p>
            </div>
          </div>
          <div class="flex items-center text-brand-primary-600 font-sans font-medium text-sm group-hover:text-brand-primary-700">
            Find your match <ArrowRight class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" />
          </div>
        </a>

        {/* Tools */}
        <a href="/tools" class="group bg-white rounded-xl border-2 border-neutral-200 p-6 hover:border-brand-primary-400 hover:shadow-lg transition-all">
          <div class="flex items-start gap-4 mb-4">
            <div class="bg-brand-primary-100 rounded-lg p-3 group-hover:bg-brand-primary-500 transition-colors">
              <Wrench class="h-6 w-6 text-brand-primary-600 group-hover:text-white transition-colors" />
            </div>
            <div class="flex-1">
              <h3 class="font-heading text-xl font-bold text-neutral-900 mb-2">Tools</h3>
              <p class="font-sans text-sm text-neutral-600 leading-relaxed">
                Interactive assessments and matchers to guide your decisions
              </p>
            </div>
          </div>
          <div class="flex items-center text-brand-primary-600 font-sans font-medium text-sm group-hover:text-brand-primary-700">
            Try our tools <ArrowRight class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" />
          </div>
        </a>

        {/* Conditions A-Z */}
        <a href="/conditions-az" class="group bg-white rounded-xl border-2 border-neutral-200 p-6 hover:border-brand-secondary-400 hover:shadow-lg transition-all">
          <div class="flex items-start gap-4 mb-4">
            <div class="bg-brand-secondary-100 rounded-lg p-3 group-hover:bg-brand-secondary-500 transition-colors">
              <BookOpen class="h-6 w-6 text-brand-secondary-600 group-hover:text-white transition-colors" />
            </div>
            <div class="flex-1">
              <h3 class="font-heading text-xl font-bold text-neutral-900 mb-2">Conditions A-Z</h3>
              <p class="font-sans text-sm text-neutral-600 leading-relaxed">
                Comprehensive guides to mental health conditions and treatments
              </p>
            </div>
          </div>
          <div class="flex items-center text-brand-primary-600 font-sans font-medium text-sm group-hover:text-brand-primary-700">
            Browse conditions <ArrowRight class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" />
          </div>
        </a>

        {/* Learn */}
        <a href="/learn" class="group bg-white rounded-xl border-2 border-neutral-200 p-6 hover:border-brand-accent-400 hover:shadow-lg transition-all">
          <div class="flex items-start gap-4 mb-4">
            <div class="bg-brand-accent-100 rounded-lg p-3 group-hover:bg-brand-accent-500 transition-colors">
              <GraduationCap class="h-6 w-6 text-brand-accent-600 group-hover:text-white transition-colors" />
            </div>
            <div class="flex-1">
              <h3 class="font-heading text-xl font-bold text-neutral-900 mb-2">Learn</h3>
              <p class="font-sans text-sm text-neutral-600 leading-relaxed">
                Educational resources and mental health fundamentals
              </p>
            </div>
          </div>
          <div class="flex items-center text-brand-primary-600 font-sans font-medium text-sm group-hover:text-brand-primary-700">
            Start learning <ArrowRight class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" />
          </div>
        </a>
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="bg-gradient-to-b from-white to-brand-primary-50 py-20 md:py-24" aria-labelledby="cta-heading">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-brand-primary-100 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-6">
          <Brain class="h-10 w-10 text-brand-primary-600" />
        </div>
        <h2 id="cta-heading" class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-neutral-900 mb-4">Ready to Start Your Mental Health Journey?</h2>
        <p class="font-serif italic text-lg md:text-xl text-neutral-600 mb-10 max-w-2xl mx-auto">
          Take our free assessment to get personalized recommendations for online therapy platforms that match your needs.
        </p>
        <a href="/tools/assessments/mental-health-assessment" class="btn btn-primary btn-lg inline-flex items-center font-sans font-semibold shadow-lg hover:shadow-xl transition-all">
          Take Free Assessment <ArrowRight class="ml-2 h-5 w-5" />
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
