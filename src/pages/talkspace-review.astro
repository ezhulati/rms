---
import BaseLayout from '../layouts/BaseLayout.astro';
import RatingBreakdown from '../components/RatingBreakdown.astro';
import { Star, CheckCircle, XCircle, ArrowRight, ExternalLink, MessageSquare, Video, Phone, Calendar, DollarSign, Shield, Users, Brain } from 'lucide-react';

const ratingCategories = [
  {
    category: "Therapist Quality",
    rating: 4.6,
    description: "Talkspace maintains high standards with licensed therapists holding Master's degrees or higher, 3,000+ hours of clinical experience, and active state licensure. The rigorous vetting process includes background checks, license verification, and specialized training in digital therapy delivery."
  },
  {
    category: "User Experience",
    rating: 4.5,
    description: "The platform offers a polished, professional interface with intuitive navigation and robust features. The mobile app is particularly well-designed for managing therapy on the go. Stable performance with minimal technical issues and clear expectations around communication."
  },
  {
    category: "Value for Money",
    rating: 4.2,
    description: "While pricing is higher than some competitors ($65-$99/week), insurance coverage and integrated psychiatric services provide excellent value. Multiple subscription tiers accommodate different needs and budgets. The structured approach with guaranteed response times adds value."
  },
  {
    category: "Communication Options",
    rating: 4.6,
    description: "Comprehensive communication with unlimited text/video/audio messaging, guaranteed 1-2 daily responses (5 days/week), and live video sessions (plan dependent). Well-organized messaging system with multimedia support and high-quality video sessions."
  },
  {
    category: "Insurance & Services",
    rating: 4.7,
    description: "Works with major insurance providers (Cigna, Aetna, United Healthcare, BCBS) and offers integrated psychiatric services. The ability to combine therapy with medication management in one platform is a significant advantage for comprehensive care."
  }
];

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};

---

<BaseLayout>
  {/* Main Content */}
  <section class="bg-neutral-50 py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
        {/* Hero Section */}
        <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
          <div class="md:flex">
            <div class="md:w-1/3">
              <img 
                src="/images/concepts/talkspacereview.jpg" 
                alt="Talkspace Review" 
                class="w-full min-w-0 h-full object-cover"
              />
            </div>
            <div class="p-8 md:w-2/3">
              <div class="flex flex-wrap items-center justify-between mb-4">
                <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-2 md:mb-0">Talkspace Review</h1>
                <div class="flex items-center">
                  <div class="mr-2">
                    {renderStars(4.5)}
                  </div>
                  <span class="text-lg font-bold text-gray-700">4.5/5</span>
                </div>
              </div>

              <p class="font-serif italic text-lg md:text-xl text-neutral-600 mb-6">
                Talkspace is a leading online therapy platform offering a combination of therapy and psychiatric services, with insurance coverage options and medication management. Our comprehensive review examines its features, effectiveness, and value.
              </p>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                  <h3 class="font-bold text-gray-800 mb-3">Pros</h3>
                  <ul class="space-y-2">
                    <li class="flex items-start">
                      <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                      <span>Insurance coverage available</span>
                    </li>
                    <li class="flex items-start">
                      <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                      <span>Integrated medication management</span>
                    </li>
                    <li class="flex items-start">
                      <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                      <span>Multiple subscription tiers</span>
                    </li>
                    <li class="flex items-start">
                      <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                      <span>Guaranteed response times</span>
                    </li>
                    <li class="flex items-start">
                      <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                      <span>Specialized therapy programs</span>
                    </li>
                  </ul>
                </div>
                
                <div>
                  <h3 class="font-bold text-gray-800 mb-3">Cons</h3>
                  <ul class="space-y-2">
                    <li class="flex items-start">
                      <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                      <span>Higher pricing than some competitors</span>
                    </li>
                    <li class="flex items-start">
                      <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                      <span>No financial aid program</span>
                    </li>
                    <li class="flex items-start">
                      <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                      <span>Limited live sessions on basic plan</span>
                    </li>
                    <li class="flex items-start">
                      <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                      <span>Less flexibility in scheduling</span>
                    </li>
                    <li class="flex items-start">
                      <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                      <span>Smaller therapist network than some competitors</span>
                    </li>
                  </ul>
                </div>
              </div>
              
              <div class="flex flex-wrap gap-4">
                <a href="https://www.talkspace.com" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Visit Talkspace</a>
                <a href="/compare/platforms/betterhelp-vs-talkspace" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Compare with BetterHelp</a>
              </div>
            </div>
          </div>
        </div>

        {/* Rating Breakdown */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Rating Breakdown</h2>
          <div class="space-y-6">
            {ratingCategories.map((item) => (
              <RatingBreakdown
                category={item.category}
                rating={item.rating}
                description={item.description}
              />
            ))}
          </div>
        </div>

        {/* Quick Facts */}
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Talkspace at a Glance</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="flex">
              <div class="mr-4">
                <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center">
                  <DollarSign class="h-6 w-6 text-indigo-600" />
                </div>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 mb-1">Pricing</h3>
                <p class="text-gray-600">$65-$99 per week (billed monthly)</p>
                <p class="text-sm text-gray-500 mt-1">Insurance coverage available</p>
              </div>
            </div>
            
            <div class="flex">
              <div class="mr-4">
                <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center">
                  <MessageSquare class="h-6 w-6 text-indigo-600" />
                </div>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 mb-1">Communication Options</h3>
                <div class="flex space-x-2 mb-1">
                  <MessageSquare class="h-4 w-4 text-indigo-600" title="Messaging" />
                  <Video class="h-4 w-4 text-indigo-600" title="Video" />
                  <Phone class="h-4 w-4 text-indigo-600" title="Phone" />
                </div>
                <p class="text-sm text-gray-500">Unlimited messaging + live sessions (plan dependent)</p>
              </div>
            </div>
            
            <div class="flex">
              <div class="mr-4">
                <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center">
                  <Calendar class="h-6 w-6 text-indigo-600" />
                </div>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 mb-1">Subscription</h3>
                <p class="text-gray-600">Monthly billing, cancel anytime</p>
                <p class="text-sm text-gray-500 mt-1">Multiple plan options</p>
              </div>
            </div>
            
            <div class="flex">
              <div class="mr-4">
                <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center">
                  <Shield class="h-6 w-6 text-indigo-600" />
                </div>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 mb-1">Insurance</h3>
                <p class="text-gray-600">Many major providers accepted</p>
                <p class="text-sm text-gray-500 mt-1">Including Cigna, Aetna, and more</p>
              </div>
            </div>
            
            <div class="flex">
              <div class="mr-4">
                <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center">
                  <Users class="h-6 w-6 text-indigo-600" />
                </div>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 mb-1">Therapist Network</h3>
                <p class="text-gray-600">5,000+ licensed therapists</p>
                <p class="text-sm text-gray-500 mt-1">Additional psychiatric providers</p>
              </div>
            </div>
            
            <div class="flex">
              <div class="mr-4">
                <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center">
                  <Brain class="h-6 w-6 text-indigo-600" />
                </div>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 mb-1">Best For</h3>
                <p class="text-gray-600">Insurance coverage, medication management</p>
                <p class="text-sm text-gray-500 mt-1">Comprehensive mental health care</p>
              </div>
            </div>
          </div>
        </div>

        {/* Full Review */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Full Talkspace Review</h2>
          
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4">What is Talkspace?</h3>
            <p class="text-gray-600 mb-4">
              Talkspace is a leading online therapy platform that combines traditional therapy services with psychiatric care and medication management. Founded in 2012, the platform has grown to serve millions of users with its comprehensive mental health services.
            </p>
            <p class="text-gray-600">
              What sets Talkspace apart is its integration with insurance providers and the ability to combine therapy with psychiatric services. The platform offers various communication methods and subscription tiers to accommodate different needs and preferences.
            </p>
          </div>
          
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4">How Talkspace Works</h3>
            
            <div class="bg-gray-50 rounded-lg p-6 mb-6">
              <h4 class="font-bold text-gray-800 mb-3">Getting Started</h4>
              <ol class="list-decimal pl-5 space-y-2 text-gray-600">
                <li>Complete an initial assessment about your needs and preferences</li>
                <li>Review insurance coverage options if applicable</li>
                <li>Choose from recommended subscription plans</li>
                <li>Select from matched therapist options</li>
                <li>Begin therapy through your preferred communication method</li>
              </ol>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <h4 class="font-bold text-gray-800 mb-3">Messaging Therapy</h4>
                <p class="text-gray-600 mb-3">
                  Talkspace's messaging platform allows you to send text, audio, and video messages to your therapist. Therapists respond during their set hours, typically 5 days per week, with guaranteed response timeframes.
                </p>
                <p class="text-gray-600">
                  The platform includes features for organizing messages by topic and tracking progress over time. You can also share photos, documents, and other media relevant to your therapy.
                </p>
              </div>
              
              <div>
                <h4 class="font-bold text-gray-800 mb-3">Live Sessions</h4>
                <p class="text-gray-600 mb-3">
                  Live video sessions are available on most plans, with frequency depending on your subscription level:
                </p>
                <ul class="list-disc pl-5 space-y-1 text-gray-600">
                  <li>Messaging-only plan: No live sessions</li>
                  <li>Video plan: 4 live sessions per month</li>
                  <li>Video+ plan: 4 live sessions plus unlimited messaging</li>
                </ul>
                <p class="text-gray-600 mt-3">
                  Sessions are 45 minutes long and can be scheduled through the platform's booking system.
                </p>
              </div>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-6">
              <h4 class="font-bold text-gray-800 mb-3">Psychiatric Services</h4>
              <p class="text-gray-600 mb-3">
                Talkspace's psychiatric services are available as an add-on or standalone service. This includes:
              </p>
              <ul class="list-disc pl-5 space-y-1 text-gray-600">
                <li>Initial psychiatric evaluation</li>
                <li>Medication management</li>
                <li>Regular follow-up appointments</li>
                <li>Integration with therapy services if desired</li>
              </ul>
            </div>
          </div>
          
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Pricing & Value</h3>
            
            <div class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
              <div class="bg-indigo-50 p-4 border-b border-gray-200">
                <h4 class="font-bold text-gray-800">Subscription Plans</h4>
              </div>
              <div class="p-4">
                <div class="space-y-4">
                  <div>
                    <h5 class="font-bold text-gray-800">Messaging Only</h5>
                    <p class="text-gray-600 mb-2">$65/week (billed monthly at $260)</p>
                    <ul class="list-disc pl-5 text-sm text-gray-600">
                      <li>Unlimited text, video, and audio messaging</li>
                      <li>Guaranteed daily responses 5 days/week</li>
                      <li>No live sessions included</li>
                    </ul>
                  </div>
                  
                  <div>
                    <h5 class="font-bold text-gray-800">Video Plan</h5>
                    <p class="text-gray-600 mb-2">$79/week (billed monthly at $316)</p>
                    <ul class="list-disc pl-5 text-sm text-gray-600">
                      <li>4 live video sessions per month</li>
                      <li>Basic messaging features</li>
                      <li>Choice of video or audio sessions</li>
                    </ul>
                  </div>
                  
                  <div>
                    <h5 class="font-bold text-gray-800">Video+ Plan</h5>
                    <p class="text-gray-600 mb-2">$99/week (billed monthly at $396)</p>
                    <ul class="list-disc pl-5 text-sm text-gray-600">
                      <li>4 live video sessions per month</li>
                      <li>Unlimited messaging</li>
                      <li>Priority support</li>
                    </ul>
                  </div>
                  
                  <div>
                    <h5 class="font-bold text-gray-800">Psychiatry</h5>
                    <p class="text-gray-600 mb-2">Initial visit: $249, Follow-ups: $125</p>
                    <ul class="list-disc pl-5 text-sm text-gray-600">
                      <li>Medication management</li>
                      <li>Can be combined with therapy</li>
                      <li>Insurance may cover costs</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
                <div class="bg-indigo-50 p-4 border-b border-gray-200">
                  <h4 class="font-bold text-gray-800">Insurance Coverage</h4>
                </div>
                <div class="p-4">
                  <p class="text-gray-600">
                    Talkspace works with many major insurance providers, including:
                  </p>
                  <ul class="list-disc pl-5 mt-2 text-gray-600">
                    <li>Cigna</li>
                    <li>Aetna</li>
                    <li>United Healthcare</li>
                    <li>Blue Cross Blue Shield (select plans)</li>
                    <li>Many employer EAP programs</li>
                  </ul>
                </div>
              </div>
              
              <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
                <div class="bg-indigo-50 p-4 border-b border-gray-200">
                  <h4 class="font-bold text-gray-800">Additional Costs</h4>
                </div>
                <div class="p-4">
                  <ul class="space-y-2 text-gray-600">
                    <li>
                      <strong>Cancellation fees:</strong> None with 24-hour notice
                    </li>
                    <li>
                      <strong>Psychiatry services:</strong> Billed separately
                    </li>
                    <li>
                      <strong>Insurance copays:</strong> Vary by provider
                    </li>
                    <li>
                      <strong>Platform fees:</strong> Included in subscription
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-6">
              <h4 class="font-bold text-gray-800 mb-3">Value Assessment</h4>
              <p class="text-gray-600 mb-3">
                Talkspace's pricing is higher than some competitors, but the platform offers significant value through:
              </p>
              <ul class="space-y-2">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Insurance coverage that can significantly reduce out-of-pocket costs</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Integrated psychiatric services for comprehensive care</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Structured treatment approaches with progress tracking</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Multiple subscription tiers to match different needs and budgets</span>
                </li>
              </ul>
            </div>
          </div>
          
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Therapist Qualifications</h3>
            
            <p class="text-gray-600 mb-4">
              All Talkspace therapists are licensed mental health professionals with:
            </p>
            
            <ul class="list-disc pl-5 space-y-1 text-gray-600 mb-4">
              <li>Master's degree or higher in their field</li>
              <li>3,000+ hours of clinical experience</li>
              <li>Active state licensure</li>
              <li>Additional training in online therapy delivery</li>
            </ul>
            
            <p class="text-gray-600 mb-4">
              Talkspace maintains a rigorous vetting process for their therapists, including background checks, license verification, and additional training in digital therapy techniques.
            </p>
            
            <div class="bg-gray-50 rounded-lg p-6">
              <h4 class="font-bold text-gray-800 mb-3">Therapist Matching</h4>
              <p class="text-gray-600 mb-3">
                Talkspace uses a unique matching process where you're presented with multiple therapist options based on your needs. Key features include:
              </p>
              <ul class="space-y-2">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Detailed therapist profiles with specialties and approaches</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Option to message potential therapists before choosing</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Easy therapist switching if needed</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Specialized matching for psychiatric services</span>
                </li>
              </ul>
            </div>
          </div>
          
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4">User Experience</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <h4 class="font-bold text-gray-800 mb-3">Platform & Interface</h4>
                <p class="text-gray-600">
                  Talkspace offers a polished, professional platform with intuitive navigation and robust features. The mobile app (iOS and Android) is particularly well-designed, making it easy to manage therapy on the go. During our testing, we found the platform to be stable and reliable with minimal technical issues.
                </p>
              </div>
              
              <div>
                <h4 class="font-bold text-gray-800 mb-3">Privacy & Security</h4>
                <p class="text-gray-600">
                  Talkspace takes security seriously with HIPAA compliance, end-to-end encryption, and strict data protection policies. The platform includes features like passcode protection for the mobile app and secure video sessions.
                </p>
              </div>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-6">
              <h4 class="font-bold text-gray-800 mb-3">Communication Quality</h4>
              <p class="text-gray-600 mb-3">
                Talkspace stands out for its structured approach to communication, with clear expectations and guaranteed response times. Our testing revealed:
              </p>
              <ul class="space-y-2">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Therapists respond 1-2 times per day, 5 days per week</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>High-quality video sessions with good connection stability</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Well-organized messaging system with multimedia support</span>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>Live sessions limited on basic plans</span>
                </li>
              </ul>
            </div>
          </div>
          
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Who Talkspace Is Best For</h3>
            
            <div class="bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
              <div class="bg-green-50 p-4 border-b border-gray-200">
                <h4 class="font-bold text-gray-800">Ideal For</h4>
              </div>
              <div class="p-4">
                <ul class="list-disc pl-5 space-y-2 text-gray-600">
                  <li><strong>Insurance holders</strong> looking to use their mental health benefits for online therapy</li>
                  <li><strong>People needing both therapy and medication management</strong> who want integrated care</li>
                  <li><strong>Those seeking structured treatment programs</strong> with clear goals and progress tracking</li>
                  <li><strong>Individuals comfortable with digital communication</strong> who value flexibility</li>
                  <li><strong>People with mild to moderate mental health concerns</strong> seeking professional support</li>
                  <li><strong>Those who prefer a more formal therapeutic approach</strong> with clear boundaries and expectations</li>
                </ul>
              </div>
            </div>
            
            <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
              <div class="bg-red-50 p-4 border-b border-gray-200">
                <h4 class="font-bold text-gray-800">Not Recommended For</h4>
              </div>
              <div class="p-4">
                <ul class="list-disc pl-5 space-y-2 text-gray-600">
                  <li><strong>Individuals in crisis</strong> or with severe mental health conditions requiring intensive treatment</li>
                  <li><strong>Those seeking the lowest-cost option</strong> without insurance coverage</li>
                  <li><strong>People who strongly prefer unlimited live sessions</strong> (limited by plan)</li>
                  <li><strong>Individuals needing couples or family therapy</strong> (offered through separate platform)</li>
                  <li><strong>Those requiring in-person care</strong> or hands-on therapeutic techniques</li>
                  <li><strong>People in areas where Talkspace's psychiatric services aren't available</strong></li>
                </ul>
              </div>
            </div>
          </div>
          
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Alternatives to Talkspace</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
                <div class="bg-indigo-50 p-4 border- b border-gray-200">
                  <h4 class="font-bold text-gray-800">BetterHelp</h4>
                </div>
                <div class="p-4">
                  <p class="text-gray-600 mb-3">
                    <strong>Best for:</strong> Affordability, larger therapist network
