---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { Brain, AlertCircle, CheckCircle, Info } from 'lucide-react';
import Assessment from '../../../components/Assessment';

const questions = [
  {
    id: 'q1',
    text: 'How often do you feel overwhelmed by your responsibilities?',
    options: [
      { text: 'Never', value: 0 },
      { text: 'Rarely', value: 1 },
      { text: 'Sometimes', value: 2 },
      { text: 'Often', value: 3 },
      { text: 'Very Often', value: 4 }
    ]
  },
  {
    id: 'q2',
    text: 'How often do you experience physical symptoms of stress (tension, headaches, muscle aches)?',
    options: [
      { text: 'Never', value: 0 },
      { text: 'Rarely', value: 1 },
      { text: 'Sometimes', value: 2 },
      { text: 'Often', value: 3 },
      { text: 'Very Often', value: 4 }
    ]
  },
  {
    id: 'q3',
    text: 'Do you have trouble sleeping due to worry or stress?',
    options: [
      { text: 'Never', value: 0 },
      { text: 'Rarely', value: 1 },
      { text: 'Sometimes', value: 2 },
      { text: 'Often', value: 3 },
      { text: 'Very Often', value: 4 }
    ]
  },
  {
    id: 'q4',
    text: 'How often do you feel irritable or short-tempered?',
    options: [
      { text: 'Never', value: 0 },
      { text: 'Rarely', value: 1 },
      { text: 'Sometimes', value: 2 },
      { text: 'Often', value: 3 },
      { text: 'Very Often', value: 4 }
    ]
  },
  {
    id: 'q5',
    text: 'How often do you have difficulty concentrating or making decisions?',
    options: [
      { text: 'Never', value: 0 },
      { text: 'Rarely', value: 1 },
      { text: 'Sometimes', value: 2 },
      { text: 'Often', value: 3 },
      { text: 'Very Often', value: 4 }
    ]
  },
  {
    id: 'q6',
    text: 'How often do you feel anxious or worried about multiple things?',
    options: [
      { text: 'Never', value: 0 },
      { text: 'Rarely', value: 1 },
      { text: 'Sometimes', value: 2 },
      { text: 'Often', value: 3 },
      { text: 'Very Often', value: 4 }
    ]
  },
  {
    id: 'q7',
    text: 'How often do you feel like you cannot manage or control the important things in your life?',
    options: [
      { text: 'Never', value: 0 },
      { text: 'Rarely', value: 1 },
      { text: 'Sometimes', value: 2 },
      { text: 'Often', value: 3 },
      { text: 'Very Often', value: 4 }
    ]
  },
  {
    id: 'q8',
    text: 'How often do you feel fatigued or exhausted without a clear physical cause?',
    options: [
      { text: 'Never', value: 0 },
      { text: 'Rarely', value: 1 },
      { text: 'Sometimes', value: 2 },
      { text: 'Often', value: 3 },
      { text: 'Very Often', value: 4 }
    ]
  },
  {
    id: 'q9',
    text: 'How often do you engage in healthy coping strategies (exercise, meditation, social connection)?',
    options: [
      { text: 'Very Often', value: 0 },
      { text: 'Often', value: 1 },
      { text: 'Sometimes', value: 2 },
      { text: 'Rarely', value: 3 },
      { text: 'Never', value: 4 }
    ]
  },
  {
    id: 'q10',
    text: 'How often does stress interfere with your work, relationships, or daily activities?',
    options: [
      { text: 'Never', value: 0 },
      { text: 'Rarely', value: 1 },
      { text: 'Sometimes', value: 2 },
      { text: 'Often', value: 3 },
      { text: 'Very Often', value: 4 }
    ]
  }
];

const scoringGuide = [
  {
    min: 0,
    max: 10,
    severity: 'Low Stress',
    description: 'Your stress levels appear to be well-managed. You seem to have effective coping strategies in place and are handling daily stressors appropriately.',
    color: 'green'
  },
  {
    min: 11,
    max: 20,
    severity: 'Moderate Stress',
    description: 'You are experiencing moderate stress levels. While manageable, you might benefit from implementing additional stress management techniques or seeking support to prevent stress from escalating.',
    color: 'yellow'
  },
  {
    min: 21,
    max: 30,
    severity: 'High Stress',
    description: 'Your stress levels are elevated and may be impacting your daily functioning. Consider speaking with a mental health professional about stress management strategies tailored to your specific situation.',
    color: 'orange'
  },
  {
    min: 31,
    max: 40,
    severity: 'Severe Stress',
    description: 'You are experiencing severe stress that is likely significantly affecting your quality of life. We strongly recommend consulting with a mental health professional for personalized support and intervention.',
    color: 'red'
  }
];

const recommendations = {
  low: 'Continue your healthy stress management practices. Regular self-care, maintaining social connections, and staying physically active can help keep stress levels manageable.',
  moderate: 'Consider incorporating more stress-reduction activities into your routine, such as mindfulness meditation, regular exercise, or talking to a counselor. Early intervention can prevent stress from becoming overwhelming.',
  high: 'We recommend seeking support from a mental health professional who can help you develop personalized coping strategies. Therapy, particularly cognitive-behavioral therapy (CBT), has been shown to be highly effective for stress management.',
  severe: 'Please consult with a mental health professional as soon as possible. Chronic severe stress can impact both mental and physical health. A therapist can work with you to develop an immediate action plan for stress reduction and long-term coping strategies.'
};
---

<BaseLayout>
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Stress Level Assessment</h1>
      <p class="font-serif italic text-lg md:text-xl text-neutral-600">
        Evaluate your stress levels and understand how stress is impacting your daily life
      </p>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="bg-white rounded-lg shadow-md overflow-hidden">

        <div class="p-6">
          <div class="space-y-4 mb-6">
            <div class="flex items-start">
              <Info class="h-5 w-5 text-indigo-600 mr-2 mt-0.5 flex-shrink-0" />
              <div>
                <h2 class="font-bold text-gray-800">About This Assessment</h2>
                <p class="text-gray-600">
                  This stress assessment helps evaluate your current stress levels by examining daily stressors, physical symptoms, and their impact on your work-life balance. Based on validated stress measurement scales, it provides insights into how stress may be affecting your overall wellbeing.
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <Brain class="h-5 w-5 text-indigo-600 mr-2 mt-0.5 flex-shrink-0" />
              <div>
                <h2 class="font-bold text-gray-800">What It Measures</h2>
                <p class="text-gray-600">
                  The assessment evaluates key indicators of stress:
                </p>
                <ul class="mt-2 space-y-1">
                  <li class="flex items-center">
                    <CheckCircle class="h-4 w-4 text-green-500 mr-2 flex-shrink-0" />
                    <span>Daily stressors and their frequency</span>
                  </li>
                  <li class="flex items-center">
                    <CheckCircle class="h-4 w-4 text-green-500 mr-2 flex-shrink-0" />
                    <span>Physical symptoms like tension, headaches, and fatigue</span>
                  </li>
                  <li class="flex items-center">
                    <CheckCircle class="h-4 w-4 text-green-500 mr-2 flex-shrink-0" />
                    <span>Work-life balance and time management challenges</span>
                  </li>
                  <li class="flex items-center">
                    <CheckCircle class="h-4 w-4 text-green-500 mr-2 flex-shrink-0" />
                    <span>Emotional responses and coping mechanisms</span>
                  </li>
                  <li class="flex items-center">
                    <CheckCircle class="h-4 w-4 text-green-500 mr-2 flex-shrink-0" />
                    <span>Impact on sleep quality and concentration</span>
                  </li>
                </ul>
              </div>
            </div>

            <div class="flex items-start">
              <AlertCircle class="h-5 w-5 text-yellow-500 mr-2 mt-0.5 flex-shrink-0" />
              <div>
                <h2 class="font-bold text-gray-800">Important Note</h2>
                <p class="text-gray-600">
                  This assessment is not a diagnostic tool. It's designed to help you understand your stress levels and determine if professional support might be beneficial for stress management.
                </p>
              </div>
            </div>
          </div>

          <Assessment
            client:load
            title="Stress Level Assessment"
            description="Answer the following questions honestly based on how you have been feeling over the past two weeks."
            questions={questions}
            scoringGuide={scoringGuide}
            recommendations={recommendations}
          />

          <div class="space-y-4">
            <div class="flex items-start bg-yellow-50 rounded-lg p-4">
              <AlertCircle class="h-5 w-5 text-yellow-500 mr-2 mt-0.5 flex-shrink-0" />
              <p class="text-sm text-yellow-700">
                If you're experiencing chronic stress, burnout, or stress-related health issues, we recommend consulting with a mental health professional for personalized stress management strategies.
              </p>
            </div>

            <div class="flex flex-wrap gap-4">
              <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">
                Find a Stress Management Specialist
              </a>
              <a href="/best/conditions/best-for-anxiety" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">
                View Best Therapy Options
              </a>
              <a href="/blog/guides/therapy-modalities-explained" class="inline-flex items-center border-2 border-indigo-600 text-indigo-600 px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-50 transition">
                Learn About Stress Management
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>