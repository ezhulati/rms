---
import BaseLayout from '../../../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Mental Health Assessments | RealMindSolutions"
  description="Free mental health screening tools"
>
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Mental Health Assessments</h1>
      <p class="font-serif italic text-lg md:text-xl text-neutral-600">Free screening tools and assessments</p>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <a href="/tools/assessments/mental-health-assessment" class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <h3 class="text-xl font-semibold text-gray-900 mb-2">General Assessment</h3>
        <p class="text-gray-600">Overall mental health screening</p>
      </a>
      <a href="/tools/assessments/anxiety-screening" class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Anxiety Screening</h3>
        <p class="text-gray-600">Anxiety disorder assessment</p>
      </a>
      <a href="/tools/assessments/depression-screening" class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Depression Screening</h3>
        <p class="text-gray-600">Depression assessment tool</p>
      </a>
    </div>
    </div>
  </section>
</BaseLayout>
