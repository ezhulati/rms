---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Brain, ArrowRight, ArrowLeft, CheckCircle, Info, AlertCircle } from 'lucide-react';
---

<BaseLayout>
<div class="min-h-screen bg-gray-50 py-12">
        <div class="container mx-auto px-4 max-w-4xl">
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-indigo-600 p-6 text-white">
              <h1 class="text-2xl font-bold mb-2">Your OCD Assessment Results</h1>
              <p class="text-indigo-100">
                Based on your responses, here's an analysis of your symptoms
              </p>
            </div>
            
            <div class="p-6">
              {/* Severity Score */}
              <div class="mb-8">
                <div class="flex items-center justify-between mb-4">
                  <h2 class="text-xl font-bold text-gray-800">Overall Severity</h2>
                  <span class="text-2xl font-bold text-indigo-600">{scores.severity}</span>
                </div>
                <div class="bg-gray-200 rounded-full h-4 mb-2">
                  <div 
                    class="bg-indigo-600 h-4 rounded-full transition-all duration-500"
                    style={{ width: `${(scores.totalScore / 32) * 100}%` }}
                  ></div>
                </div>
                <p class="text-sm text-gray-600">
                  Total Score: {scores.totalScore}/32
                </p>
              </div>

              {/* Detailed Scores */}
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="bg-gray-50 rounded-lg p-4">
                  <h3 class="font-bold text-gray-800 mb-2">Obsessions</h3>
                  <div class="text-2xl font-bold text-indigo-600 mb-1">
                    {scores.obsessionScore}/12
                  </div>
                  <p class="text-sm text-gray-600">
                    Frequency and intensity of intrusive thoughts
                  </p>
                </div>
                
                <div class="bg-gray-50 rounded-lg p-4">
                  <h3 class="font-bold text-gray-800 mb-2">Compulsions</h3>
                  <div class="text-2xl font-bold text-indigo-600 mb-1">
                    {scores.compulsionScore}/12
                  </div>
                  <p class="text-sm text-gray-600">
                    Frequency and impact of repetitive behaviors
                  </p>
                </div>
                
                <div class="bg-gray-50 rounded-lg p-4">
                  <h3 class="font-bold text-gray-800 mb-2">Life Impact</h3>
                  <div class="text-2xl font-bold text-indigo-600 mb-1">
                    {scores.impactScore}/8
                  </div>
                  <p class="text-sm text-gray-600">
                    Effect on daily life and relationships
                  </p>
                </div>
              </div>

              {/* Recommendations */}
              <div class="bg-indigo-50 rounded-lg p-6 mb-8">
                <h3 class="text-xl font-bold text-gray-800 mb-4">Recommendations</h3>
                <p class="text-gray-700 mb-4">{recommendations.text}</p>
                <ul class="space-y-2">
                  {recommendations.recommendations.map((rec, index) => (
                    <li key={index} class="flex items-start">
                      <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                      <span>{rec}</span>
                    </li>
                  ))}
                </ul>
              </div>

              {/* Next Steps */}
              <div class="space-y-4">
                <div class="flex items-start bg-yellow-50 rounded-lg p-4">
                  <AlertCircle class="h-5 w-5 text-yellow-500 mr-2 mt-0.5" />
                  <p class="text-sm text-yellow-700">
                    This assessment is not a diagnostic tool. For a proper diagnosis and treatment plan, please consult with a mental health professional.
                  </p>
                </div>
                
                <div class="flex flex-wrap gap-4">
                  <Button 
                    as={Link}
                    to="/tools/matchers/therapy-platform-matcher"
                    variant="primary"
                    icon={ArrowRight}
                  >
                    Find an OCD Specialist
                  </Button>
                  <Button 
                    onClick={restartAssessment}
                    variant="outline"
                    icon={ArrowLeft}
                  >
                    Take Assessment Again
                  </Button>
                  <Button 
                    as={Link}
                    to="/best/conditions/best-for-ocd"
                    variant="outline"
                    icon={ArrowRight}
                  >
                    View Best OCD Treatment Options
                  </Button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    );
  }

  return (
    <div class="min-h-screen bg-gray-50 py-12">
      <div class="container mx-auto px-4 max-w-4xl">
        {currentQuestion === 0 && (
          <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
            <div class="bg-indigo-600 p-6 text-white">
              <h1 class="text-2xl font-bold mb-2">OCD Assessment</h1>
              <p class="text-indigo-100">
                Evaluate your OCD symptoms with this clinically-informed assessment
              </p>
            </div>
            <div class="p-6">
              <div class="space-y-4 mb-6">
                <div class="flex items-start">
                  <Info class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <h2 class="font-bold text-gray-800">About This Assessment</h2>
                    <p class="text-gray-600">
                      This assessment is based on standard OCD screening tools and helps evaluate the presence and severity of OCD symptoms.
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <Brain class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <h2 class="font-bold text-gray-800">What It Measures</h2>
                    <p class="text-gray-600">
                      The assessment evaluates three key areas:
                    </p>
                    <ul class="mt-2 space-y-1">
                      <li class="flex items-center">
                        <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                        <span>Obsessive thoughts and their impact</span>
                      </li>
                      <li class="flex items-center">
                        <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                        <span>Compulsive behaviors and their frequency</span>
                      </li>
                      <li class="flex items-center">
                        <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                        <span>Overall life impact and functioning</span>
                      </li>
                    </ul>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <AlertCircle class="h-5 w-5 text-yellow-500 mr-2 mt-0.5" />
                  <div>
                    <h2 class="font-bold text-gray-800">Important Note</h2>
                    <p class="text-gray-600">
                      This assessment is not a diagnostic tool. It's designed to help you understand your symptoms and determine if professional help might be beneficial.
                    </p>
                  </div>
                </div>
              </div>
              
              <Button 
                onClick={() => setCurrentQuestion(1)} 
                variant="primary"
                size="lg"
                class="w-full justify-center"
              >
                Begin Assessment
              </Button>
            </div>
          </div>
        )}

        {currentQuestion > 0 && (
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-indigo-600 p-6">
              <div class="flex justify-between items-center text-white mb-4">
                <h2 class="text-lg font-semibold">Question {currentQuestion} of {questions.length}</h2>
                <span class="text-sm text-indigo-200">
                  {Math.round((currentQuestion / questions.length) * 100)}% Complete
                </span>
              </div>
              <div class="w-full bg-indigo-300 rounded-full h-2">
                <div 
                  class="bg-white rounded-full h-2 transition-all duration-300"
                  style={{ width: `${(currentQuestion / questions.length) * 100}%` }}
                ></div>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-6">
                {questions[currentQuestion - 1].text}
              </h3>
              
              <div class="space-y-3">
                {questions[currentQuestion - 1].options.map((option, index) => (
                  <button
                    key={index}
                    onClick={() => handleAnswer(option.value)}
                    class="w-full text-left p-4 rounded-lg border border-gray-200 hover:border-indigo-500 hover:bg-indigo-50 transition-all duration-200"
                  >
                    <span class="font-medium text-gray-800">{option.text}</span>
                  </button>
                ))}
              </div>
              
              {currentQuestion > 1 && (
                <button
                  onClick={() => setCurrentQuestion(prev => prev - 1)}
                  class="mt-6 text-indigo-600 hover:text-indigo-800 flex items-center"
                >
                  <ArrowLeft class="h-4 w-4 mr-1" />
                  Previous question
                </button>
              )}
            </div>
          </div>
        )}
      </div>
    </div>
</BaseLayout>
