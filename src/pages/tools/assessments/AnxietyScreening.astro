---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Brain, ArrowRight, ArrowLeft, CheckCircle, Info, AlertCircle, Star } from 'lucide-react';
---

<BaseLayout>
<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="container mx-auto px-4 max-w-4xl">
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-indigo-600 p-6 text-white">
              <h1 class="text-2xl font-bold mb-2">Your Anxiety Screening Results</h1>
              <p class="text-indigo-100">
                Based on your responses, here's an analysis of your anxiety symptoms
              </p>
            </div>
            
            <div class="p-6">
              {/* Severity Score */}
              <div class="mb-8">
                <div class="flex items-center justify-between mb-4">
                  <h2 class="text-xl font-bold text-gray-800">Anxiety Severity</h2>
                  <span class="text-2xl font-bold text-indigo-600">{severityLevel}</span>
                </div>
                <div class="bg-gray-200 rounded-full h-4 mb-2">
                  <div 
                    class="bg-indigo-600 h-4 rounded-full transition-all duration-500"
                    style={{ width: `${(gad7Score / 21) * 100}%` }}
                  ></div>
                </div>
                <p class="text-sm text-gray-600">
                  GAD-7 Score: {gad7Score}/21
                </p>
              </div>

              {/* Symptom Categories */}
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="bg-gray-50 rounded-lg p-4">
                  <h3 class="font-bold text-gray-800 mb-2">Emotional Symptoms</h3>
                  <div class="text-2xl font-bold text-indigo-600 mb-1">
                    {Math.round(((answers[0] || 0) + (answers[5] || 0) + (answers[6] || 0)) / 9 * 100)}%
                  </div>
                  <p class="text-sm text-gray-600">
                    Nervousness, irritability, and fear
                  </p>
                </div>
                
                <div class="bg-gray-50 rounded-lg p-4">
                  <h3 class="font-bold text-gray-800 mb-2">Physical Symptoms</h3>
                  <div class="text-2xl font-bold text-indigo-600 mb-1">
                    {Math.round(physicalScore / 9 * 100)}%
                  </div>
                  <p class="text-sm text-gray-600">
                    Physical manifestations of anxiety
                  </p>
                </div>
                
                <div class="bg-gray-50 rounded-lg p-4">
                  <h3 class="font-bold text-gray-800 mb-2">Impact on Life</h3>
                  <div class="text-2xl font-bold text-indigo-600 mb-1">
                    {Math.round(behavioralScore / 6 * 100)}%
                  </div>
                  <p class="text-sm text-gray-600">
                    Interference with daily activities
                  </p>
                </div>
              </div>

              {/* Recommendations */}
              <div class="bg-indigo-50 rounded-lg p-6 mb-8">
                <h3 class="text-xl font-bold text-gray-800 mb-4">Recommendations</h3>
                <p class="text-gray-700 mb-4">{recommendations.text}</p>
                <ul class="space-y-2">
                  {recommendations.recommendations.map((rec, index) => (
                    <li key={index} class="flex items-start">
                      <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                      <span>{rec}</span>
                    </li>
                  ))}
                </ul>
              </div>

              {/* Next Steps */}
              <div class="space-y-4">
                {urgentCare && (
                  <div class="flex items-start bg-red-50 rounded-lg p-4">
                    <AlertCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                    <div>
                      <h4 class="font-bold text-red-800">Important Notice</h4>
                      <p class="text-sm text-red-700">
                        Your responses indicate you may be experiencing severe anxiety. Professional support is strongly recommended. Consider reaching out to a mental health professional or your healthcare provider.
                      </p>
                    </div>
                  </div>
                )}
                
                <div class="flex items-start bg-yellow-50 rounded-lg p-4">
                  <AlertCircle class="h-5 w-5 text-yellow-500 mr-2 mt-0.5" />
                  <p class="text-sm text-yellow-700">
                    This screening tool is not a diagnostic instrument. For a proper diagnosis and treatment plan, please consult with a mental health professional.
                  </p>
                </div>
                
                <div class="flex flex-wrap gap-4">
                  <Button 
                    as={Link}
                    to="/tools/matchers/therapy-platform-matcher"
                    variant="primary"
                    icon={ArrowRight}
                  >
                    Find a Therapist
                  </Button>
                  <Button 
                    onClick={restartAssessment}
                    variant="outline"
                    icon={ArrowLeft}
                  >
                    Take Assessment Again
                  </Button>
                  <Button 
                    as={Link}
                    to="/learn/fundamentals/anxiety"
                    variant="outline"
                    icon={ArrowRight}
                  >
                    Learn About Anxiety
                  </Button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    );
  }

  return (
    <div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto px-4 max-w-4xl">
        {currentQuestion === 0 ? (
          <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
            <div class="bg-indigo-600 p-6 text-white">
              <h1 class="text-2xl font-bold mb-2">Anxiety Screening</h1>
              <p class="text-indigo-100">
                Evaluate your anxiety symptoms with this clinically-validated assessment
              </p>
            </div>
            <div class="p-6">
              <div class="space-y-6 mb-8">
                <div class="flex items-start">
                  <Info class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <h2 class="font-bold text-gray-800">About This Assessment</h2>
                    <p class="text-gray-600">
                      This screening tool is based on the GAD-7, a validated instrument for assessing anxiety symptoms. It helps evaluate the presence and severity of anxiety symptoms over the past two weeks.
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <Brain class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <h2 class="font-bold text-gray-800">What It Measures</h2>
                    <ul class="mt-2 space-y-2">
                      <li class="flex items-center">
                        <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                        <span>Emotional symptoms of anxiety</span>
                      </li>
                      <li class="flex items-center">
                        <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                        <span>Physical symptoms and manifestations</span>
                      </li>
                      <li class="flex items-center">
                        <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                        <span>Impact on daily activities</span>
                      </li>
                      <li class="flex items-center">
                        <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                        <span>Severity of symptoms</span>
                      </li>
                    </ul>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <AlertCircle class="h-5 w-5 text-yellow-500 mr-2 mt-0.5" />
                  <div>
                    <h2 class="font-bold text-gray-800">Important Note</h2>
                    <p class="text-gray-600">
                      This screening is not a diagnostic tool. It's designed to help you understand your symptoms and determine if professional help might be beneficial.
                    </p>
                  </div>
                </div>
              </div>
              
              <Button 
                onClick={() => setCurrentQuestion(1)} 
                variant="primary"
                size="lg"
                class="w-full min-w-0 justify-center"
              >
                Begin Assessment
              </Button>
            </div>
          </div>
        ) : (
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-indigo-600 p-6">
              <div class="flex justify-between items-center text-white mb-4">
                <h2 class="text-lg font-semibold">Question {currentQuestion} of {questions.length}</h2>
                <span class="text-sm text-indigo-200">
                  {Math.round((currentQuestion / questions.length) * 100)}% Complete
                </span>
              </div>
              <div class="w-full min-w-0 bg-indigo-300 rounded-full h-2">
                <div 
                  class="bg-white rounded-full h-2 transition-all duration-300"
                  style={{ width: `${(currentQuestion / questions.length) * 100}%` }}
                ></div>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-6">
                {questions[currentQuestion - 1].text}
              </h3>
              
              <div class="space-y-6">
                <div class="flex justify-between text-sm text-gray-600 mb-2">
                  <span>{questions[currentQuestion - 1].scaleLabels?.min}</span>
                  <span>{questions[currentQuestion - 1].scaleLabels?.max}</span>
                </div>
                <input
                  type="range"
                  min="0"
                  max="3"
                  step="1"
                  onChange={(e) => handleAnswer(parseInt(e.target.value))}
                  class="w-full min-w-0 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-indigo-600"
                />
                <div class="flex justify-between px-2">
                  {[0, 1, 2, 3].map((value) => (
                    <div key={value} class="flex flex-col items-center">
                      <div class="w-1 h-3 bg-gray-300 mb-1"></div>
                      <span class="text-sm text-gray-600">{value}</span>
                    </div>
                  ))}
                </div>
              </div>
              
              {currentQuestion > 1 && (
                <button
                  onClick={() => setCurrentQuestion(prev => prev - 1)}
                  class="mt-6 text-indigo-600 hover:text-indigo-800 flex items-center"
                >
                  <ArrowLeft class="h-4 w-4 mr-1" />
                  Previous question
                </button>
              )}
            </div>
          </div>
        )}
      </div>
    </div>
</BaseLayout>
