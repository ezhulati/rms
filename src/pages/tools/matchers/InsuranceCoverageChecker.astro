---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Brain, ArrowRight, ArrowLeft, CheckCircle, Info, AlertCircle, Star, DollarSign, Shield, Users } from 'lucide-react';
---

<BaseLayout>
<div class="min-h-screen bg-gray-50 py-12">
        <div class="container mx-auto px-4 max-w-4xl">
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-indigo-600 p-6 text-white">
              <h1 class="text-2xl font-bold mb-2">Your Insurance Coverage Matches</h1>
              <p class="text-indigo-100">
                Based on your insurance and preferences, here are your best matches
              </p>
            </div>
            
            <div class="p-6">
              <div class="space-y-6 mb-8">
                {matchedPlatforms.map((platform, index) => (
                  <div key={platform.slug} class="bg-white border border-gray-200 rounded-lg p-6">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                      <div class="flex items-center mb-2 md:mb-0">
                        <span class="text-2xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                        <div>
                          <h2 class="text-xl font-bold text-gray-800">{platform.name}</h2>
                          <div class="flex items-center mt-1">
                            <Shield class="h-4 w-4 text-indigo-600 mr-1" />
                            <span class="text-sm text-gray-600">{platform.insurance.coverage}</span>
                          </div>
                        </div>
                      </div>
                      <div class="flex items-center">
                        <div class="bg-indigo-50 text-indigo-700 px-3 py-1 rounded-full text-sm font-medium">
                          {platform.matchScore}% Match
                        </div>
                      </div>
                    </div>

                    <p class="text-gray-600 mb-4">{platform.description}</p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                      <div>
                        <h3 class="font-medium text-gray-800 mb-2">Insurance Details</h3>
                        <ul class="space-y-1">
                          <li class="flex items-center text-sm">
                            <DollarSign class="h-4 w-4 text-indigo-600 mr-2" />
                            <span>Copay Range: {platform.insurance.copayRange}</span>
                          </li>
                          <li class="flex items-center text-sm">
                            <Shield class="h-4 w-4 text-indigo-600 mr-2" />
                            <span>{platform.insurance.coverage}</span>
                          </li>
                        </ul>
                      </div>
                      <div>
                        <h3 class="font-medium text-gray-800 mb-2">Key Features</h3>
                        <ul class="space-y-1">
                          {platform.features.map((feature, i) => (
                            <li key={i} class="flex items-center text-sm">
                              <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                              <span>{feature}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>

                    <div class="flex flex-wrap gap-3">
                      <Button 
                        as={Link}
                        to={`/reviews/platforms/${platform.slug}`}
                        variant="outline"
                        size="sm"
                      >
                        Read full review
                      </Button>
                      <Button
                        as="a"
                        href={`https://www.${platform.slug}.com`}
                        target="_blank"
                        rel="noopener noreferrer"
                        variant="primary"
                        size="sm"
                      >
                        Visit Website
                      </Button>
                    </div>
                  </div>
                ))}
              </div>

              {answers[1] === 'none' && (
                <div class="bg-yellow-50 rounded-lg p-6 mb-8">
                  <h3 class="text-lg font-bold text-gray-800 mb-3">No Insurance? Consider These Options</h3>
                  <ul class="space-y-2">
                    <li class="flex items-start">
                      <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                      <span>Look for platforms offering financial aid or sliding scale fees</span>
                    </li>
                    <li class="flex items-start">
                      <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                      <span>Consider platforms with lower per-session costs</span>
                    </li>
                    <li class="flex items-start">
                      <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                      <span>Check if your employer offers an Employee Assistance Program (EAP)</span>
                    </li>
                    <li class="flex items-start">
                      <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                      <span>Explore HSA/FSA payment options</span>
                    </li>
                  </ul>
                </div>
              )}

              <div class="space-y-4">
                <div class="flex items-start bg-yellow-50 rounded-lg p-4">
                  <AlertCircle class="h-5 w-5 text-yellow-500 mr-2 mt-0.5" />
                  <p class="text-sm text-yellow-700">
                    Coverage and copay amounts may vary based on your specific plan and location. Always verify coverage details directly with your insurance provider and the therapy platform.
                  </p>
                </div>
                
                <div class="flex flex-wrap gap-4">
                  <Button 
                    onClick={restartMatcher}
                    variant="outline"
                    icon={ArrowLeft}
                  >
                    Start Over
                  </Button>
                  <Button 
                    as={Link}
                    to="/compare/platforms"
                    variant="outline"
                    icon={ArrowRight}
                  >
                    Compare All Platforms
                  </Button>
                  <Button 
                    as={Link}
                    to="/guides/financial/therapy-insurance-coverage"
                    variant="primary"
                    icon={ArrowRight}
                  >
                    Read Insurance Guide
                  </Button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    );
  }

  return (
    <div class="min-h-screen bg-gray-50 py-12">
      <div class="container mx-auto px-4 max-w-4xl">
        {currentQuestion === 0 ? (
          <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
            <div class="bg-indigo-600 p-6 text-white">
              <h1 class="text-2xl font-bold mb-2">Insurance Coverage Checker</h1>
              <p class="text-indigo-100">
                Find therapy platforms that accept your insurance
              </p>
            </div>
            <div class="p-6">
              <div class="space-y-6 mb-8">
                <div class="flex items-start">
                  <Info class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <h2 class="font-bold text-gray-800">About This Tool</h2>
                    <p class="text-gray-600">
                      This tool helps you find online therapy platforms that accept your insurance and match your preferences.
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <Shield class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <h2 class="font-bold text-gray-800">What You'll Learn</h2>
                    <ul class="mt-2 space-y-2">
                      <li class="flex items-center">
                        <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                        <span>Which platforms accept your insurance</span>
                      </li>
                      <li class="flex items-center">
                        <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                        <span>Estimated copay ranges</span>
                      </li>
                      <li class="flex items-center">
                        <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                        <span>Coverage requirements</span>
                      </li>
                      <li class="flex items-center">
                        <CheckCircle class="h-4 w-4 text-green-500 mr-2" />
                        <span>Alternative options if uninsured</span>
                      </li>
                    </ul>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <AlertCircle class="h-5 w-5 text-yellow-500 mr-2 mt-0.5" />
                  <div>
                    <h2 class="font-bold text-gray-800">Important Note</h2>
                    <p class="text-gray-600">
                      Coverage and copay amounts may vary based on your specific plan and location. Always verify coverage details with your insurance provider.
                    </p>
                  </div>
                </div>
              </div>
              
              <Button 
                onClick={() => setCurrentQuestion(1)} 
                variant="primary"
                size="lg"
                class="w-full justify-center"
              >
                Check Coverage
              </Button>
            </div>
          </div>
        ) : (
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-indigo-600 p-6">
              <div class="flex justify-between items-center text-white mb-4">
                <h2 class="text-lg font-semibold">Question {currentQuestion} of {questions.length}</h2>
                <span class="text-sm text-indigo-200">
                  {Math.round((currentQuestion / questions.length) * 100)}% Complete
                </span>
              </div>
              <div class="w-full bg-indigo-300 rounded-full h-2">
                <div 
                  class="bg-white rounded-full h-2 transition-all duration-300"
                  style={{ width: `${(currentQuestion / questions.length) * 100}%` }}
                ></div>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-6">
                {questions[currentQuestion - 1].text}
              </h3>
              
              {questions[currentQuestion - 1].type === 'single' && (
                <div class="space-y-3">
                  {questions[currentQuestion - 1].options.map((option, index) => (
                    <button
                      key={index}
                      onClick={() => handleAnswer(option.value)}
                      class="w-full text-left p-4 rounded-lg border border-gray-200 hover:border-indigo-500 hover:bg-indigo-50 transition-all duration-200"
                    >
                      <div class="font-medium text-gray-800">{option.text}</div>
                      {option.description && (
                        <div class="text-sm text-gray-600 mt-1">{option.description}</div>
                      )}
                    </button>
                  ))}
                </div>
              )}
              
              {questions[currentQuestion - 1].type === 'multiple' && (
                <div class="space-y-3">
                  {questions[currentQuestion - 1].options.map((option, index) => (
                    <label
                      key={index}
                      class="flex items-center p-4 rounded-lg border border-gray-200 hover:border-indigo-500 hover:bg-indigo-50 transition-all duration-200 cursor-pointer"
                    >
                      <input
                        type="checkbox"
                        value={option.value}
                        onChange={(e) => {
                          const currentAnswers = answers[currentQuestion] || [];
                          const newAnswers = e.target.checked
                            ? [...currentAnswers, option.value]
                            : currentAnswers.filter((v: string) => v !== option.value);
                          setAnswers(prev => ({ ...prev, [currentQuestion]: newAnswers }));
                        }}
                        class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                      />
                      <div class="ml-3">
                        <div class="font-medium text-gray-800">{option.text}</div>
                        {option.description && (
                          <div class="text-sm text-gray-600">{option.description}</div>
                        )}
                      </div>
                    </label>
                  ))}
                  <Button
                    onClick={() => {
                      if (answers[currentQuestion]?.length > 0) {
                        handleAnswer(answers[currentQuestion]);
                      }
                    }}
                    variant="primary"
                    disabled={!answers[currentQuestion]?.length}
                    class="mt-4"
                  >
                    Continue
                  </Button>
                </div>
              )}
              
              {currentQuestion > 1 && (
                <button
                  onClick={() => setCurrentQuestion(prev => prev - 1)}
                  class="mt-6 text-indigo-600 hover:text-indigo-800 flex items-center"
                >
                  <ArrowLeft class="h-4 w-4 mr-1" />
                  Previous question
                </button>
              )}
            </div>
          </div>
        )}
      </div>
    </div>
</BaseLayout>
