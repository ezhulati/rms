---
import BaseLayout from '../layouts/BaseLayout.astro';
import { platforms } from '../siteData';
import { ArrowRight, Star, CheckCircle, XCircle, Brain, Shield, Users, Search } from 'lucide-react';
import { platforms } from '../siteData';

// const platforms = []; // Now using real data from siteData
const features = [];
const specialtyReviews = [];

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};

---

<BaseLayout>
<div class="bg-gray-50 min-h-screen">
      <div class="sb-container py-12">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Specialty Therapy Reviews</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            In-depth analysis of how different online therapy platforms handle specific mental health conditions and specialized needs.
          </p>
          <div class="flex justify-center">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find your perfect therapy match</a>
          </div>
        </div>

        {/* Featured Reviews */}
        {specialtyReviews.map((review, index) => (
          <div key={review.id} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
            <div class="p-8">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-800 mb-4 md:mb-0">{review.title}</h2>
                <a href={`/reviews/specialty/${review.slug}`} class="inline-flex items-center text-indigo-600 hover:text-indigo-800">
                  View full analysis <ArrowRight class="h-4 w-4 ml-2" />
                </a>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="col-span-1">
                  <img 
                    src={review.image} 
                    alt={review.title} 
                    class="w-full min-w-0 rounded-lg mb-4"
                  />
                  <div class="bg-indigo-50 rounded-lg p-4">
                    <h3 class="font-bold text-gray-800 mb-2">Why Specialized Care Matters</h3>
                    <p class="text-gray-600 text-sm">
                      Different conditions require different therapeutic approaches and expertise. Finding a platform that specializes in your specific needs can lead to better outcomes.
                    </p>
                  </div>
                </div>
                
                <div class="col-span-2">
                  <p class="text-gray-600 mb-6">{review.description}</p>
                  
                  <div class="space-y-6">
                    {review.platforms.map(platform => (
                      <div key={platform.slug} class="border-b pb-6 last:border-b-0 last:pb-0">
                        <div class="flex items-center justify-between mb-2">
                          <div class="flex items-center">
                            <h4 class="text-lg font-bold text-gray-800 mr-3">{platform.name}</h4>
                            <div class="flex items-center">
                              {renderStars(platform.rating)}
                              <span class="ml-2 text-gray-600">{platform.rating}/5</span>
                            </div>
                          </div>
                          <span class="text-gray-600">{platform.price}</span>
                        </div>
                        
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
                          <div>
                            <h5 class="font-bold text-gray-800 mb-2 text-sm">Key Features</h5>
                            <ul class="space-y-1">
                              {platform.features.map((feature, i) => (
                                <li key={i} class="flex items-start">
                                  <CheckCircle class="h-4 w-4 text-green-500 mr-2 mt-0.5" />
                                  <span class="text-sm text-gray-600">{feature}</span>
                                </li>
                              ))}
                            </ul>
                          </div>
                          <div>
                            <h5 class="font-bold text-gray-800 mb-2 text-sm">Best For</h5>
                            <p class="text-sm text-gray-600">{platform.bestFor}</p>
                          </div>
                        </div>
                        
                        <div class="flex gap-3">
                          <button class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Read review</button>
                          <button class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Visit Website</button>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}

        {/* Choosing Specialized Care */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose Specialized Mental Health Care</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Brain class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Expertise Match</h3>
              <p class="text-gray-600">
                Look for platforms with therapists who specialize in your specific condition or needs.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Shield class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Treatment Approach</h3>
              <p class="text-gray-600">
                Consider which therapeutic methods are most effective for your specific condition.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Support Features</h3>
              <p class="text-gray-600">
                Evaluate additional resources and tools specific to your needs.
              </p>
            </div>
          </div>
        </div>

        {/* How We Review Section */}
        

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center mb-8">
          <h2 class="text-2xl font-bold mb-4">Find Your Specialized Care Match</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the perfect online therapy platform for your specific needs.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find Your Perfect Match</a>
            <a href="/tools/assessments/mental-health-assessment" class="border-white text-white hover:bg-white hover:bg-opacity-10">Take Mental Health Assessment</a>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
