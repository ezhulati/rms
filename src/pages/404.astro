---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Home, Search, HelpCircle } from 'lucide-react';
---

<BaseLayout>
  {/* 404 Page */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white py-20">
    <div class="max-w-7xl mx-auto px-6 lg:px-12 text-center">
        <div class="mb-8">
          <div class="text-indigo-600 text-9xl font-bold mb-4">404</div>
          <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-4">Page Not Found</h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
            We're sorry, but the page you're looking for doesn't exist or has been moved.
          </p>
        </div>
        
        <div class="max-w-md mx-auto mb-12">
          <div class="bg-white rounded-lg p-4 shadow-md flex items-center">
            <Search class="h-5 w-5 text-gray-400 mr-2" />
            <input 
              type="text" 
              placeholder="Search for resources, guides, or platforms..." 
              class="w-full min-w-0 text-gray-800 focus:outline-none bg-white"
            />
            <button class="whitespace-nowrap bg-indigo-600 text-white px-4 py-2 rounded-md ml-2 hover:bg-indigo-700 transition">
              Search
            </button>
          </div>
        </div>
        
        <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
          <a href="/" class="flex items-center justify-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">
            <Home class="h-5 w-5 mr-2" />
            Return to Home
          </a>
          <a href="/compare" class="flex items-center justify-center bg-white border border-indigo-600 text-indigo-600 px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-50 transition">
            <Search class="h-5 w-5 mr-2" />
            Compare Platforms
          </a>
          <a href="/tools/assessments/mental-health-assessment" class="flex items-center justify-center bg-white border border-indigo-600 text-indigo-600 px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-50 transition">
            <HelpCircle class="h-5 w-5 mr-2" />
            Take Assessment
          </a>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto">
          <h2 class="text-xl font-bold text-gray-800 mb-4">Popular Pages</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <a href="/compare/platforms/betterhelp-vs-talkspace" class="text-indigo-600 hover:text-indigo-800">
              BetterHelp vs Talkspace
            </a>
            <a href="/reviews/platforms/betterhelp" class="text-indigo-600 hover:text-indigo-800">
              BetterHelp Review
            </a>
            <a href="/best/conditions/best-for-anxiety" class="text-indigo-600 hover:text-indigo-800">
              Best for Anxiety
            </a>
            <a href="/guides/financial/therapy-insurance-coverage" class="text-indigo-600 hover:text-indigo-800">
              Insurance Coverage Guide
            </a>
            <a href="/tools/matchers/therapy-platform-matcher" class="text-indigo-600 hover:text-indigo-800">
              Therapy Platform Matcher
            </a>
            <a href="/learn/fundamentals/therapy-types-explained" class="text-indigo-600 hover:text-indigo-800">
              Therapy Types Explained
            </a>
          </div>
        </div>
    </div>
  </section>
</BaseLayout>
