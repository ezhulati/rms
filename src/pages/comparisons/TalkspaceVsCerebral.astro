---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Brain, Shield, Users, DollarSign, ExternalLink } from 'lucide-react';
---

<BaseLayout>
<div class="bg-gray-50 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        {/* Hero Section */}
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Talkspace vs Cerebral: Which Is Better in 2025?</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Compare two leading platforms that offer both therapy and medication management services.
          </p>
          <div class="flex justify-center">
            <Button 
              as={Link} 
              to="/tools/matchers/therapy-platform-matcher" 
              variant="primary" 
              size="lg" 
              icon={Search}
            >
              Find your perfect therapy match
            </Button>
          </div>
        </div>

        {/* Quick Comparison */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Quick Comparison</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Talkspace */}
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Talkspace</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.5)}
                  </div>
                  <span class="text-gray-600">4.5/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Established platform with strong insurance coverage and integrated psychiatric services.
              </p>
              <ul class="space-y-2 mb-4">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>$65-$99/week</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Insurance accepted</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Medication management</span>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>No financial aid</span>
                </li>
              </ul>
              <Button 
                as="a"
                href="https://www.talkspace.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                variant="primary"
                size="sm"
                icon={ExternalLink}
                class="w-full min-w-0 justify-center"
              >
                Visit Talkspace
              </Button>
            </div>

            {/* Comparison */}
            <div class="bg-indigo-50 rounded-lg p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-4">Key Differences</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <Brain class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <span>Talkspace has more therapy focus, Cerebral emphasizes medication</span>
                </li>
                <li class="flex items-start">
                  <Shield class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <span>Different insurance coverage networks</span>
                </li>
                <li class="flex items-start">
                  <Users class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <span>Talkspace has more therapists</span>
                </li>
                <li class="flex items-start">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <span>Different pricing structures</span>
                </li>
              </ul>
            </div>

            {/* Cerebral */}
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Cerebral</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.0)}
                  </div>
                  <span class="text-gray-600">4.0/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Comprehensive mental health platform with strong focus on medication management.
              </p>
              <ul class="space-y-2 mb-4">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>$85-$325/month</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Insurance accepted</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Medication delivery</span>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>Limited availability</span>
                </li>
              </ul>
              <Button 
                as="a"
                href="https://www.cerebral.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                variant="primary"
                size="sm"
                icon={ExternalLink}
                class="w-full min-w-0 justify-center"
              >
                Visit Cerebral
              </Button>
            </div>
          </div>
        </div>

        {/* Detailed Comparison */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Detailed Comparison</h2>
          
          {/* Services & Features */}
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Services & Features</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="bg-gray-50 rounded-lg p-6">
                <h4 class="font-bold text-gray-800 mb-3">Talkspace</h4>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Unlimited messaging</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Live video sessions (plan dependent)</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Psychiatric services available</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Multiple subscription tiers</span>
                  </li>
                  <li class="flex items-start">
                    <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                    <span>No medication delivery</span>
                  </li>
                </ul>
              </div>
              
              <div class="bg-gray-50 rounded-lg p-6">
                <h4 class="font-bold text-gray-800 mb-3">Cerebral</h4>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Therapy sessions</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Medication management</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Medication delivery</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Care counseling</span>
                  </li>
                  <li class="flex items-start">
                    <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                    <span>Limited messaging features</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          
          {/* Cost & Insurance */}
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Cost & Insurance</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="bg-gray-50 rounded-lg p-6">
                <h4 class="font-bold text-gray-800 mb-3">Talkspace</h4>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                    <span>$65-$99 per week</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Major insurance plans accepted</span>
                  </li>
                  <li class="flex items-start">
                    <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                    <span>No financial aid program</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>HSA/FSA accepted</span>
                  </li>
                </ul>
              </div>
              
              <div class="bg-gray-50 rounded-lg p-6">
                <h4 class="font-bold text-gray-800 mb-3">Cerebral</h4>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                    <span>$85-$325 per month</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Insurance coverage available</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Multiple plan options</span>
                  </li>
                  <li class="flex items-start">
                    <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                    <span>Higher medication plan costs</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          
          {/* Provider Network */}
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Provider Network</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="bg-gray-50 rounded-lg p-6">
                <h4 class="font-bold text-gray-800 mb-3">Talkspace</h4>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>5,000+ licensed therapists</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Licensed psychiatrists</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Specialized providers</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Easy provider switching</span>
                  </li>
                </ul>
              </div>
              
              <div class="bg-gray-50 rounded-lg p-6">
                <h4 class="font-bold text-gray-800 mb-3">Cerebral</h4>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Licensed therapists</span>
                  </li>
                  <li class="flex items-start">
                    <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                    <span>Prescribing providers</span>
                  </li>
                  <li class="flex items-start">
                    <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                    <span>Smaller provider network</span>
                  </li>
                  <li class="flex items-start">
                    <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                    <span>Limited provider choice</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          
          {/* Final Verdict */}
          <div class="bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Verdict</h3>
            <p class="text-gray-700 mb-4">
              Choose <strong>Talkspace</strong> if:
            </p>
            <ul class="space-y-2 mb-4">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>You want more therapy-focused care with medication options</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>You prefer more provider options</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>You value comprehensive messaging features</span>
              </li>
            </ul>
            <p class="text-gray-700 mb-4">
              Choose <strong>Cerebral</strong> if:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>You prioritize medication management</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>You want medication delivery included</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>You prefer a more structured treatment approach</span>
              </li>
            </ul>
          </div>
        </div>

        {/* How We Review Section */}
        <HowWeReviewed />

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center mb-8">
          <h2 class="text-2xl font-bold mb-4">Not Sure Which Platform Is Right For You?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the perfect online therapy platform based on your unique needs.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <Button 
              as={Link} 
              to="/tools/matchers/therapy-platform-matcher" 
              variant="light"
              size="lg"
            >
              Find Your Perfect Match
            </Button>
            <Button 
              as={Link} 
              to="/tools/assessments/mental-health-assessment" 
              variant="outline"
              size="lg"
              class="border-white text-white hover:bg-white hover:bg-opacity-10"
            >
              Take Mental Health Assessment
            </Button>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
