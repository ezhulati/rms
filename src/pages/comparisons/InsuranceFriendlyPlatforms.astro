---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Brain, Shield, Users, DollarSign, ExternalLink } from 'lucide-react';
---

<BaseLayout>
<div class="bg-gray-50 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        {/* Hero Section */}
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Best Insurance-Friendly Online Therapy Platforms</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Compare online therapy platforms that accept insurance to maximize your mental health benefits and minimize out-of-pocket costs.
          </p>
          <div class="flex justify-center">
            <Button 
              as={Link} 
              to="/tools/matchers/therapy-platform-matcher" 
              variant="primary" 
              size="lg" 
              icon={Search}
            >
              Find insurance-covered therapy
            </Button>
          </div>
        </div>

        {/* Insurance Coverage Overview */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Insurance Coverage at a Glance</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {platforms.map(platform => (
              <div key={platform.slug} class="bg-gray-50 rounded-lg p-6">
                <div class="flex items-center mb-3">
                  <h3 class="text-xl font-bold text-gray-800 mr-3">{platform.name}</h3>
                  <div class="flex items-center">
                    <div class="mr-1">
                      {renderStars(platform.rating)}
                    </div>
                    <span class="text-gray-600">{platform.rating}/5</span>
                  </div>
                </div>
                
                <p class="text-gray-600 mb-4">{platform.description}</p>
                
                <div class="space-y-4 mb-4">
                  <div>
                    <div class="font-medium text-gray-800 mb-1">Insurance Partners:</div>
                    <div class="flex flex-wrap gap-2">
                      {platform.insuranceProviders.map(provider => (
                        <span key={provider} class="bg-indigo-100 text-indigo-700 px-2 py-1 rounded-full text-sm">
                          {provider}
                        </span>
                      ))}
                    </div>
                  </div>
                  
                  <div>
                    <div class="font-medium text-gray-800 mb-1">Typical Copay Range:</div>
                    <span class="text-gray-600">{platform.copayRange}</span>
                  </div>
                </div>
                
                <Button 
                  as={Link}
                  to={`/reviews/platforms/${platform.slug}`}
                  variant="primary"
                  size="sm"
                  class="w-full min-w-0 justify-center"
                >
                  View Full Details
                </Button>
              </div>
            ))}
          </div>
        </div>

        {/* Detailed Platform Comparisons */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Detailed Platform Comparisons</h2>
          
          {platforms.map((platform, index) => (
            <div key={platform.slug} class="mb-8 last:mb-0">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                <div class="flex items-center">
                  <span class="text-2xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                  <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                </div>
                <div class="flex items-center mt-2 md:mt-0">
                  {renderStars(platform.rating)}
                  <span class="ml-2 text-gray-600">{platform.rating}/5</span>
                </div>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                  <h4 class="font-bold text-gray-800 mb-3">Insurance & Costs</h4>
                  <ul class="space-y-2">
                    <li class="flex items-center">
                      <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                      <span>Base Price: {platform.price}</span>
                    </li>
                    <li class="flex items-center">
                      <Shield class="h-5 w-5 text-indigo-600 mr-2" />
                      <span>Typical Copay: {platform.copayRange}</span>
                    </li>
                    <li>
                      <div class="font-medium mb-1">Accepted Insurance:</div>
                      <div class="flex flex-wrap gap-2">
                        {platform.insuranceProviders.map(provider => (
                          <span key={provider} class="bg-indigo-100 text-indigo-700 px-2 py-1 rounded-full text-sm">
                            {provider}
                          </span>
                        ))}
                      </div>
                    </li>
                  </ul>
                </div>
                <div>
                  <h4 class="font-bold text-gray-800 mb-3">Key Features</h4>
                  <ul class="space-y-2">
                    {platform.features.map((feature, i) => (
                      <li key={i} class="flex items-start">
                        <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                        <span>{feature}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                  <h4 class="font-bold text-gray-800 mb-3">Pros</h4>
                  <ul class="space-y-2">
                    {platform.pros.map((pro, i) => (
                      <li key={i} class="flex items-start">
                        <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                        <span>{pro}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                <div>
                  <h4 class="font-bold text-gray-800 mb-3">Cons</h4>
                  <ul class="space-y-2">
                    {platform.cons.map((con, i) => (
                      <li key={i} class="flex items-start">
                        <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                        <span>{con}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
              
              <div class="flex gap-4">
                <Button 
                  as={Link}
                  to={`/reviews/platforms/${platform.slug}`}
                  variant="outline"
                  size="sm"
                >
                  Read full review
                </Button>
                <Button 
                  as="a"
                  href={`https://www.${platform.slug}.com`}
                  target="_blank"
                  rel="noopener noreferrer"
                  variant="primary"
                  size="sm"
                  icon={ExternalLink}
                >
                  Visit Website
                </Button>
              </div>
              
              {index < platforms.length - 1 && <hr class="my-8 border-gray-200" />}
            </div>
          ))}
        </div>

        {/* Insurance Coverage Guide */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Understanding Online Therapy Insurance Coverage</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Shield class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Coverage Basics</h3>
              <p class="text-gray-600">
                Learn how insurance coverage works for online therapy, including copays, deductibles, and coverage limits.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <DollarSign class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Cost Comparison</h3>
              <p class="text-gray-600">
                Compare out-of-pocket costs versus insurance coverage across different platforms and plans.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Provider Networks</h3>
              <p class="text-gray-600">
                Understand how provider networks affect your coverage and access to mental health professionals.
              </p>
            </div>
          </div>
          
          <div class="mt-8 bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Tips for Maximizing Insurance Benefits</h3>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>Verify your coverage before starting therapy</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>Understand your plan's mental health benefits</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>Check if you need pre-authorization</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>Keep track of your deductible and copays</span>
              </li>
            </ul>
          </div>
        </div>

        {/* How We Review Section */}
        <HowWeReviewed />

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center mb-8">
          <h2 class="text-2xl font-bold mb-4">Ready to Check Your Coverage?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Use our insurance coverage checker to find therapy platforms that accept your insurance and see estimated costs.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <Button 
              as={Link} 
              to="/tools/matchers/insurance-coverage-checker" 
              variant="light"
              size="lg"
            >
              Check Your Coverage
            </Button>
            <Button 
              as={Link} 
              to="/tools/matchers/therapy-platform-matcher" 
              variant="outline"
              size="lg"
              class="border-white text-white hover:bg-white hover:bg-opacity-10"
            >
              Find Insurance-Friendly Platforms
            </Button>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
