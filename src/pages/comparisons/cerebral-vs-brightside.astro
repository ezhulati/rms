---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getPlatformBySlug } from '../../siteData';
import { Star, CheckCircle, XCircle, ArrowRight, MessageSquare, Video, Phone, DollarSign, Shield, Brain } from 'lucide-react';

const cerebral = getPlatformBySlug('cerebral');
const brightside = getPlatformBySlug('brightside');

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};
---

<BaseLayout title={`Cerebral vs Brightside | Compare Mental Health Platforms 2025 | RealMindSolutions`} description="Compare Cerebral and Brightside medication management platforms. Both offer online psychiatry and therapy, but which is right for you? See pricing, features, and our verdict.">
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="mb-8">
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Cerebral vs Brightside: Which Medication Management Platform Is Right for You in 2025?</h1>
        <p class="font-serif italic text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto mb-8">
          Compare two leading platforms that combine therapy and psychiatry for comprehensive mental health treatment with medication management.
        </p>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="card card-primary p-6">
              <div class="flex items-center mb-3">
                <h2 class="text-xl font-bold text-neutral-900 mr-3">{cerebral.name}</h2>
                <div class="flex items-center">
                  <div class="flex mr-1">
                    {renderStars(cerebral.rating).map((filled, i) => (
                      <Star key={i} class={`h-4 w-4 ${filled ? 'text-yellow-400 fill-yellow-400' : 'text-neutral-300'}`} />
                    ))}
                  </div>
                  <span class="text-neutral-600">{cerebral.rating}/5</span>
                </div>
              </div>
              <p class="text-neutral-700 mb-4">{cerebral.tagline}</p>
              <div class="text-2xl font-bold text-brand-primary-600 mb-4">{cerebral.price}</div>
              <a href="#" class="btn btn-primary w-full justify-center">Visit {cerebral.name}</a>
            </div>

            <div class="card card-secondary p-6">
              <div class="flex items-center mb-3">
                <h2 class="text-xl font-bold text-neutral-900 mr-3">{brightside.name}</h2>
                <div class="flex items-center">
                  <div class="flex mr-1">
                    {renderStars(brightside.rating).map((filled, i) => (
                      <Star key={i} class={`h-4 w-4 ${filled ? 'text-yellow-400 fill-yellow-400' : 'text-neutral-300'}`} />
                    ))}
                  </div>
                  <span class="text-neutral-600">{brightside.rating}/5</span>
                </div>
              </div>
              <p class="text-neutral-700 mb-4">{brightside.tagline}</p>
              <div class="text-2xl font-bold text-brand-secondary-600 mb-4">{brightside.price}</div>
              <a href="#" class="btn btn-secondary w-full justify-center">Visit {brightside.name}</a>
            </div>
        </div>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      {/* Quick Comparison */}
      <div class="card p-8 mb-10">
        <h2 class="text-2xl font-bold text-neutral-900 mb-6">Quick Comparison</h2>

        <div class="overflow-x-auto">
          <table class="min-w-full bg-white">
            <thead>
              <tr class="bg-brand-primary-50 border-b-2 border-brand-primary-200">
                <th class="py-3 px-4 text-left text-brand-primary-900 font-semibold">Feature</th>
                <th class="py-3 px-4 text-center text-brand-primary-900 font-semibold">Cerebral</th>
                <th class="py-3 px-4 text-center text-brand-primary-900 font-semibold">Brightside</th>
                <th class="py-3 px-4 text-left text-brand-primary-900 font-semibold">Winner</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b hover:bg-neutral-50 transition-colors">
                <td class="py-3 px-4 font-medium text-neutral-900">Price Range</td>
                <td class="py-3 px-4 text-center text-neutral-700">{cerebral.price}</td>
                <td class="py-3 px-4 text-center text-neutral-700">{brightside.price}</td>
                <td class="py-3 px-4">
                  <div class="flex items-center">
                    <span class="font-semibold text-brand-primary-600 mr-2">Brightside</span>
                    <span class="text-sm text-neutral-600">Lower starting price</span>
                  </div>
                </td>
              </tr>

              <tr class="border-b hover:bg-neutral-50 transition-colors">
                <td class="py-3 px-4 font-medium text-neutral-900">Insurance Coverage</td>
                <td class="py-3 px-4 text-center">
                  <CheckCircle class="h-5 w-5 text-brand-accent-500 mx-auto" />
                </td>
                <td class="py-3 px-4 text-center">
                  <CheckCircle class="h-5 w-5 text-brand-accent-500 mx-auto" />
                </td>
                <td class="py-3 px-4">
                  <div class="flex items-center">
                    <span class="font-medium text-gray-600 mr-2">Tie</span>
                    <span class="text-sm text-gray-600">Both accept select plans</span>
                  </div>
                </td>
              </tr>

              <tr class="border-b hover:bg-gray-50">
                <td class="py-3 px-4 font-medium">Specialties</td>
                <td class="py-3 px-4 text-center">ADHD, Anxiety, Depression, Insomnia</td>
                <td class="py-3 px-4 text-center">Depression & Anxiety</td>
                <td class="py-3 px-4">
                  <div class="flex items-center">
                    <span class="font-medium text-indigo-600 mr-2">Cerebral</span>
                    <span class="text-sm text-gray-600">More conditions treated</span>
                  </div>
                </td>
              </tr>

              <tr class="border-b hover:bg-gray-50">
                <td class="py-3 px-4 font-medium">Medication Management</td>
                <td class="py-3 px-4 text-center">
                  <CheckCircle class="h-5 w-5 text-green-500 mx-auto" />
                </td>
                <td class="py-3 px-4 text-center">
                  <CheckCircle class="h-5 w-5 text-green-500 mx-auto" />
                </td>
                <td class="py-3 px-4">
                  <div class="flex items-center">
                    <span class="font-medium text-gray-600 mr-2">Tie</span>
                    <span class="text-sm text-gray-600">Both include</span>
                  </div>
                </td>
              </tr>

              <tr class="border-b hover:bg-gray-50">
                <td class="py-3 px-4 font-medium">Therapy Included</td>
                <td class="py-3 px-4 text-center">Yes (limited sessions)</td>
                <td class="py-3 px-4 text-center">Yes</td>
                <td class="py-3 px-4">
                  <div class="flex items-center">
                    <span class="font-medium text-indigo-600 mr-2">Tie</span>
                    <span class="text-sm text-gray-600">Both offer therapy</span>
                  </div>
                </td>
              </tr>

              <tr class="border-b hover:bg-gray-50">
                <td class="py-3 px-4 font-medium">Overall Rating</td>
                <td class="py-3 px-4 text-center">{cerebral.rating}/5</td>
                <td class="py-3 px-4 text-center">{brightside.rating}/5</td>
                <td class="py-3 px-4">
                  <div class="flex items-center">
                    <span class="font-medium text-indigo-600 mr-2">Brightside</span>
                    <span class="text-sm text-gray-600">Slightly higher rating</span>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      {/* Detailed Comparison Sections */}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-10">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">{cerebral.name} Pros</h2>
          <ul class="space-y-3">
            {cerebral.pros.map((pro) => (
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">{pro}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">{brightside.name} Pros</h2>
          <ul class="space-y-3">
            {brightside.pros.map((pro) => (
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">{pro}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-10">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">{cerebral.name} Cons</h2>
          <ul class="space-y-3">
            {cerebral.cons.map((con) => (
              <li class="flex items-start">
                <XCircle class="h-5 w-5 text-red-500 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">{con}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">{brightside.name} Cons</h2>
          <ul class="space-y-3">
            {brightside.cons.map((con) => (
              <li class="flex items-start">
                <XCircle class="h-5 w-5 text-red-500 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">{con}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      {/* Our Verdict */}
      <div class="bg-white rounded-lg shadow-md p-8 mb-10">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Our Verdict</h2>
        <div class="prose prose-lg max-w-none">
          <p class="text-gray-700 mb-4">
            Both <strong>Cerebral</strong> and <strong>Brightside</strong> offer comprehensive mental health care combining therapy and medication management, but they serve slightly different needs:
          </p>

          <div class="bg-indigo-50 border-l-4 border-indigo-600 p-6 mb-6">
            <h3 class="font-bold text-lg text-gray-800 mb-2">Choose Cerebral if you:</h3>
            <ul class="space-y-2">
              {cerebral.bestFor.map((item) => (
                <li class="flex items-start">
                  <ArrowRight class="h-5 w-5 text-indigo-600 mr-2 mt-0.5 flex-shrink-0" />
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <div class="bg-purple-50 border-l-4 border-purple-600 p-6">
            <h3 class="font-bold text-lg text-gray-800 mb-2">Choose Brightside if you:</h3>
            <ul class="space-y-2">
              {brightside.bestFor.map((item) => (
                <li class="flex items-start">
                  <ArrowRight class="h-5 w-5 text-purple-600 mr-2 mt-0.5 flex-shrink-0" />
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>

      {/* CTA */}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-gradient-to-r from-indigo-600 to-blue-600 rounded-lg p-8 text-white text-center">
          <h3 class="text-2xl font-bold mb-4">Try {cerebral.name}</h3>
          <p class="mb-6">Comprehensive care for ADHD, anxiety, depression, and insomnia</p>
          <a href="#" class="inline-flex items-center bg-white text-indigo-600 px-8 py-3 rounded-md hover:bg-gray-100 transition font-semibold">Get Started with {cerebral.name}</a>
        </div>

        <div class="bg-gradient-to-r from-purple-600 to-pink-600 rounded-lg p-8 text-white text-center">
          <h3 class="text-2xl font-bold mb-4">Try {brightside.name}</h3>
          <p class="mb-6">Data-driven treatment for depression and anxiety</p>
          <a href="#" class="inline-flex items-center bg-white text-purple-600 px-8 py-3 rounded-md hover:bg-gray-100 transition font-semibold">Get Started with {brightside.name}</a>
      </div>
    </div>
  </section>
</BaseLayout>
