---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Brain, Shield, Users, DollarSign, ExternalLink } from 'lucide-react';
---

<BaseLayout>
<div class="bg-gray-50 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        {/* Hero Section */}
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Alternatives to Online Therapy Platforms</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Explore different mental health support options beyond traditional online therapy platforms.
          </p>
          <div class="flex justify-center">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find your best therapy option</a>
          </div>
        </div>

        {/* Alternative Categories */}
        {alternatives.map((category, index) => (
          <div key={index} class="mb-16">
            <h2 class="text-2xl font-bold text-gray-800 mb-8">{category.category}</h2>
            
            <div class="space-y-8">
              {category.options.map((option, optionIndex) => (
                <div key={optionIndex} class="bg-white rounded-lg shadow-md p-8">
                  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
                    <h3 class="text-xl font-bold text-gray-800">{option.name}</h3>
                    <div class="mt-2 md:mt-0">
                      <span class="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-full text-sm">
                        {option.typicalCost}
                      </span>
                    </div>
                  </div>
                  
                  <p class="text-gray-600 mb-6">{option.description}</p>
                  
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                      <h4 class="font-bold text-gray-800 mb-3">Advantages</h4>
                      <ul class="space-y-2">
                        {option.pros.map((pro, i) => (
                          <li key={i} class="flex items-start">
                            <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                            <span>{pro}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                    
                    <div>
                      <h4 class="font-bold text-gray-800 mb-3">Limitations</h4>
                      <ul class="space-y-2">
                        {option.cons.map((con, i) => (
                          <li key={i} class="flex items-start">
                            <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                            <span>{con}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                  
                  <div class="bg-indigo-50 rounded-lg p-4">
                    <h4 class="font-bold text-gray-800 mb-2">Best For</h4>
                    <p class="text-gray-700">{option.bestFor}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}

        {/* Choosing the Right Option */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right Option</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Brain class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Consider Your Needs</h3>
              <p class="text-gray-600">
                Think about the severity of your concerns, preferred communication style, and type of support needed.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <DollarSign class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Budget & Resources</h3>
              <p class="text-gray-600">
                Consider your budget, insurance coverage, and available local resources.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Support Style</h3>
              <p class="text-gray-600">
                Decide whether you prefer professional guidance, peer support, or self-directed resources.
              </p>
            </div>
          </div>
          
          <div class="mt-8 bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Recommendation</h3>
            <p class="text-gray-700 mb-4">
              Consider combining multiple approaches for comprehensive support:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>Use professional therapy (online or in-person) as your primary support</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>Supplement with self-help apps and resources</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span>Join support groups for community connection</span>
              </li>
            </ul>
          </div>
        </div>

        {/* How We Review Section */}
        

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center mb-8">
          <h2 class="text-2xl font-bold mb-4">Need Help Finding the Right Support?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to discover which mental health support options best fit your needs and circumstances.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find Your Perfect Match</a>
            <a href="/tools/assessments/mental-health-assessment" class="border-white text-white hover:bg-white hover:bg-opacity-10">Take Mental Health Assessment</a>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
