---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { platforms } from '../../siteData';
import { Star, CheckCircle, XCircle, ArrowRight, ExternalLink, MessageSquare, Video, Phone, Calendar, DollarSign, Shield, Users, Brain, Search } from 'lucide-react';
import { platforms } from '../../siteData';

// const platforms = []; // Now using real data from siteData
const features = [];

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};

---

<BaseLayout>
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Affordable BetterHelp Alternatives in 2025</h1>
      <p class="font-serif italic text-lg md:text-xl text-neutral-600 mb-8">
        Discover budget-friendly online therapy options that provide quality mental health support without breaking the bank.
      </p>
      <div class="flex justify-center">
        <a href="/tools/matchers/budget-friendly-finder" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find your affordable therapy match</a>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      {/* BetterHelp Price Context */}
      <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">BetterHelp Pricing Context</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-3">BetterHelp Standard Pricing</h3>
              <p class="text-gray-600 mb-4">
                BetterHelp typically costs between $60-$90 per week (billed monthly at $240-$360), depending on your location, therapist availability, and specific needs.
              </p>
              <div class="bg-gray-50 rounded-lg p-4 mb-4">
                <div class="flex items-center mb-2">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                  <span class="font-bold text-gray-800">Standard Plan: $60-$90/week</span>
                </div>
                <ul class="space-y-1 text-gray-600 pl-7">
                  <li>• Unlimited messaging with your therapist</li>
                  <li>• Weekly live sessions (video, phone, or chat)</li>
                  <li>• Access to groupinars and worksheets</li>
                  <li>• Billed monthly ($240-$360)</li>
                </ul>
              </div>
              <p class="text-gray-600">
                While BetterHelp offers financial aid to eligible users (potentially reducing costs by 15-40%), many people still find the service outside their budget.
              </p>
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-3">Why Consider Alternatives?</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Lower Cost Options</span>
                    <p class="text-gray-600">Some platforms offer therapy starting at $40/week, significantly less than BetterHelp's starting price.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Different Payment Models</span>
                    <p class="text-gray-600">Alternatives may offer pay-per-session options instead of subscriptions, or more flexible billing cycles.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <Users class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Specialized Approaches</span>
                    <p class="text-gray-600">Some alternatives focus on specific therapeutic methods or offer unique resources that may better suit your needs.</p>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>

        {/* Top Affordable Alternatives */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Top Affordable Alternatives to BetterHelp</h2>
          
          {platforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class="mr-2">
                        {renderStars(platform.rating)}
                      </div>
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                        <span class="text-gray-600">{platform.price}</span>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <button class="w-full min-w-0 justify-center">Read full review</button>
                      <button class="w-full min-w-0 justify-center">Visit Website</button>
                    </div>
                  </div>
                  
                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-gray-800 mb-3">Why It's a Good Alternative</h4>
                    <p class="text-gray-600 mb-6">
                      {platform.description}
                    </p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                      
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                    
                    <div>
                      <h5 class="font-bold text-gray-800 mb-3">Key Features</h5>
                      <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                        {platform.features.map((feature, i) => (
                          <div key={i} class="bg-gray-50 rounded-lg p-3 flex items-center">
                            <CheckCircle class="h-4 w-4 text-indigo-600 mr-2 flex-shrink-0" />
                            <span class="text-gray-700 text-sm">{feature}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                    
                    <div class="mt-6 bg-indigo-50 rounded-lg p-4">
                      <h5 class="font-bold text-gray-800 mb-2">Best For</h5>
                      <p class="text-gray-700">{platform.bestFor}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* Other Cost-Saving Options */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Other Ways to Access Affordable Therapy</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Shield class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Insurance-Covered Therapy</h3>
              <p class="text-gray-600 mb-4">
                If you have health insurance, check if it covers mental health services. Platforms like Talkspace and Brightside accept many insurance plans.
              </p>
              <a href="/reviews/pricing/insurance-coverage-guide" class="text-indigo-600 hover:text-indigo-800 flex items-center">
                Insurance coverage guide <ArrowRight class="h-4 w-4 ml-1" />
              </a>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Community Resources</h3>
              <p class="text-gray-600 mb-4">
                Many communities offer free or low-cost mental health services through community centers, universities, or non-profit organizations.
              </p>
              <a href="/compare/alternatives/free-therapy-options" class="text-indigo-600 hover:text-indigo-800 flex items-center">
                Free therapy options <ArrowRight class="h-4 w-4 ml-1" />
              </a>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <DollarSign class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Sliding Scale Therapists</h3>
              <p class="text-gray-600 mb-4">
                Many therapists offer sliding scale fees based on your income. Websites like Open Path Collective connect clients with affordable therapists.
              </p>
              <a href="https://openpathcollective.org" target="_blank" rel="noopener noreferrer" class="text-indigo-600 hover:text-indigo-800 flex items-center">
                Open Path Collective <ExternalLink class="h-4 w-4 ml-1" />
              </a>
            </div>
          </div>
        </div>

        {/* Comparison Table */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">BetterHelp vs Affordable Alternatives: Quick Comparison</h2>
          
          <div class="overflow-x-auto">
            <table class="min-w-full min-w-0 bg-white">
              <thead>
                <tr class="bg-gray-100 border-b">
                  <th class="py-3 px-4 text-left text-gray-700 font-semibold">Platform</th>
                  <th class="py-3 px-4 text-center text-gray-700 font-semibold">Price Range</th>
                  <th class="py-3 px-4 text-center text-gray-700 font-semibold">Communication Methods</th>
                  <th class="py-3 px-4 text-center text-gray-700 font-semibold">Insurance</th>
                  <th class="py-3 px-4 text-center text-gray-700 font-semibold">Financial Aid</th>
                  <th class="py-3 px-4 text-center text-gray-700 font-semibold">Rating</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-3 px-4 font-medium">BetterHelp</td>
                  <td class="py-3 px-4 text-center">$60-$90/week</td>
                  <td class="py-3 px-4 text-center">
                    <div class="flex justify-center space-x-1">
                      <MessageSquare class="h-4 w-4 text-indigo-600" aria-label="Messaging" />
                      <Video class="h-4 w-4 text-indigo-600" aria-label="Video" />
                      <Phone class="h-4 w-4 text-indigo-600" aria-label="Phone" />
                    </div>
                  </td>
                  <td class="py-3 px-4 text-center">
                    <XCircle class="h-5 w-5 text-red-500 mx-auto" />
                  </td>
                  <td class="py-3 px-4 text-center">
                    <CheckCircle class="h-5 w-5 text-green-500 mx-auto" />
                  </td>
                  <td class="py-3 px-4 text-center">
                    <div class="flex justify-center">
                      {renderStars(4.5)}
                    </div>
                  </td>
                </tr>
                
                {platforms.map(platform => (
                  <tr key={platform.slug} class="border-b hover:bg-gray-50">
                    <td class="py-3 px-4 font-medium">{platform.name}</td>
                    <td class="py-3 px-4 text-center">{platform.price}</td>
                    <td class="py-3 px-4 text-center">
                      <div class="flex justify-center space-x-1">
                        <MessageSquare class="h-4 w-4 text-indigo-600" aria-label="Messaging" />
                        {platform.slug !== '7-cups' && (
                          <Video class="h-4 w-4 text-indigo-600" aria-label="Video" />
                        )}
                        {platform.slug === 'calmerry' && (
                          <Phone class="h-4 w-4 text-indigo-600" aria-label="Phone" />
                        )}
                      </div>
                    </td>
                    <td class="py-3 px-4 text-center">
                      <XCircle class="h-5 w-5 text-red-500 mx-auto" />
                    </td>
                    <td class="py-3 px-4 text-center">
                      {platform.slug === '7-cups' ? (
                        <CheckCircle class="h-5 w-5 text-green-500 mx-auto" />
                      ) : (
                        <XCircle class="h-5 w-5 text-red-500 mx-auto" />
                      )}
                    </td>
                    <td class="py-3 px-4 text-center">
                      <div class="flex justify-center">
                        {renderStars(platform.rating)}
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>

        {/* How to Choose */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right Affordable Option</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-3">Factors to Consider</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">True Cost Analysis</span>
                    <p class="text-gray-600">Compare the total cost over time, not just weekly rates. Consider billing frequency and minimum commitments.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <MessageSquare class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Communication Preferences</span>
                    <p class="text-gray-600">Determine which communication methods (text, video, phone) are most important to you.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <Users class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Therapist Qualifications</span>
                    <p class="text-gray-600">Ensure the platform uses licensed professionals with appropriate credentials for your needs.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <Brain class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Therapeutic Approach</span>
                    <p class="text-gray-600">Consider if you prefer a specific therapy method (CBT, psychodynamic, etc.) or want a platform with multiple options.</p>
                  </div>
                </li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-3">Red Flags to Watch For</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Unclear Pricing</span>
                    <p class="text-gray-600">Be wary of platforms that don't clearly disclose all costs upfront or have hidden fees.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Difficult Cancellation</span>
                    <p class="text-gray-600">Check cancellation policies before signing up. Some platforms make it difficult to cancel subscriptions.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Unverified Therapists</span>
                    <p class="text-gray-600">Avoid platforms that don't verify therapist credentials or use unlicensed "coaches" instead of professionals.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Poor Privacy Practices</span>
                    <p class="text-gray-600">Ensure the platform has strong privacy policies and secure, HIPAA-compliant communication.</p>
                  </div>
                </li>
              </ul>
            </div>
          </div>
          
          <div class="mt-8 bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Recommendation</h3>
            <p class="text-gray-700 mb-4">
              For most people seeking affordable alternatives to BetterHelp, we recommend:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Calmerry</strong> for those wanting a similar experience to BetterHelp at a lower price point</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Online-Therapy.com</strong> for those who prefer a structured CBT approach with additional resources</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>7 Cups</strong> for those on an extremely tight budget who need immediate emotional support</span>
              </li>
            </ul>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">Find Your Perfect Affordable Therapy Match</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the most affordable therapy option that meets your specific needs and budget.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/budget-friendly-finder" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find Affordable Therapy</a>
            <a href="/tools/assessments/mental-health-assessment" class="border-white text-white hover:bg-white hover:bg-opacity-10">Take Mental Health Assessment</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
