---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Star, CheckCircle, XCircle, ArrowRight, ExternalLink, MessageSquare, Video, Phone, Calendar, DollarSign, Shield, Users, Brain, Search, Pill } from 'lucide-react';

const platforms = [];
const features = [];

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};

---

<BaseLayout>
<div class="bg-gray-50 min-h-screen">
      <div class="sb-container py-12">
        {/* Hero Section */}
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Top Talkspace Alternatives in 2025</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Discover the best alternatives to Talkspace for online therapy, medication management, and comprehensive mental healthcare.
          </p>
          <div class="flex justify-center">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find your perfect therapy match</a>
          </div>
        </div>

        {/* Talkspace Context */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Talkspace Overview</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-3">What Talkspace Offers</h3>
              <p class="text-gray-600 mb-4">
                Talkspace is a leading online therapy platform that offers text, audio, and video therapy sessions with licensed therapists, plus psychiatric services for medication management.
              </p>
              <div class="bg-gray-50 rounded-lg p-4 mb-4">
                <div class="flex items-center mb-2">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                  <span class="font-bold text-gray-800">Standard Plans: $65-$99/week</span>
                </div>
                <ul class="space-y-1 text-gray-600 pl-7">
                  <li>• Messaging Therapy: $65/week</li>
                  <li>• Messaging + Live: $79/week</li>
                  <li>• Messaging + Live + Workshops: $99/week</li>
                  <li>• Psychiatry: $249 initial evaluation, $125 follow-ups</li>
                </ul>
              </div>
              <p class="text-gray-600">
                Talkspace accepts insurance from many major providers, which can significantly reduce out-of-pocket costs for eligible users.
              </p>
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-3">Why Consider Alternatives?</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Cost Considerations</span>
                    <p class="text-gray-600">Talkspace can be expensive, especially for psychiatric services. Some alternatives offer more affordable options.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <Pill class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Medication Management</span>
                    <p class="text-gray-600">If you need medication, some platforms offer more comprehensive or affordable psychiatric services.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <Users class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Therapist Matching</span>
                    <p class="text-gray-600">Different platforms have different therapist networks and matching systems that may better suit your needs.</p>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>

        {/* Top Talkspace Alternatives */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Top Alternatives to Talkspace</h2>
          
          {platforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class="mr-2">
                        {renderStars(platform.rating)}
                      </div>
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                        <span class="text-gray-600">{platform.price}</span>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <button class="w-full min-w-0 justify-center">Read full review</button>
                      <button class="w-full min-w-0 justify-center">Visit Website</button>
                    </div>
                  </div>
                  
                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-gray-800 mb-3">Why It's a Good Alternative</h4>
                    <p class="text-gray-600 mb-6">
                      {platform.description}
                    </p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Pros vs. Talkspace</h5>
                        <ul class="space-y-2">
                          {platform.pros.map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                      
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Cons vs. Talkspace</h5>
                        <ul class="space-y-2">
                          {platform.cons.map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                    
                    <div>
                      <h5 class="font-bold text-gray-800 mb-3">Key Features</h5>
                      <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                        {platform.features.map((feature, i) => (
                          <div key={i} class="bg-gray-50 rounded-lg p-3 flex items-center">
                            <CheckCircle class="h-4 w-4 text-indigo-600 mr-2 flex-shrink-0" />
                            <span class="text-gray-700 text-sm">{feature}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                    
                    <div class="mt-6 bg-indigo-50 rounded-lg p-4">
                      <h5 class="font-bold text-gray-800 mb-2">Best For</h5>
                      <p class="text-gray-700">{platform.bestFor}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* Specialized Alternatives */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Specialized Talkspace Alternatives</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">For Couples Therapy</h3>
              <p class="text-gray-600 mb-4">
                If you're specifically looking for relationship counseling, ReGain specializes in couples therapy with licensed therapists.
              </p>
              <div class="flex items-center mb-3">
                <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                <span class="text-gray-600">$60-$90/week</span>
              </div>
              <a href="/reviews/platforms/regain" class="text-indigo-600 hover:text-indigo-800 flex items-center">
                Read ReGain review <ArrowRight class="h-4 w-4 ml-1" />
              </a>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Shield class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">For LGBTQ+ Community</h3>
              <p class="text-gray-600 mb-4">
                Pride Counseling offers specialized therapy for LGBTQ+ individuals with therapists experienced in related issues.
              </p>
              <div class="flex items-center mb-3">
                <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                <span class="text-gray-600">$60-$90/week</span>
              </div>
              <a href="/reviews/platforms/pride-counseling" class="text-indigo-600 hover:text-indigo-800 flex items-center">
                Read Pride Counseling review <ArrowRight class="h-4 w-4 ml-1" />
              </a>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Brain class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">For CBT Focus</h3>
              <p class="text-gray-600 mb-4">
                Online-Therapy.com specializes in cognitive behavioral therapy (CBT) with structured programs and additional resources.
              </p>
              <div class="flex items-center mb-3">
                <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                <span class="text-gray-600">$40-$88/week</span>
              </div>
              <a href="/reviews/platforms/online-therapy" class="text-indigo-600 hover:text-indigo-800 flex items-center">
                Read Online-Therapy.com review <ArrowRight class="h-4 w-4 ml-1" />
              </a>
            </div>
          </div>
        </div>

        {/* Comparison Table */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Talkspace vs Alternatives: Quick Comparison</h2>
          
          <div class="overflow-x-auto">
            <table class="min-w-full min-w-0 bg-white">
              <thead>
                <tr class="bg-gray-100 border-b">
                  <th class="py-3 px-4 text-left text-gray-700 font-semibold">Platform</th>
                  <th class="py-3 px-4 text-center text-gray-700 font-semibold">Price Range</th>
                  <th class="py-3 px-4 text-center text-gray-700 font-semibold">Communication Methods</th>
                  <th class="py-3 px-4 text-center text-gray-700 font-semibold">Insurance</th>
                  <th class="py-3 px-4 text-center text-gray-700 font-semibold">Medication</th>
                  <th class="py-3 px-4 text-center text-gray-700 font-semibold">Rating</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-3 px-4 font-medium">Talkspace</td>
                  <td class="py-3 px-4 text-center">$65-$99/week</td>
                  <td class="py-3 px-4 text-center">
                    <div class="flex justify-center space-x-1">
                      <MessageSquare class="h-4 w-4 text-indigo-600" aria-label="Messaging" />
                      <Video class="h-4 w-4 text-indigo-600" aria-label="Video" />
                      <Phone class="h-4 w-4 text-indigo-600" aria-label="Phone" />
                    </div>
                  </td>
                  <td class="py-3 px-4 text-center">
                    <CheckCircle class="h-5 w-5 text-green-500 mx-auto" />
                  </td>
                  <td class="py-3 px-4 text-center">
                    <CheckCircle class="h-5 w-5 text-green-500 mx-auto" />
                  </td>
                  <td class="py-3 px-4 text-center">
                    <div class="flex justify-center">
                      {renderStars(4.3)}
                    </div>
                  </td>
                </tr>
                
                {platforms.map(platform => (
                  <tr key={platform.slug} class="border-b hover:bg-gray-50">
                    <td class="py-3 px-4 font-medium">{platform.name}</td>
                    <td class="py-3 px-4 text-center">{platform.price}</td>
                    <td class="py-3 px-4 text-center">
                      <div class="flex justify-center space-x-1">
                        <MessageSquare class="h-4 w-4 text-indigo-600" aria-label="Messaging" />
                        <Video class="h-4 w-4 text-indigo-600" aria-label="Video" />
                        {platform.slug === 'betterhelp' && (
                          <Phone class="h-4 w-4 text-indigo-600" aria-label="Phone" />
                        )}
                      </div>
                    </td>
                    <td class="py-3 px-4 text-center">
                      {platform.slug === 'betterhelp' ? (
                        <XCircle class="h-5 w-5 text-red-500 mx-auto" />
                      ) : (
                        <CheckCircle class="h-5 w-5 text-green-500 mx-auto" />
                      )}
                    </td>
                    <td class="py-3 px-4 text-center">
                      {platform.slug === 'betterhelp' ? (
                        <XCircle class="h-5 w-5 text-red-500 mx-auto" />
                      ) : (
                        <CheckCircle class="h-5 w-5 text-green-500 mx-auto" />
                      )}
                    </td>
                    <td class="py-3 px-4 text-center">
                      <div class="flex justify-center">
                        {renderStars(platform.rating)}
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>

        {/* How to Choose */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right Alternative to Talkspace</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-3">Consider Your Primary Needs</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Budget Constraints</span>
                    <p class="text-gray-600">If cost is your main concern, BetterHelp offers similar services at a lower price point, especially with financial aid.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <Pill class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Medication Needs</span>
                    <p class="text-gray-600">If you need medication management, Cerebral and Brightside offer more affordable options than Talkspace's psychiatry services.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <Shield class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Insurance Coverage</span>
                    <p class="text-gray-600">If using insurance is essential, Brightside and Cerebral accept many plans, similar to Talkspace.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <Brain class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Specific Conditions</span>
                    <p class="text-gray-600">For specific conditions like depression or anxiety, specialized platforms like Brightside may offer more targeted treatment.</p>
                  </div>
                </li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-3">Questions to Ask Yourself</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Do I need medication management?</span>
                    <p class="text-gray-600">If yes, consider Cerebral or Brightside. If no, BetterHelp may be a more cost-effective option.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Do I have insurance that covers mental health?</span>
                    <p class="text-gray-600">If yes, check if Brightside or Cerebral accepts your plan, as they may offer better coverage than Talkspace.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">What communication methods are most important to me?</span>
                    <p class="text-gray-600">If you value phone sessions, BetterHelp offers these while some other alternatives don't.</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <span class="font-bold text-gray-800">Do I prefer a structured approach or flexibility?</span>
                    <p class="text-gray-600">Brightside offers more structure, while BetterHelp provides more flexibility in therapy approaches.</p>
                  </div>
                </li>
              </ul>
            </div>
          </div>
          
          <div class="mt-8 bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Recommendations</h3>
            <p class="text-gray-700 mb-4">
              Based on your specific needs, we recommend:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>BetterHelp</strong> if you're looking for affordable therapy without medication needs</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Cerebral</strong> if you want comprehensive care with both therapy and medication at a lower cost than Talkspace</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Brightside</strong> if you specifically need treatment for depression or anxiety with a data-driven approach</span>
              </li>
            </ul>
          </div>
        </div>

        {/* Direct Comparisons */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Head-to-Head Comparisons with Talkspace</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <a href="/compare/platforms/talkspace-vs-betterhelp" class="bg-gray-50 rounded-lg p-4 hover:bg-gray-100 transition">
              <h3 class="font-bold text-gray-800 mb-2">Talkspace vs BetterHelp</h3>
              <p class="text-gray-600 text-sm mb-3">Detailed comparison of the two largest online therapy platforms.</p>
              <div class="flex justify-between items-center">
                <span class="text-indigo-600 text-sm">Read comparison</span>
                <ArrowRight class="h-4 w-4 text-indigo-600" />
              </div>
            </a>
            
            <a href="/compare/platforms/talkspace-vs-cerebral" class="bg-gray-50 rounded-lg p-4 hover:bg-gray-100 transition">
              <h3 class="font-bold text-gray-800 mb-2">Talkspace vs Cerebral</h3>
              <p class="text-gray-600 text-sm mb-3">Compare these platforms' approaches to therapy and medication management.</p>
              <div class="flex justify-between items-center">
                <span class="text-indigo-600 text-sm">Read comparison</span>
                <ArrowRight class="h-4 w-4 text-indigo-600" />
              </div>
            </a>
            
            <a href="/compare/platforms/talkspace-vs-online-therapy" class="bg-gray-50 rounded-lg p-4 hover:bg-gray-100 transition">
              <h3 class="font-bold text-gray-800 mb-2">Talkspace vs Online-Therapy.com</h3>
              <p class="text-gray-600 text-sm mb-3">See how Talkspace compares to a CBT-focused alternative.</p>
              <div class="flex justify-between items-center">
                <span class="text-indigo-600 text-sm">Read comparison</span>
                <ArrowRight class="h-4 w-4 text-indigo-600" />
              </div>
            </a>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">Find Your Perfect Therapy Match</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the online therapy platform that best fits your unique needs, preferences, and budget.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find Your Perfect Match</a>
            <a href="/tools/assessments/mental-health-assessment" class="border-white text-white hover:bg-white hover:bg-opacity-10">Take Mental Health Assessment</a>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
