---
import BaseLayout from '../../../layouts/BaseLayout.astro';
---

<BaseLayout title="Client Success Story | RealMindSolutions" description="Client Success Story">
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Client Success Story</h1>
      <p class="font-serif italic text-lg md:text-xl text-neutral-600">Real stories of therapy success.</p>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="prose prose-lg max-w-4xl">
        <p>Content coming soon...</p>
      </div>
    </div>
  </section>
</BaseLayout>