---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { Calendar, User, Tag, Clock, ArrowRight, Heart, MessageCircle } from 'lucide-react';
---

<BaseLayout>
<BlogLayout>
      {/* Breadcrumb */}
      <div class="flex items-center text-sm text-gray-500 mb-6">
        <a href="/" class="hover:text-indigo-600">Home</a>
        <span class="mx-2">/</span>
        <a href="/blog" class="hover:text-indigo-600">Blog</a>
        <span class="mx-2">/</span>
        <span class="text-gray-700">Stories</span>
      </div>

      {/* Page Header */}
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Mental Health Stories & Experiences</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Real-life accounts, personal journeys, and insights from therapists, clients, and mental health advocates.
        </p>
      </div>

      {/* Featured Story */}
      <div class="bg-white rounded-lg shadow-md overflow-hidden mb-12">
        <div class="md:flex">
          <div class="md:w-1/2">
            <img 
              src={featuredStory.image} 
              alt={featuredStory.title} 
              class="w-full min-w-0 h-full object-cover"
            />
          </div>
          <div class="p-8 md:w-1/2">
            <div class="flex flex-wrap items-center text-sm text-gray-500 mb-3">
              <div class="flex items-center mr-4 mb-2 sm:mb-0">
                <Calendar class="h-4 w-4 mr-1" />
                <span>{featuredStory.date}</span>
              </div>
              <div class="flex items-center mr-4 mb-2 sm:mb-0">
                <User class="h-4 w-4 mr-1" />
                <span>{featuredStory.author}</span>
              </div>
              <div class="flex items-center mb-2 sm:mb-0">
                <Clock class="h-4 w-4 mr-1" />
                <span>{featuredStory.readTime}</span>
              </div>
            </div>
            
            <h2 class="text-2xl font-bold text-gray-800 mb-4">
              <Link to={featuredStory.url} class="hover:text-indigo-600">
                {featuredStory.title}
              </a>
            </h2>
            
            <p class="text-gray-600 mb-6">
              {featuredStory.excerpt}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-6">
              {featuredStory.tags.map((tag) => (
                <span key={tag} class="bg-indigo-100 text-indigo-800 text-sm font-medium px-2.5 py-0.5 rounded">
                  {tag}
                </span>
              ))}
            </div>
            
            <Link 
              to={featuredStory.url} 
              class="inline-flex items-center text-indigo-600 hover:text-indigo-800"
            >
              Read full story <ArrowRight class="h-4 w-4 ml-1" />
            </a>
          </div>
        </div>
      </div>

      {/* Story Grid */}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        {otherStories.map((story) => (
          <div key={story.id} class="bg-white rounded-lg shadow-md overflow-hidden">
            <img 
              src={story.image} 
              alt={story.title} 
              class="w-full min-w-0 h-48 object-cover"
            />
            <div class="p-6">
              <div class="flex flex-wrap items-center text-sm text-gray-500 mb-3">
                <div class="flex items-center mr-4 mb-2 sm:mb-0">
                  <Calendar class="h-4 w-4 mr-1" />
                  <span>{story.date}</span>
                </div>
                <div class="flex items-center mb-2 sm:mb-0">
                  <Clock class="h-4 w-4 mr-1" />
                  <span>{story.readTime}</span>
                </div>
              </div>
              
              <h3 class="text-xl font-bold text-gray-800 mb-3">
                <Link to={story.url} class="hover:text-indigo-600">
                  {story.title}
                </a>
              </h3>
              
              <p class="text-gray-600 mb-4">
                {story.excerpt}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-4">
                {story.tags.map((tag) => (
                  <span key={tag} class="bg-indigo-100 text-indigo-800 text-sm font-medium px-2.5 py-0.5 rounded">
                    {tag}
                  </span>
                ))}
              </div>
              
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-500">{story.author}</span>
                <Link 
                  to={story.url} 
                  class="inline-flex items-center text-indigo-600 hover:text-indigo-800"
                >
                  Read more <ArrowRight class="h-4 w-4 ml-1" />
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      {/* Story Categories */}
      <div class="bg-white rounded-lg shadow-md p-8 mb-12">
        <h3 class="text-xl font-bold text-gray-800 mb-6">Browse Stories by Category</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          <div class="bg-pink-50 rounded-lg p-6 text-center">
            <Heart class="h-8 w-8 text-pink-600 mx-auto mb-3" />
            <h4 class="font-bold text-gray-800 mb-2">Personal Journeys</h4>
            <p class="text-sm text-gray-600 mb-3">Stories of individual mental health experiences and recovery</p>
            <a href="#" class="text-pink-600 hover:text-pink-800 text-sm font-medium">
              View stories <ArrowRight class="h-3 w-3 inline ml-1" />
            </a>
          </div>
          
          <div class="bg-blue-50 rounded-lg p-6 text-center">
            <MessageCircle class="h-8 w-8 text-blue-600 mx-auto mb-3" />
            <h4 class="font-bold text-gray-800 mb-2">Therapist Perspectives</h4>
            <p class="text-sm text-gray-600 mb-3">Insights and experiences from mental health professionals</p>
            <a href="#" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
              View stories <ArrowRight class="h-3 w-3 inline ml-1" />
            </a>
          </div>
          
          <div class="bg-green-50 rounded-lg p-6 text-center">
            <User class="h-8 w-8 text-green-600 mx-auto mb-3" />
            <h4 class="font-bold text-gray-800 mb-2">Client Experiences</h4>
            <p class="text-sm text-gray-600 mb-3">First-hand accounts of therapy and mental health treatment</p>
            <a href="#" class="text-green-600 hover:text-green-800 text-sm font-medium">
              View stories <ArrowRight class="h-3 w-3 inline ml-1" />
            </a>
          </div>
        </div>
      </div>

      {/* Share Your Story */}
      <div class="bg-indigo-50 rounded-lg p-8 text-center mb-12">
        <h3 class="text-2xl font-bold text-gray-800 mb-4">Share Your Story</h3>
        <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
          Your experience matters. If you'd like to share your mental health journey or insights as a therapist, we'd love to hear from you.
        </p>
        <button class="bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700 transition duration-200">
          Submit Your Story
        </button>
        <p class="text-sm text-gray-500 mt-4">
          All submissions are reviewed by our editorial team. We prioritize diverse perspectives and authentic experiences.
        </p>
      </div>
    </BlogLayout>
</BaseLayout>
