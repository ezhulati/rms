---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { Calendar, User, Tag, Clock, ArrowRight } from 'lucide-react';
---

<BaseLayout>
<BlogLayout>
      {/* Breadcrumb */}
      <div class="flex items-center text-sm text-gray-500 mb-6">
        <a href="/" class="hover:text-indigo-600">Home</a>
        <span class="mx-2">/</span>
        <a href="/blog" class="hover:text-indigo-600">Blog</a>
        <span class="mx-2">/</span>
        <span class="text-gray-700">News</span>
      </div>

      {/* Page Header */}
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Mental Health News</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Stay updated with the latest research, policy changes, and industry developments in the mental health and online therapy space.
        </p>
      </div>

      {/* Featured Article */}
      <div class="bg-white rounded-lg shadow-md overflow-hidden mb-12">
        <div class="md:flex">
          <div class="md:w-1/2">
            <img 
              src={featuredArticle.image} 
              alt={featuredArticle.title} 
              class="w-full min-w-0 h-full object-cover"
            />
          </div>
          <div class="p-8 md:w-1/2">
            <div class="flex flex-wrap items-center text-sm text-gray-500 mb-3">
              <div class="flex items-center mr-4 mb-2 sm:mb-0">
                <Calendar class="h-4 w-4 mr-1" />
                <span>{featuredArticle.date}</span>
              </div>
              <div class="flex items-center mr-4 mb-2 sm:mb-0">
                <User class="h-4 w-4 mr-1" />
                <span>{featuredArticle.author}</span>
              </div>
              <div class="flex items-center mb-2 sm:mb-0">
                <Clock class="h-4 w-4 mr-1" />
                <span>{featuredArticle.readTime}</span>
              </div>
            </div>
            
            <h2 class="text-2xl font-bold text-gray-800 mb-4">
              <Link to={featuredArticle.url} class="hover:text-indigo-600">
                {featuredArticle.title}
              </a>
            </h2>
            
            <p class="text-gray-600 mb-6">
              {featuredArticle.excerpt}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-6">
              {featuredArticle.tags.map((tag) => (
                <span key={tag} class="bg-indigo-100 text-indigo-800 text-sm font-medium px-2.5 py-0.5 rounded">
                  {tag}
                </span>
              ))}
            </div>
            
            <Link 
              to={featuredArticle.url} 
              class="inline-flex items-center text-indigo-600 hover:text-indigo-800"
            >
              Read full article <ArrowRight class="h-4 w-4 ml-1" />
            </a>
          </div>
        </div>
      </div>

      {/* Article Grid */}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        {otherArticles.map((article) => (
          <div key={article.id} class="bg-white rounded-lg shadow-md overflow-hidden">
            <img 
              src={article.image} 
              alt={article.title} 
              class="w-full min-w-0 h-48 object-cover"
            />
            <div class="p-6">
              <div class="flex flex-wrap items-center text-sm text-gray-500 mb-3">
                <div class="flex items-center mr-4 mb-2 sm:mb-0">
                  <Calendar class="h-4 w-4 mr-1" />
                  <span>{article.date}</span>
                </div>
                <div class="flex items-center mb-2 sm:mb-0">
                  <Clock class="h-4 w-4 mr-1" />
                  <span>{article.readTime}</span>
                </div>
              </div>
              
              <h3 class="text-xl font-bold text-gray-800 mb-3">
                <Link to={article.url} class="hover:text-indigo-600">
                  {article.title}
                </a>
              </h3>
              
              <p class="text-gray-600 mb-4">
                {article.excerpt}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-4">
                {article.tags.map((tag) => (
                  <span key={tag} class="bg-indigo-100 text-indigo-800 text-sm font-medium px-2.5 py-0.5 rounded">
                    {tag}
                  </span>
                ))}
              </div>
              
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-500">{article.author}</span>
                <Link 
                  to={article.url} 
                  class="inline-flex items-center text-indigo-600 hover:text-indigo-800"
                >
                  Read more <ArrowRight class="h-4 w-4 ml-1" />
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      {/* Newsletter */}
      <div class="bg-indigo-50 rounded-lg p-8 text-center mb-12">
        <h3 class="text-2xl font-bold text-gray-800 mb-4">Stay Updated on Mental Health News</h3>
        <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
          Subscribe to our newsletter to receive the latest research findings, policy updates, and industry news delivered straight to your inbox.
        </p>
        <div class="flex flex-col sm:flex-row max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="whitespace-nowrap flex-grow px-4 py-2 mb-2 sm:mb-0 sm:mr-2 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
          <button class="whitespace-nowrap bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition duration-200">
            Subscribe
          </button>
        </div>
        <p class="text-sm text-gray-500 mt-4">
          We respect your privacy. Unsubscribe at any time.
        </p>
      </div>

      {/* Categories */}
      <div class="bg-white rounded-lg shadow-md p-8">
        <h3 class="text-xl font-bold text-gray-800 mb-6">Browse by Category</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <a href="#" class="bg-indigo-100 text-indigo-800 rounded-md p-4 text-center hover:bg-indigo-200 transition duration-200">
            Research
          </a>
          <a href="#" class="bg-blue-100 text-blue-800 rounded-md p-4 text-center hover:bg-blue-200 transition duration-200">
            Technology
          </a>
          <a href="#" class="bg-green-100 text-green-800 rounded-md p-4 text-center hover:bg-green-200 transition duration-200">
            Policy
          </a>
          <a href="#" class="bg-purple-100 text-purple-800 rounded-md p-4 text-center hover:bg-purple-200 transition duration-200">
            Industry
          </a>
          <a href="#" class="bg-red-100 text-red-800 rounded-md p-4 text-center hover:bg-red-200 transition duration-200">
            Global Health
          </a>
          <a href="#" class="bg-yellow-100 text-yellow-800 rounded-md p-4 text-center hover:bg-yellow-200 transition duration-200">
            Statistics
          </a>
          <a href="#" class="bg-pink-100 text-pink-800 rounded-md p-4 text-center hover:bg-pink-200 transition duration-200">
            Interviews
          </a>
          <a href="#" class="bg-gray-100 text-gray-800 rounded-md p-4 text-center hover:bg-gray-200 transition duration-200">
            Opinion
          </a>
        </div>
      </div>
    </BlogLayout>
</BaseLayout>
