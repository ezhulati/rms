---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { Calendar, User, Tag, Clock, ArrowRight } from 'lucide-react';

const featuredArticle = {
  image: '/images/blog/ai-therapy.jpg',
  title: 'AI-Powered Mental Health Tools: Promise and Concerns',
  date: 'Jan 28, 2025',
  author: 'Dr. Michael Chen',
  readTime: '8 min read',
  excerpt: 'Artificial intelligence is transforming mental health care with chatbots, diagnostic tools, and therapy assistants. Experts weigh in on the potential benefits and ethical concerns of this rapidly evolving technology.',
  url: '/blog/news/ai-therapy-tools',
  tags: ['Technology', 'AI', 'Innovation', 'Ethics']
};
const newsArticles = [
  {
    id: 'ai-therapy-tools',
    image: '/images/blog/ai-therapy.jpg',
    title: 'AI-Powered Mental Health Tools: Promise and Concerns',
    date: 'Jan 28, 2025',
    author: 'Dr. Michael Chen',
    readTime: '8 min read',
    excerpt: 'Artificial intelligence is transforming mental health care with chatbots, diagnostic tools, and therapy assistants. Experts weigh in on the potential benefits and ethical concerns of this rapidly evolving technology.',
