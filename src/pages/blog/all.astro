---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ArrowRight, Calendar, User, Tag, Search, Filter } from 'lucide-react';
---

<BaseLayout>
<div class="bg-gray-50 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          {/* Header */}
          <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-800 mb-4">All Blog Articles</h1>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Browse our complete collection of articles, guides, and stories on mental health topics.
            </p>
          </div>
          
          {/* Search and Filter */}
          <div class="bg-white rounded-lg shadow-md p-6 mb-10">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
              <div class="relative flex-grow">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <Search class="h-5 w-5 text-gray-400" />
                </div>
                <input
                  type="text"
                  placeholder="Search articles..."
                  class="whitespace-nowrap pl-10 pr-4 py-3 px-4 sm:px-6 lg:px-8 border border-gray-300 rounded-md w-full min-w-0 focus:outline-none focus:ring-2 focus:ring-indigo-500 bg-white text-gray-800 shadow-sm transition-all duration-200 hover:border-indigo-300 text-base"
                  value={searchTerm}
                  onChange={(e) => setSearchTerm(e.target.value)}
                />
              </div>
              
              <div class="flex items-center">
                <Filter class="h-5 w-5 text-gray-500 mr-2" />
                <span class="text-gray-700 mr-2">Filter by:</span>
                <select
                  class="whitespace-nowrap border border-gray-300 rounded-md px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 bg-white text-gray-800 shadow-sm transition-all duration-200 hover:border-indigo-300 cursor-pointer appearance-none pr-8 text-base font-medium"
                  value={selectedCategory}
                  onChange={(e) => setSelectedCategory(e.target.value)}
                  style={{ backgroundImage: "url(\"data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e\")", backgroundPosition: "right 0.5rem center", backgroundRepeat: "no-repeat", backgroundSize: "1.5em 1.5em", paddingRight: "2.5rem" }}
                >
                  <option value="all">All Categories</option>
                  <option value="news">News & Research</option>
                  <option value="stories">Stories & Interviews</option>
                  <option value="guides">Practical Guides</option>
                </select>
              </div>
            </div>
          </div>
          
          {/* Results Count */}
          <div class="mb-6">
            <p class="text-gray-600">
              Showing {filteredPosts.length} of {blogPosts.length} articles
            </p>
          </div>
          
          {/* Blog Posts Grid */}
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
            {filteredPosts.map(post => (
              <div key={post.id} class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
                <img 
                  src={post.image} 
                  alt={post.title} 
                  class="w-full min-w-0 h-48 object-cover"
                />
                <div class="p-6 flex-grow">
                  <div class="flex items-center mb-2">
                    <span class={`text-sm font-medium px-2 py-1 rounded ${
                      post.category === 'news' ? 'bg-blue-100 text-blue-800' : 
                      post.category === 'stories' ? 'bg-green-100 text-green-800' : 
                      'bg-purple-100 text-purple-800'
                    }`}>
                      {post.categoryLabel}
                    </span>
                  </div>
                  <h2 class="text-xl font-bold text-gray-800 mb-2">{post.title}</h2>
                  <p class="text-gray-600 mb-4">{post.excerpt}</p>
                  
                  <div class="flex items-center text-sm text-gray-500 mb-4">
                    <Calendar class="h-4 w-4 mr-1" />
                    <span class="mr-4">{post.date}</span>
                    <User class="h-4 w-4 mr-1" />
                    <span>{post.author}</span>
                  </div>
                  
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.tags.map(tag => (
                      <span 
                        key={tag} 
                        class="whitespace-nowrap text-sm bg-gray-100 text-gray-800 px-2 py-1 rounded-full hover:bg-gray-200 cursor-pointer"
                        onClick={() => setSearchTerm(tag)}
                      >
                        #{tag}
                      </span>
                    ))}
                  </div>
                </div>
                <div class="px-6 pb-6">
                  <Link 
                    to={post.url} 
                    class="text-indigo-600 font-medium flex items-center hover:text-indigo-800 bg-indigo-50 px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-100 transition-all duration-200 inline-flex w-auto"
                  >
                    Read full article <ArrowRight class="h-4 w-4 ml-1" />
                  </a>
                </div>
              </div>
            ))}
          </div>
          
          {/* No Results */}
          {filteredPosts.length === 0 && (
            <div class="text-center py-12 px-4 sm:px-6 lg:px-8">
              <h3 class="text-xl font-bold text-gray-800 mb-2">No articles found</h3>
              <p class="text-gray-600 mb-4">
                Try adjusting your search terms or filters to find what you're looking for.
              </p>
              <button 
                class="whitespace-nowrap text-indigo-600 font-medium bg-indigo-50 px-4 py-2 rounded-md hover:bg-indigo-100 transition-all duration-200 shadow-sm border border-indigo-100"
                onClick={() => {
                  setSearchTerm('');
                  setSelectedCategory('all');
                }}
              >
                Clear all filters
              </button>
            </div>
          )}
          
          {/* Newsletter */}
          <div class="blog-newsletter">
            <h3 class="blog-newsletter-title">Subscribe to Our Newsletter</h3>
            <p class="blog-newsletter-description">
              Stay up-to-date with the latest mental health news, research, and resources delivered straight to your inbox.
            </p>
            <div class="blog-newsletter-form">
              <input 
                type="email" 
                placeholder="Your email address" 
                class="blog-newsletter-input"
              />
              <button class="blog-newsletter-button">
                Subscribe
              </button>
            </div>
            <p class="blog-newsletter-privacy">
              We respect your privacy. Unsubscribe at any time.
            </p>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
