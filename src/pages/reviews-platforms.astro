---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ArrowRight, Star, ExternalLink, Search, Filter, CheckCircle, XCircle, MessageSquare, Video, Phone, DollarSign, Shield, Users, Brain } from 'lucide-react';

const platforms = [];
---

<BaseLayout>
<div class="bg-gray-50 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        {/* Hero Section */}
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Online Therapy Platform Reviews</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            In-depth, unbiased reviews of the leading online therapy platforms to help you make an informed decision about your mental health care.
          </p>
          <div class="flex justify-center">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find your perfect therapy match</a>
          </div>
        </div>

        {/* Filter Section */}
        <div class="bg-white rounded-lg shadow-md p-6 mb-10">
          <div class="flex items-center mb-4">
            <Filter class="h-5 w-5 text-indigo-600 mr-2" />
            <h2 class="text-xl font-bold text-gray-800">Filter Reviews</h2>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
              <label htmlFor="condition" class="block text-sm font-medium text-gray-700 mb-1">Condition</label>
              <select 
                id="condition" 
                class="w-full min-w-0 border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
              >
                <option value="">All Conditions</option>
                <option value="anxiety">Anxiety</option>
                <option value="depression">Depression</option>
                <option value="ptsd">PTSD</option>
                <option value="relationships">Relationships</option>
                <option value="addiction">Addiction</option>
              </select>
            </div>
            
            <div>
              <label htmlFor="price" class="block text-sm font-medium text-gray-700 mb-1">Price Range</label>
              <select 
                id="price" 
                class="w-full min-w-0 border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
              >
                <option value="">All Prices</option>
                <option value="budget">Budget ($40-$60/week)</option>
                <option value="moderate">Moderate ($60-$80/week)</option>
                <option value="premium">Premium ($80+/week)</option>
              </select>
            </div>
            
            <div>
              <label htmlFor="insurance" class="block text-sm font-medium text-gray-700 mb-1">Insurance</label>
              <select 
                id="insurance" 
                class="w-full min-w-0 border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
              >
                <option value="">All Options</option>
                <option value="yes">Accepts Insurance</option>
                <option value="no">No Insurance Required</option>
              </select>
            </div>
            
            <div>
              <label htmlFor="medication" class="block text-sm font-medium text-gray-700 mb-1">Medication</label>
              <select 
                id="medication" 
                class="w-full min-w-0 border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
              >
                <option value="">All Options</option>
                <option value="yes">Offers Medication</option>
                <option value="no">Therapy Only</option>
              </select>
            </div>
          </div>
          
          <div class="mt-4 flex justify-center">
            <button class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Apply Filters</button>
          </div>
        </div>

        {/* Featured Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Featured Platform Reviews</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {/* BetterHelp Featured Review */}
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="md:flex">
                <div class="md:w-2/5">
                  <img 
                    src="/images/concepts/reviewsplatforms.jpg" 
                    alt="Online therapy and mental health support" 
                    class="w-full min-w-0 h-full object-cover"
                  />
                </div>
                <div class="p-6 md:w-3/5">
                  <div class="flex items-center mb-2">
                    <h3 class="text-xl font-bold text-gray-800 mr-3">BetterHelp</h3>
                    <div class="flex items-center">
                      <div class="mr-1">
                        {renderStars(4)}
                      </div>
                      <span class="text-gray-600">4.0/5</span>
                    </div>
                  </div>
                  
                  <p class="text-gray-600 mb-4">
                    The world's largest online therapy platform, offering messaging, phone, and video sessions on a subscription model.
                  </p>
                  
                  <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                      <h4 class="font-bold text-gray-800 mb-1 text-sm">Pros</h4>
                      <ul class="space-y-1">
                        <li class="flex items-start text-sm">
                          <CheckCircle class="h-4 w-4 text-green-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>Large therapist network</span>
                        </li>
                        <li class="flex items-start text-sm">
                          <CheckCircle class="h-4 w-4 text-green-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>Multiple communication methods</span>
                        </li>
                        <li class="flex items-start text-sm">
                          <CheckCircle class="h-4 w-4 text-green-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>Financial aid available</span>
                        </li>
                      </ul>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-800 mb-1 text-sm">Cons</h4>
                      <ul class="space-y-1">
                        <li class="flex items-start text-sm">
                          <XCircle class="h-4 w-4 text-red-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>No insurance coverage</span>
                        </li>
                        <li class="flex items-start text-sm">
                          <XCircle class="h-4 w-4 text-red-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>No medication management</span>
                        </li>
                        <li class="flex items-start text-sm">
                          <XCircle class="h-4 w-4 text-red-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>Response times can vary</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                  
                  <div class="flex items-center justify-between">
                    <div class="text-sm text-gray-600">
                      <strong>Price:</strong> $60-$90/week
                    </div>
                    <a href="/reviews/platforms/betterhelp" class="text-indigo-600 font-medium flex items-center hover:text-indigo-800 text-sm">
                      Read full review <ArrowRight class="h-4 w-4 ml-1" />
                    </a>
                  </div>
                </div>
              </div>
            </div>
            
            {/* Talkspace Featured Review */}
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="md:flex">
                <div class="md:w-2/5">
                  <img 
                    src="/images/concepts/reviewsplatforms.jpg" 
                    alt="Talkspace Review" 
                    class="w-full min-w-0 h-full object-cover"
                  />
                </div>
                <div class="p-6 md:w-3/5">
                  <div class="flex items-center mb-2">
                    <h3 class="text-xl font-bold text-gray-800 mr-3">Talkspace</h3>
                    <div class="flex items-center">
                      <div class="mr-1">
                        {renderStars(4.5)}
                      </div>
                      <span class="text-gray-600">4.5/5</span>
                    </div>
                  </div>
                  
                  <p class="text-gray-600 mb-4">
                    Online therapy and psychiatry via text, audio, and video sessions, with medication options and insurance coverage.
                  </p>
                  
                  <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                      <h4 class="font-bold text-gray-800 mb-1 text-sm">Pros</h4>
                      <ul class="space-y-1">
                        <li class="flex items-start text-sm">
                          <CheckCircle class="h-4 w-4 text-green-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>Insurance coverage</span>
                        </li>
                        <li class="flex items-start text-sm">
                          <CheckCircle class="h-4 w-4 text-green-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>Medication management</span>
                        </li>
                        <li class="flex items-start text-sm">
                          <CheckCircle class="h-4 w-4 text-green-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>Structured treatment plans</span>
                        </li>
                      </ul>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-800 mb-1 text-sm">Cons</h4>
                      <ul class="space-y-1">
                        <li class="flex items-start text-sm">
                          <XCircle class="h-4 w-4 text-red-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>Higher pricing</span>
                        </li>
                        <li class="flex items-start text-sm">
                          <XCircle class="h-4 w-4 text-red-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>No financial aid program</span>
                        </li>
                        <li class="flex items-start text-sm">
                          <XCircle class="h-4 w-4 text-red-500 mr-1 mt-0.5 flex-shrink-0" />
                          <span>Limited live sessions on basic plan</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                  
                  <div class="flex items-center justify-between">
                    <div class="text-sm text-gray-600">
                      <strong>Price:</strong> $65-$99/week
                    </div>
                    <a href="/reviews/platforms/talkspace" class="text-indigo-600 font-medium flex items-center hover:text-indigo-800 text-sm">
                      Read full review <ArrowRight class="h-4 w-4 ml-1" />
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* All Platform Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">All Platform Reviews</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {platforms.map((platform) => (
              <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden">
                <img 
                  src={platform.image} 
                  alt={`${platform.name} Review`} 
                  class="w-full min-w-0 h-48 object-cover"
                />
                <div class="p-6">
                  <div class="flex items-center justify-between mb-3">
                    <h3 class="text-xl font-bold text-gray-800">{platform.name}</h3>
                    <div class="flex items-center">
                      <div class="mr-1">
                        {renderStars(platform.rating)}
                      </div>
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                  </div>
                  
                  <p class="text-gray-600 mb-4">
                    {platform.description}
                  </p>
                  
                  <div class="mb-4">
                    <div class="text-sm text-gray-600 mb-1">
                      <strong>Price:</strong> {platform.price}
                    </div>
                    <div class="text-sm text-gray-600">
                      <strong>Best For:</strong> {platform.bestFor}
                    </div>
                  </div>
                  
                  <div class="flex justify-between items-center">
                    <Link to={`/reviews/platforms/${platform.slug}`} class="text-indigo-600 font-medium flex items-center hover:text-indigo-800">
                      Read review <ArrowRight class="h-4 w-4 ml-1" />
                    </a>
                    <a href={`https://www.${platform.slug}.com`} target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-gray-800 flex items-center text-sm">
                      Visit site <ExternalLink class="h-3 w-3 ml-1" />
                    </a>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        {/* Platform Categories */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Platform Categories</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {/* General Therapy Platforms */}
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="flex items-center mb-4">
                <div class="bg-indigo-100 rounded-full w-10 h-10 flex items-center justify-center mr-3">
                  <MessageSquare class="h-5 w-5 text-indigo-600" />
                </div>
                <h3 class="text-lg font-bold text-gray-800">General Therapy</h3>
              </div>
              <p class="text-gray-600 mb-4">
                Platforms offering a wide range of therapy services for various mental health conditions.
              </p>
              <ul class="space-y-2 mb-4">
                <li class="flex items-center">
                  <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                  <a href="/reviews/platforms/betterhelp" class="text-indigo-600 hover:text-indigo-800">
                    BetterHelp
                  </a>
                </li>
                <li class="flex items-center">
                  <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                  <a href="/reviews/platforms/talkspace" class="text-indigo-600 hover:text-indigo-800">
                    Talkspace
                  </a>
                </li>
                <li class="flex items-center">
                  <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                  <a href="/reviews/platforms/calmerry" class="text-indigo-600 hover:text-indigo-800">
                    Calmerry
                  </a>
                </li>
              </ul>
              <a href="/reviews/categories/general-therapy" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">View all general platforms</a>
            </div>
            
            {/* Medication + Therapy */}
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="flex items-center mb-4">
                <div class="bg-indigo-100 rounded-full w-10 h-10 flex items-center justify-center mr-3">
                  <Brain class="h-5 w-5 text-indigo-600" />
                </div>
                <h3 class="text-lg font-bold text-gray-800">Medication + Therapy</h3>
              </div>
              <p class="text-gray-600 mb-4">
                Platforms that offer both therapy and psychiatric medication management services.
              </p>
              <ul class="space-y-2 mb-4">
                <li class="flex items-center">
                  <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                  <a href="/reviews/platforms/talkspace" class="text-indigo-600 hover:text-indigo-800">
                    Talkspace
                  </a>
                </li>
                <li class="flex items-center">
                  <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                  <a href="/reviews/platforms/cerebral" class="text-indigo-600 hover:text-indigo-800">
                    Cerebral
                  </a>
                </li>
                <li class="flex items-center">
                  <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                  <a href="/reviews/platforms/brightside" class="text-indigo-600 hover:text-indigo-800">
                    Brightside
                  </a>
                </li>
              </ul>
              <a href="/reviews/categories/medication-therapy" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">View all medication platforms</a>
            </div>
            
            {/* Specialized Platforms */}
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="flex items-center mb-4">
                <div class="bg-indigo-100 rounded-full w-10 h-10 flex items-center justify-center mr-3">
                  <Users class="h-5 w-5 text-indigo-600" />
                </div>
                <h3 class="text-lg font-bold text-gray-800">Specialized Platforms</h3>
              </div>
              <p class="text-gray-600 mb-4">
                Platforms focusing on specific demographics, conditions, or therapy approaches.
              </p>
              <ul class="space-y-2 mb-4">
                <li class="flex items-center">
                  <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                  <a href="/reviews/platforms/regain" class="text-indigo-600 hover:text-indigo-800">
                    ReGain (Couples)
                  </a>
                </li>
                <li class="flex items-center">
                  <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                  <a href="/reviews/platforms/pride-counseling" class="text-indigo-600 hover:text-indigo-800">
                    Pride Counseling (LGBTQ+)
                  </a>
                </li>
                <li class="flex items-center">
                  <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                  <a href="/reviews/platforms/online-therapy-com" class="text-indigo-600 hover:text-indigo-800">
                    Online-Therapy.com (CBT)
                  </a>
                </li>
              </ul>
              <a href="/reviews/categories/specialized" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">View all specialized platforms</a>
            </div>
          </div>
        </div>

        {/* Comparison Table */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Platform Comparison</h2>
          
          <div class="overflow-x-auto">
            <table class="min-w-full min-w-0 bg-white">
              <thead>
                <tr class="bg-gray-100 border-b">
                  <th class="py-3 px-4 text-left text-gray-700 font-semibold">Platform</th>
                  <th class="py-3 px-4 text-left text-gray-700 font-semibold">Price Range</th>
                  <th class="py-3 px-4 text-left text-gray-700 font-semibold">Communication</th>
                  <th class="py-3 px-4 text-left text-gray-700 font-semibold">Insurance</th>
                  <th class="py-3 px-4 text-left text-gray-700 font-semibold">Medication</th>
                  <th class="py-3 px-4 text-left text-gray-700 font-semibold">Rating</th>
                  <th class="py-3 px-4 text-left text-gray-700 font-semibold">Best For</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-4 px-4 font-medium">BetterHelp</td>
                  <td class="py-4 px-4">$60-$90/week</td>
                  <td class="py-4 px-4">
                    <div class="flex space-x-1">
                      <div title="Messaging">
                        <MessageSquare class="h-4 w-4 text-indigo-600" />
                      </div>
                      <div title="Video">
                        <Video class="h-4 w-4 text-indigo-600" />
                      </div>
                      <div title="Phone">
                        <Phone class="h-4 w-4 text-indigo-600" />
                      </div>
                    </div>
                  </td>
                  <td class="py-4 px-4">
                    <XCircle class="h-5 w-5 text-red-500" />
                  </td>
                  <td class="py-4 px-4">
                    <XCircle class="h-5 w-5 text-red-500" />
                  </td>
                  <td class="py-4 px-4">
                    <div class="flex">
                      {renderStars(4)}
                    </div>
                  </td>
                  <td class="py-4 px-4 text-sm">Affordability, Flexibility</td>
                </tr>
                
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-4 px-4 font-medium">Talkspace</td>
                  <td class="py-4 px-4">$65-$99/week</td>
                  <td class="py-4 px-4">
                    <div class="flex space-x-1">
                      <div title="Messaging">
                        <MessageSquare class="h-4 w-4 text-indigo-600" />
                      </div>
                      <div title="Video">
                        <Video class="h-4 w-4 text-indigo-600" />
                      </div>
                      <div title="Phone">
                        <Phone class="h-4 w-4 text-indigo-600" />
                      </div>
                    </div>
                  </td>
                  <td class="py-4 px-4">
                    <CheckCircle class="h-5 w-5 text-green-500" />
                  </td>
                  <td class="py-4 px-4">
                    <CheckCircle class="h-5 w-5 text-green-500" />
                  </td>
                  <td class="py-4 px-4">
                    <div class="flex">
                      {renderStars(4.5)}
                    </div>
                  </td>
                  <td class="py-4 px-4 text-sm">Insurance, Medication</td>
                </tr>
                
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-4 px-4 font-medium">Cerebral</td>
                  <td class="py-4 px-4">$85-$325/month</td>
                  <td class="py-4 px-4">
                    <div class="flex space-x-1">
                      <div title="Messaging">
                        <MessageSquare class="h-4 w-4 text-indigo-600" />
                      </div>
                      <div title="Video">
                        <Video class="h-4 w-4 text-indigo-600" />
                      </div>
                      <div title="Phone">
                        <Phone class="h-4 w-4 text-indigo-600" />
                      </div>
                    </div>
                  </td>
                  <td class="py-4 px-4">
                    <CheckCircle class="h-5 w-5 text-green-500" />
                  </td>
                  <td class="py-4 px-4">
                    <CheckCircle class="h-5 w-5 text-green-500" />
                  </td>
                  <td class="py-4 px-4">
                    <div class="flex">
                      {renderStars(4)}
                    </div>
                  </td>
                  <td class="py-4 px-4 text-sm">Comprehensive Care, ADHD</td>
                </tr>
                
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-4 px-4 font-medium">Calmerry</td>
                  <td class="py-4 px-4">$42-$68/week</td>
                  <td class="py-4 px-4">
                    <div class="flex space-x-1">
                      <div title="Messaging">
                        <MessageSquare class="h-4 w-4 text-indigo-600" />
                      </div>
                      <div title="Video">
                        <Video class="h-4 w-4 text-indigo-600" />
                      </div>
                    </div>
                  </td>
                  <td class="py-4 px-4">
                    <XCircle class="h-5 w-5 text-red-500" />
                  </td>
                  <td class="py-4 px-4">
                    <XCircle class="h-5 w-5 text-red-500" />
                  </td>
                  <td class="py-4 px-4">
                    <div class="flex">
                      {renderStars(4)}
                    </div>
                  </td>
                  <td class="py-4 px-4 text-sm">Budget-Friendly</td>
                </tr>
                
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-4 px-4 font-medium">Online-Therapy.com</td>
                  <td class="py-4 px-4">$40-$88/week</td>
                  <td class="py-4 px-4">
                    <div class="flex space-x-1">
                      <div title="Messaging">
                        <MessageSquare class="h-4 w-4 text-indigo-600" />
                      </div>
                      <div title="Video">
                        <Video class="h-4 w-4 text-indigo-600" />
                      </div>
                    </div>
                  </td>
                  <td class="py-4 px-4">
                    <XCircle class="h-5 w-5 text-red-500" />
                  </td>
                  <td class="py-4 px-4">
                    <XCircle class="h-5 w-5 text-red-500" />
                  </td>
                  <td class="py-4 px-4">
                    <div class="flex">
                      {renderStars(4)}
                    </div>
                  </td>
                  <td class="py-4 px-4 text-sm">CBT Focus, Self-Help</td>
                </tr>
                
                <tr class="hover:bg-gray-50">
                  <td class="py-4 px-4 font-medium">ReGain</td>
                  <td class="py-4 px-4">$60-$90/week</td>
                  <td class="py-4 px-4">
