---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ArrowRight, BarChart, PieChart, TrendingUp, Brain, Users, Globe, LineChart } from 'lucide-react';
---

<BaseLayout>
<div class="bg-gray-50 min-h-screen py-12">
      <div class="container mx-auto px-4">
        {/* Hero Section */}
        <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
          <div class="md:flex">
            <div class="md:w-1/3">
              <img 
                src="https://images.unsplash.com/photo-1543286386-713bdd548da4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" 
                alt="Mental Health Statistics" 
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-8 md:w-2/3">
              <h1 class="text-3xl font-bold text-gray-800 mb-4">Mental Health Statistics & Research</h1>
              <p class="text-xl text-gray-600 mb-6">
                Evidence-based data and research findings on mental health conditions, treatment effectiveness, and industry trends to inform your decisions.
              </p>
              <div class="flex flex-wrap gap-4">
                <Button 
                  as={Link} 
                  to="/learn/statistics/mental-health-statistics" 
                  variant="primary"
                  icon={BarChart}
                >
                  Explore Key Statistics
                </Button>
                <Button 
                  as={Link}
                  to="/learn" 
                  variant="outline"
                  icon={ArrowRight}
                >
                  View All Learning Resources
                </Button>
              </div>
            </div>
          </div>
        </div>

        {/* Key Statistics Overview */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Key Mental Health Statistics</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {keyStats.map((stat, index) => (
              <div key={index} class="bg-indigo-50 rounded-lg p-6 text-center">
                <div class="text-3xl font-bold text-indigo-600 mb-2">{stat.title}</div>
                <p class="text-gray-700 mb-3">{stat.description}</p>
                <p class="text-sm text-gray-500">Source: {stat.source}</p>
              </div>
            ))}
          </div>
          
          <div class="mt-6 text-center">
            <a href="/learn/statistics/mental-health-statistics" 
              class="text-indigo-600 font-medium flex items-center justify-center hover:text-indigo-800"
            >
              View detailed statistics <ArrowRight class="h-4 w-4 ml-1" />
            </a>
          </div>
        </div>

        {/* Featured Articles */}
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Statistics & Research Articles</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
          {featuredArticles.map((article) => (
            <div key={article.title} class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="h-48 overflow-hidden">
                <img 
                  src={article.image} 
                  alt={article.title} 
                  class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                />
              </div>
              <div class="p-6">
                <div class="flex items-center mb-3">
                  <div class="bg-indigo-100 rounded-full w-8 h-8 flex items-center justify-center mr-3">
                    <article.icon class="h-4 w-4 text-indigo-600" />
                  </div>
                  <h3 class="text-xl font-bold text-gray-800">{article.title}</h3>
                </div>
                <p class="text-gray-600 mb-4">{article.description}</p>
                <Link 
                  to={article.path} 
                  class="text-indigo-600 font-medium flex items-center hover:text-indigo-800"
                >
                  Read article <ArrowRight class="h-4 w-4 ml-1" />
                </a>
              </div>
            </div>
          ))}
        </div>

        {/* Topic Categories */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Statistics by Topic</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex items-center mb-3">
                <Brain class="h-5 w-5 text-indigo-600 mr-2" />
                <h3 class="text-lg font-bold text-gray-800">Conditions</h3>
              </div>
              <ul class="space-y-2">
                <li>
                  <a href="/learn/statistics/depression-statistics" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    Depression Statistics
                  </a>
                </li>
                <li>
                  <a href="/learn/statistics/anxiety-statistics" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    Anxiety Statistics
                  </a>
                </li>
                <li>
                  <a href="/learn/statistics/ptsd-statistics" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    PTSD Statistics
                  </a>
                </li>
                <li>
                  <a href="/learn/statistics/conditions-overview" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    All Conditions Data
                  </a>
                </li>
              </ul>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex items-center mb-3">
                <Globe class="h-5 w-5 text-indigo-600 mr-2" />
                <h3 class="text-lg font-bold text-gray-800">Treatment</h3>
              </div>
              <ul class="space-y-2">
                <li>
                  <a href="/learn/statistics/online-therapy-effectiveness" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    Online Therapy Effectiveness
                  </a>
                </li>
                <li>
                  <a href="/learn/statistics/medication-statistics" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    Medication Statistics
                  </a>
                </li>
                <li>
                  <a href="/learn/statistics/therapy-approaches-data" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    Therapy Approaches Data
                  </a>
                </li>
                <li>
                  <a href="/learn/statistics/treatment-outcomes" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    Treatment Outcomes
                  </a>
                </li>
              </ul>
            </div>
            
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex items-center mb-3">
                <Users class="h-5 w-5 text-indigo-600 mr-2" />
                <h3 class="text-lg font-bold text-gray-800">Demographics</h3>
              </div>
              <ul class="space-y-2">
                <li>
                  <a href="/learn/statistics/age-group-statistics" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    Age Group Statistics
                  </a>
                </li>
                <li>
                  <a href="/learn/statistics/gender-differences" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    Gender Differences
                  </a>
                </li>
                <li>
                  <a href="/learn/statistics/cultural-factors" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    Cultural Factors
                  </a>
                </li>
                <li>
                  <a href="/learn/statistics/socioeconomic-impact" class="text-gray-600 hover:text-indigo-600 flex items-center">
                    <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                    Socioeconomic Impact
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">Ready to Find the Right Support?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Now that you understand the data, take the next step toward better mental health with personalized recommendations.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <Button 
              as={Link} 
              to="/tools/assessments/mental-health-assessment" 
              variant="light"
              size="lg"
              icon={Brain}
            >
              Take Mental Health Assessment
            </Button>
            <Button 
              as={Link} 
              to="/tools/matchers/therapy-platform-matcher" 
              variant="outline"
              size="lg"
              class="border-white text-white hover:bg-white hover:bg-opacity-10"
              icon={Users}
            >
              Find Your Therapy Match
            </Button>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
