---
import BaseLayout from '../layouts/BaseLayout.astro';
import { platforms } from '../siteData';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Heart, Users, Brain, DollarSign } from 'lucide-react';
import { platforms } from '../siteData';

// const platforms = []; // Now using real data from siteData
const features = [];

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};

---

<BaseLayout>
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="text-center mb-12">
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Specialized Online Therapy Platforms</h1>
        <p class="font-serif italic text-lg md:text-xl text-neutral-600">
          Compare platforms that focus on specific mental health conditions, demographics, or therapeutic approaches.
        </p>
      </div>
      <div class="flex justify-center">
        <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find your perfect therapy match</a>
      </div>
    </div>
  </section>

  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

        {/* Categories Overview */}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center mb-4">
              <Heart class="h-8 w-8 text-pink-500 mr-3" />
              <h2 class="text-xl font-bold text-gray-800">Relationship Focused</h2>
            </div>
            <p class="text-gray-600 mb-4">
              Platforms specializing in couples therapy, marriage counseling, and relationship issues.
            </p>
            <ul class="space-y-2 mb-4">
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                <span>ReGain</span>
              </li>
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                <span>Lasting</span>
              </li>
            </ul>
            <a href="#relationship-platforms" class="text-indigo-600 hover:text-indigo-800 flex items-center">
              View details <ArrowRight class="h-4 w-4 ml-1" />
            </a>
          </div>

          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center mb-4">
              <Users class="h-8 w-8 text-purple-500 mr-3" />
              <h2 class="text-xl font-bold text-gray-800">Identity Specific</h2>
            </div>
            <p class="text-gray-600 mb-4">
              Platforms catering to specific demographics and identities.
            </p>
            <ul class="space-y-2 mb-4">
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                <span>Pride Counseling</span>
              </li>
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                <span>Teen Counseling</span>
              </li>
            </ul>
            <a href="#identity-platforms" class="text-indigo-600 hover:text-indigo-800 flex items-center">
              View details <ArrowRight class="h-4 w-4 ml-1" />
            </a>
          </div>

          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center mb-4">
              <Brain class="h-8 w-8 text-emerald-500 mr-3" />
              <h2 class="text-xl font-bold text-gray-800">Condition Focused</h2>
            </div>
            <p class="text-gray-600 mb-4">
              Platforms specializing in specific mental health conditions.
            </p>
            <ul class="space-y-2 mb-4">
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                <span>NOCD</span>
              </li>
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-indigo-600 mr-2" />
                <span>Equip</span>
              </li>
            </ul>
            <a href="#condition-platforms" class="text-indigo-600 hover:text-indigo-800 flex items-center">
              View details <ArrowRight class="h-4 w-4 ml-1" />
            </a>
          </div>
        </div>

        {/* Detailed Platform Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Detailed Platform Comparisons</h2>
          
          {platforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class="mr-2">
                        {renderStars(platform.rating)}
                      </div>
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                        <span class="text-gray-600">{platform.price}</span>
                      </div>
                      <div class="bg-indigo-50 text-indigo-700 px-3 py-1 rounded-full text-sm font-medium inline-block">
                        {platform.category}
                      </div>
                    </div>
                    <div class="space-y-2">
                      <button class="w-full min-w-0 justify-center">Read full review</button>
                      <button class="w-full min-w-0 justify-center">Visit Website</button>
                    </div>
                  </div>
                  
                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-gray-800 mb-3">Platform Overview</h4>
                    <p class="text-gray-600 mb-6">
                      {platform.description}
                    </p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                      
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                    
                    <div>
                      <h5 class="font-bold text-gray-800 mb-3">Key Features</h5>
                      <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
                        {platform.features.map((feature, i) => (
                          <div key={i} class="bg-gray-50 rounded-lg p-3 flex items-center">
                            <CheckCircle class="h-4 w-4 text-indigo-600 mr-2 flex-shrink-0" />
                            <span class="text-gray-700 text-sm">{feature}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                    
                    <div class="mt-6 bg-indigo-50 rounded-lg p-4">
                      <h5 class="font-bold text-gray-800 mb-2">Best For</h5>
                      <p class="text-gray-700">{platform.bestFor}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* Choosing the Right Platform */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right Specialized Platform</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Brain class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Expertise Match</h3>
              <p class="text-gray-600">
                Choose a platform that specializes in your specific needs, whether that's relationship counseling, identity-specific support, or condition-focused treatment.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Cultural Competence</h3>
              <p class="text-gray-600">
                Look for platforms with therapists who understand your background, identity, and specific challenges you may face.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <DollarSign class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Cost Consideration</h3>
              <p class="text-gray-600">
                Consider insurance coverage, subscription costs, and whether specialized care justifies potentially higher prices.
              </p>
            </div>
          </div>
        </div>

        {/* How We Review Section */}
        

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center mb-8">
          <h2 class="text-2xl font-bold mb-4">Ready to Find Your Perfect Therapy Match?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the specialized platform that best fits your unique needs.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find Your Perfect Match</a>
            <a href="/tools/assessments/mental-health-assessment" class="border-white text-white hover:bg-white hover:bg-opacity-10">Take Mental Health Assessment</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
