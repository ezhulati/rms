---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getPlatformBySlug } from '../../../siteData';
import { Star, CheckCircle, XCircle, DollarSign, Shield, MessageCircle, Video, Phone } from 'lucide-react';

const platform = getPlatformBySlug('doctor-on-demand');

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};
---

<BaseLayout title={`${platform.name} Review | RealMindSolutions`} description={platform.description}>
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      {/* Hero Section */}
      <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
        <div class="md:flex">
          <div class="md:w-1/3">
            <img
              src={platform.image}
              alt={platform.name}
              class="w-full min-w-0 h-full object-cover"
            />
          </div>
          <div class="p-8 md:w-2/3">
            <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">{platform.name} Review</h1>
            <p class="font-serif italic text-lg md:text-xl text-neutral-600">{platform.tagline}</p>
            <div class="flex items-center mb-4">
              <div class="flex mr-2">
                {renderStars(platform.rating).map((filled, i) => (
                  <Star key={i} class={`h-5 w-5 ${filled ? 'text-yellow-400 fill-yellow-400' : 'text-gray-300'}`} />
                ))}
              </div>
              <span class="text-2xl font-bold text-gray-800">{platform.rating}/5</span>
            </div>
            <p class="text-gray-600 mb-6">{platform.description}</p>
            <div class="flex flex-wrap gap-4">
              <a href="#" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700 transition">Visit {platform.name}</a>
              <a href="#pricing" class="inline-flex items-center border border-indigo-600 text-indigo-600 px-6 py-3 rounded-md hover:bg-indigo-50 transition">View Pricing</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      {/* Quick Stats */}
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
          <DollarSign class="h-8 w-8 text-indigo-600 mx-auto mb-2" />
          <div class="text-2xl font-bold text-gray-800">{platform.price}</div>
          <div class="text-sm text-gray-600">Pricing</div>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
          <Shield class="h-8 w-8 text-indigo-600 mx-auto mb-2" />
          <div class="text-2xl font-bold text-gray-800">{platform.insurance ? 'Yes' : 'No'}</div>
          <div class="text-sm text-gray-600">Insurance</div>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
          <MessageCircle class="h-8 w-8 text-indigo-600 mx-auto mb-2" />
          <div class="text-2xl font-bold text-gray-800">{platform.communication.length}</div>
          <div class="text-sm text-gray-600">Communication Methods</div>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
          <Star class="h-8 w-8 text-indigo-600 mx-auto mb-2" />
          <div class="text-2xl font-bold text-gray-800">{platform.rating}/5</div>
          <div class="text-sm text-gray-600">Overall Rating</div>
        </div>
      </div>

      {/* Pros and Cons */}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
            <CheckCircle class="h-6 w-6 text-green-500 mr-2" />
            Pros
          </h2>
          <ul class="space-y-3">
            {platform.pros.map((pro) => (
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">{pro}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
            <XCircle class="h-6 w-6 text-red-500 mr-2" />
            Cons
          </h2>
          <ul class="space-y-3">
            {platform.cons.map((con) => (
              <li class="flex items-start">
                <XCircle class="h-5 w-5 text-red-500 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">{con}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      {/* Features */}
      <div class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Key Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {platform.features.map((feature) => (
            <div class="flex items-start">
              <CheckCircle class="h-5 w-5 text-indigo-600 mr-3 mt-0.5 flex-shrink-0" />
              <span class="text-gray-700">{feature}</span>
            </div>
          ))}
        </div>
      </div>

      {/* Pricing */}
      <div id="pricing" class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Pricing & Insurance</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-bold text-gray-800 mb-3">Pricing Details</h3>
            <ul class="space-y-2">
              <li class="flex justify-between">
                <span class="text-gray-600">Price Range:</span>
                <span class="font-semibold text-gray-800">{platform.pricing.range}</span>
              </li>
              <li class="flex justify-between">
                <span class="text-gray-600">Billing Cycle:</span>
                <span class="font-semibold text-gray-800">{platform.pricing.billingCycle}</span>
              </li>
              <li class="flex justify-between">
                <span class="text-gray-600">Financial Aid:</span>
                <span class="font-semibold text-gray-800">{platform.pricing.financialAid}</span>
              </li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold text-gray-800 mb-3">Insurance Coverage</h3>
            <ul class="space-y-2">
              <li class="flex justify-between">
                <span class="text-gray-600">Insurance Accepted:</span>
                <span class="font-semibold text-gray-800">{platform.pricing.insurance}</span>
              </li>
              {platform.insuranceProviders.length > 0 && (
                <li>
                  <span class="text-gray-600 block mb-2">Providers:</span>
                  <div class="flex flex-wrap gap-2">
                    {platform.insuranceProviders.map((provider) => (
                      <span class="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-full text-sm">{provider}</span>
                    ))}
                  </div>
                </li>
              )}
              <li class="flex justify-between">
                <span class="text-gray-600">Copay Range:</span>
                <span class="font-semibold text-gray-800">{platform.copayRange}</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      {/* Best For / Not Ideal For */}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Best For</h2>
          <ul class="space-y-3">
            {platform.bestFor.map((item) => (
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Not Ideal For</h2>
          <ul class="space-y-3">
            {platform.notIdealFor.map((item) => (
              <li class="flex items-start">
                <XCircle class="h-5 w-5 text-red-500 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      {/* Specialties */}
      <div class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Specialties</h2>
        <div class="flex flex-wrap gap-3">
          {platform.specialties.map((specialty) => (
            <span class="bg-indigo-100 text-indigo-700 px-4 py-2 rounded-full font-medium">{specialty}</span>
          ))}
        </div>
      </div>

      {/* CTA */}
      <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
        <h2 class="text-2xl font-bold mb-4">Ready to Get Started with {platform.name}?</h2>
        <p class="text-lg mb-6 max-w-2xl mx-auto">
          Take the first step toward better mental health with professional, licensed therapists.
        </p>
        <a href="#" class="inline-flex items-center bg-white text-indigo-600 px-8 py-3 rounded-md hover:bg-gray-100 transition font-semibold">Visit {platform.name}</a>
      </div>
    </div>
  </section>
</BaseLayout>