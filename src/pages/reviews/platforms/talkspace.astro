---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getPlatformBySlug } from '../../../siteData';
import { Star, CheckCircle, XCircle, DollarSign, Shield, MessageCircle, ArrowRight, Award, Clock, Users } from 'lucide-react';

const platform = getPlatformBySlug('talkspace');

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};
---

<BaseLayout title={`${platform.name} Review 2025 | Expert Analysis & Ratings`} description={`Comprehensive ${platform.name} review: pricing, features, pros & cons. ${platform.description}`}>

  {/* Hero Section - Refined */}
  <section class="relative bg-gradient-to-b from-white via-brand-primary-50/20 to-white pt-20 pb-16 md:pt-28 md:pb-20 overflow-hidden">
    {/* Background decoration */}
    <div class="absolute inset-0 overflow-hidden pointer-events-none opacity-30">
      <div class="absolute top-20 right-20 w-96 h-96 bg-brand-primary-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
      <div class="absolute bottom-20 left-20 w-96 h-96 bg-brand-accent-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6 lg:px-12 relative z-10">
      {/* Breadcrumb */}
      <nav class="flex items-center space-x-2 text-sm text-neutral-600 mb-8 animate-fade-in">
        <a href="/" class="hover:text-brand-primary-600 transition">Home</a>
        <span>/</span>
        <a href="/reviews" class="hover:text-brand-primary-600 transition">Reviews</a>
        <span>/</span>
        <span class="text-neutral-900 font-medium">{platform.name}</span>
      </nav>

      {/* Hero Content */}
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 items-start">
        {/* Left: Logo & Quick Info */}
        <div class="lg:col-span-2 animate-fade-in-up">
          <div class="bg-white rounded-2xl border-2 border-neutral-100 p-8 shadow-sm hover:shadow-lg transition-all">
            <img
              src={platform.image}
              alt={`${platform.name} logo`}
              class="w-full max-w-xs mx-auto h-48 object-contain mb-6"
              loading="eager"
            />

            {/* Rating */}
            <div class="text-center mb-6 pb-6 border-b border-neutral-100">
              <div class="flex justify-center mb-2">
                {renderStars(platform.rating).map((filled, i) => (
                  <Star key={i} class={`h-6 w-6 ${filled ? 'text-brand-accent-500 fill-brand-accent-500' : 'text-neutral-300'}`} />
                ))}
              </div>
              <div class="flex items-baseline justify-center gap-1">
                <span class="text-4xl font-heading font-black text-neutral-900">{platform.rating}</span>
                <span class="text-xl text-neutral-500">/5</span>
              </div>
              <p class="text-sm text-neutral-600 mt-1">Based on expert analysis</p>
            </div>

            {/* CTA Buttons */}
            <div class="space-y-3">
              <a href="#" class="btn btn-primary w-full justify-center font-sans font-semibold shadow-lg hover:shadow-xl">
                Visit {platform.name}
                <ArrowRight class="ml-2 h-5 w-5" />
              </a>
              <a href="#pricing" class="btn btn-light w-full justify-center font-sans font-semibold border-2">
                View Pricing
              </a>
            </div>
          </div>
        </div>

        {/* Right: Content */}
        <div class="lg:col-span-3 animate-slide-in-right">
          {/* Badge */}
          <div class="inline-flex items-center gap-2 bg-brand-primary-100 text-brand-primary-700 px-4 py-2 rounded-full mb-4">
            <Award class="h-4 w-4" />
            <span class="font-sans text-sm font-semibold">Expert Review</span>
          </div>

          <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-black text-neutral-900 mb-4 leading-tight">
            {platform.name} Review
          </h1>

          <p class="font-serif italic text-xl md:text-2xl text-neutral-600 mb-6 leading-relaxed">
            {platform.tagline}
          </p>

          <p class="font-sans text-lg text-neutral-700 leading-relaxed mb-8">
            {platform.description}
          </p>

          {/* Quick Stats Grid */}
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
            <div class="bg-brand-primary-50 rounded-xl p-4 border border-brand-primary-100">
              <DollarSign class="h-6 w-6 text-brand-primary-600 mb-2" />
              <div class="font-heading text-2xl font-bold text-neutral-900">{platform.price.split('/')[0]}</div>
              <div class="font-sans text-xs text-neutral-600">Starting Price</div>
            </div>
            <div class="bg-brand-secondary-50 rounded-xl p-4 border border-brand-secondary-100">
              <Shield class="h-6 w-6 text-brand-secondary-600 mb-2" />
              <div class="font-heading text-2xl font-bold text-neutral-900">{platform.insurance ? 'Yes' : 'No'}</div>
              <div class="font-sans text-xs text-neutral-600">Insurance</div>
            </div>
            <div class="bg-brand-accent-50 rounded-xl p-4 border border-brand-accent-100">
              <MessageCircle class="h-6 w-6 text-brand-accent-600 mb-2" />
              <div class="font-heading text-2xl font-bold text-neutral-900">{platform.communication.length}</div>
              <div class="font-sans text-xs text-neutral-600">Methods</div>
            </div>
            <div class="bg-neutral-100 rounded-xl p-4 border border-neutral-200">
              <Users class="h-6 w-6 text-neutral-600 mb-2" />
              <div class="font-heading text-2xl font-bold text-neutral-900">10k+</div>
              <div class="font-sans text-xs text-neutral-600">Active Users</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

      {/* Pros and Cons - Enhanced */}
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
        <div class="bg-gradient-to-br from-green-50 to-white rounded-2xl border-2 border-green-100 p-8 shadow-sm hover:shadow-md transition-all">
          <div class="flex items-center gap-3 mb-6">
            <div class="bg-green-500 rounded-full p-2">
              <CheckCircle class="h-6 w-6 text-white" />
            </div>
            <h2 class="font-heading text-3xl font-bold text-neutral-900">Pros</h2>
          </div>
          <ul class="space-y-4">
            {platform.pros.map((pro) => (
              <li class="flex items-start gap-3">
                <CheckCircle class="h-5 w-5 text-green-500 mt-0.5 flex-shrink-0" />
                <span class="font-sans text-neutral-700 leading-relaxed">{pro}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-gradient-to-br from-red-50 to-white rounded-2xl border-2 border-red-100 p-8 shadow-sm hover:shadow-md transition-all">
          <div class="flex items-center gap-3 mb-6">
            <div class="bg-red-500 rounded-full p-2">
              <XCircle class="h-6 w-6 text-white" />
            </div>
            <h2 class="font-heading text-3xl font-bold text-neutral-900">Cons</h2>
          </div>
          <ul class="space-y-4">
            {platform.cons.map((con) => (
              <li class="flex items-start gap-3">
                <XCircle class="h-5 w-5 text-red-500 mt-0.5 flex-shrink-0" />
                <span class="font-sans text-neutral-700 leading-relaxed">{con}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      {/* Features - Enhanced */}
      <div class="bg-white rounded-2xl border-2 border-neutral-100 p-8 md:p-12 mb-16 shadow-sm">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-900 mb-8">Key Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {platform.features.map((feature, index) => (
            <div class="flex items-start gap-4 p-4 rounded-xl hover:bg-brand-primary-50 transition-colors">
              <div class="bg-brand-primary-100 rounded-lg p-2 flex-shrink-0">
                <CheckCircle class="h-5 w-5 text-brand-primary-600" />
              </div>
              <div>
                <span class="font-sans text-neutral-800 font-medium leading-relaxed">{feature}</span>
              </div>
            </div>
          ))}
        </div>
      </div>

      {/* Pricing - Enhanced */}
      <div id="pricing" class="bg-gradient-to-br from-brand-primary-50 to-white rounded-2xl border-2 border-brand-primary-100 p-8 md:p-12 mb-16 shadow-sm">
        <div class="flex items-center gap-3 mb-8">
          <DollarSign class="h-8 w-8 text-brand-primary-600" />
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-900">Pricing & Insurance</h2>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div class="bg-white rounded-xl p-6 border border-neutral-200">
            <h3 class="font-heading text-xl font-bold text-neutral-900 mb-6 flex items-center gap-2">
              <div class="w-1 h-6 bg-brand-primary-500 rounded-full"></div>
              Pricing Details
            </h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center pb-4 border-b border-neutral-100">
                <span class="font-sans text-neutral-600">Price Range</span>
                <span class="font-sans font-bold text-neutral-900 text-lg">{platform.pricing.range}</span>
              </div>
              <div class="flex justify-between items-center pb-4 border-b border-neutral-100">
                <span class="font-sans text-neutral-600">Billing Cycle</span>
                <span class="font-sans font-semibold text-neutral-900">{platform.pricing.billingCycle}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="font-sans text-neutral-600">Financial Aid</span>
                <span class="font-sans font-semibold text-neutral-900">{platform.pricing.financialAid}</span>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl p-6 border border-neutral-200">
            <h3 class="font-heading text-xl font-bold text-neutral-900 mb-6 flex items-center gap-2">
              <div class="w-1 h-6 bg-brand-secondary-500 rounded-full"></div>
              Insurance Coverage
            </h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center pb-4 border-b border-neutral-100">
                <span class="font-sans text-neutral-600">Accepted</span>
                <span class="font-sans font-bold text-neutral-900 text-lg">{platform.pricing.insurance}</span>
              </div>
              {platform.insuranceProviders.length > 0 && (
                <div>
                  <span class="font-sans text-neutral-600 block mb-3">Providers</span>
                  <div class="flex flex-wrap gap-2">
                    {platform.insuranceProviders.map((provider) => (
                      <span class="bg-brand-secondary-100 text-brand-secondary-700 px-3 py-1.5 rounded-full text-sm font-medium">{provider}</span>
                    ))}
                  </div>
                </div>
              )}
              <div class="flex justify-between items-center pt-4 border-t border-neutral-100">
                <span class="font-sans text-neutral-600">Copay Range</span>
                <span class="font-sans font-semibold text-neutral-900">{platform.copayRange}</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Best For / Not Ideal For - Enhanced */}
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
        <div class="bg-white rounded-2xl border-2 border-brand-accent-100 p-8 shadow-sm hover:shadow-md transition-all">
          <h2 class="font-heading text-3xl font-bold text-neutral-900 mb-6 flex items-center gap-3">
            <div class="bg-brand-accent-100 rounded-full p-2">
              <CheckCircle class="h-6 w-6 text-brand-accent-600" />
            </div>
            Best For
          </h2>
          <ul class="space-y-4">
            {platform.bestFor.map((item) => (
              <li class="flex items-start gap-3 p-3 rounded-lg hover:bg-brand-accent-50 transition-colors">
                <CheckCircle class="h-5 w-5 text-brand-accent-600 mt-0.5 flex-shrink-0" />
                <span class="font-sans text-neutral-700 leading-relaxed">{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-white rounded-2xl border-2 border-neutral-200 p-8 shadow-sm hover:shadow-md transition-all">
          <h2 class="font-heading text-3xl font-bold text-neutral-900 mb-6 flex items-center gap-3">
            <div class="bg-neutral-200 rounded-full p-2">
              <XCircle class="h-6 w-6 text-neutral-600" />
            </div>
            Not Ideal For
          </h2>
          <ul class="space-y-4">
            {platform.notIdealFor.map((item) => (
              <li class="flex items-start gap-3 p-3 rounded-lg hover:bg-neutral-50 transition-colors">
                <XCircle class="h-5 w-5 text-neutral-500 mt-0.5 flex-shrink-0" />
                <span class="font-sans text-neutral-700 leading-relaxed">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      {/* Specialties - Enhanced */}
      <div class="bg-white rounded-2xl border-2 border-neutral-100 p-8 md:p-12 mb-16 shadow-sm">
        <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-900 mb-8">Specialties</h2>
        <div class="flex flex-wrap gap-3">
          {platform.specialties.map((specialty, index) => (
            <span class="bg-white border-2 border-brand-primary-200 text-brand-primary-700 px-5 py-2.5 rounded-lg font-sans font-medium text-sm hover:border-brand-primary-300 hover:bg-brand-primary-50 transition-all">
              {specialty}
            </span>
          ))}
        </div>
      </div>

      {/* Final CTA - Enhanced */}
      <div class="bg-gradient-to-br from-brand-primary-50 via-white to-brand-accent-50 rounded-2xl border border-brand-primary-100 p-12 text-center shadow-sb">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
            Ready to Get Started with {platform.name}?
          </h2>
          <p class="font-sans text-lg md:text-xl text-neutral-600 mb-8">
            Take the first step toward better mental health with professional, licensed therapists.
          </p>
          <a href="#" class="inline-flex items-center justify-center bg-brand-primary-600 text-white px-8 py-4 rounded-lg font-heading font-medium hover:bg-brand-primary-700 transition-all shadow-sb hover:shadow-sb-hover">
            Visit {platform.name}
            <ArrowRight class="ml-2 h-6 w-6" />
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
