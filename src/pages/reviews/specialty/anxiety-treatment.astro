---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { Star, CheckCircle, XCircle, ArrowRight } from 'lucide-react';

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};

---

<BaseLayout>
<div class="bg-gray-50 min-h-screen">
      <div class="sb-container py-12">
        {/* Hero Section */}
        <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
          <div class="md:flex">
            <div class="md:w-1/2">
              <img 
                src="/images/concepts/reviewspage.jpg" 
                alt="Online Therapy for Anxiety" 
                class="w-full min-w-0 h-full object-cover"
              />
            </div>
            <div class="p-8 md:w-1/2">
              <h1 class="text-3xl font-bold text-gray-800 mb-4">Best Online Therapy for Anxiety</h1>
              <div class="flex items-center mb-4">
                <div class="mr-2">
                  {renderStars(4.5)}
                </div>
                <span class="text-gray-600 font-medium">Expert Review</span>
              </div>
              <p class="text-xl text-gray-600 mb-6">
                Comprehensive analysis of the most effective online therapy platforms for anxiety treatment
              </p>
              <div class="grid grid-cols-2 gap-6 mb-6">
                <div>
                  <h3 class="font-bold text-gray-800 mb-2">Top Pick</h3>
                  <p class="text-gray-600">BetterHelp</p>
                </div>
                <div>
                  <h3 class="font-bold text-gray-800 mb-2">Best Value</h3>
                  <p class="text-gray-600">Online-Therapy.com</p>
                </div>
                <div>
                  <h3 class="font-bold text-gray-800 mb-2">Best for Severe Anxiety</h3>
                  <p class="text-gray-600">Talkspace</p>
                </div>
                <div>
                  <h3 class="font-bold text-gray-800 mb-2">Best with Insurance</h3>
                  <p class="text-gray-600">Cerebral</p>
                </div>
              </div>
              <div class="flex flex-wrap gap-3">
                <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find Your Perfect Match</a>
                <a href="/tools/assessments/anxiety-screening" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Take Anxiety Assessment</a>
              </div>
            </div>
          </div>
        </div>

        {/* Introduction */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-4">Online Therapy for Anxiety: An Overview</h2>
          <p class="text-gray-700 mb-4">
            Anxiety disorders affect approximately 40 million adults in the United States, making them the most common mental health conditions. Online therapy has emerged as an effective, accessible option for anxiety treatment, offering evidence-based approaches like Cognitive Behavioral Therapy (CBT), mindfulness techniques, and exposure therapy in a convenient format.
          </p>
          <p class="text-gray-700 mb-4">
            Research consistently shows that online therapy can be as effective as in-person treatment for anxiety disorders, with studies demonstrating significant symptom reduction for conditions ranging from generalized anxiety disorder to panic disorder, social anxiety, and specific phobias.
          </p>
          <p class="text-gray-700">
            In this comprehensive guide, we evaluate the leading online therapy platforms specifically for anxiety treatment, examining their therapeutic approaches, therapist qualifications, accessibility, and overall effectiveness to help you find the right solution for your needs.
          </p>
        </div>

        {/* Top Platforms Section */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Top Online Therapy Platforms for Anxiety</h2>
          
          <div class="space-y-8">
            {/* BetterHelp */}
            <div class="border-b pb-8">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold text-gray-800">1. BetterHelp</h3>
                <div class="flex items-center">
                  {renderStars(4.5)}
                  <span class="ml-2 text-gray-600">4.5/5</span>
                </div>
              </div>
              
              <div class="md:flex">
                <div class="md:w-1/4 mb-4 md:mb-0 md:mr-6">
                  <img 
                    src="/images/concepts/reviewspage.jpg" 
                    alt="BetterHelp for Anxiety" 
                    class="w-full min-w-0 rounded-lg"
                  />
                </div>
                <div class="md:w-3/4">
                  <p class="text-gray-700 mb-4">
                    BetterHelp earns our top recommendation for anxiety treatment due to its extensive network of therapists specializing in anxiety disorders, flexible communication options, and evidence-based approaches. The platform's matching algorithm effectively pairs clients with therapists experienced in treating specific anxiety conditions.
                  </p>
                  
                  <div class="grid md:grid-cols-2 gap-4 mb-4">
                    <div>
                      <h4 class="font-bold text-gray-800 mb-2">Strengths for Anxiety Treatment</h4>
                      <ul class="space-y-1">
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Large network of anxiety specialists</span>
                        </li>
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Multiple communication methods (messaging, phone, video)</span>
                        </li>
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>CBT and other evidence-based approaches</span>
                        </li>
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Weekly live sessions included in all plans</span>
                        </li>
                      </ul>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-800 mb-2">Limitations</h4>
                      <ul class="space-y-1">
                        <li class="flex items-start">
                          <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>No insurance coverage</span>
                        </li>
                        <li class="flex items-start">
                          <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>No medication management</span>
                        </li>
                        <li class="flex items-start">
                          <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Not suitable for severe anxiety requiring intensive treatment</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                  
                  <div class="flex justify-between items-center">
                    <div class="text-gray-700">
                      <strong>Price:</strong> $60-$90/week
                    </div>
                    <a href="/reviews/platforms/betterhelp" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Read Full Review</a>
                  </div>
                </div>
              </div>
            </div>
            
            {/* Online-Therapy.com */}
            <div class="border-b pb-8">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold text-gray-800">2. Online-Therapy.com</h3>
                <div class="flex items-center">
                  {renderStars(4.3)}
                  <span class="ml-2 text-gray-600">4.3/5</span>
                </div>
              </div>
              
              <div class="md:flex">
                <div class="md:w-1/4 mb-4 md:mb-0 md:mr-6">
                  <img 
                    src="/images/concepts/reviewspage.jpg" 
                    alt="Online-Therapy.com for Anxiety" 
                    class="w-full min-w-0 rounded-lg"
                  />
                </div>
                <div class="md:w-3/4">
                  <p class="text-gray-700 mb-4">
                    Online-Therapy.com stands out for anxiety treatment with its structured CBT program specifically designed to address anxiety disorders. The platform offers a comprehensive toolbox including worksheets, activities, and journaling exercises that are particularly effective for anxiety management.
                  </p>
                  
                  <div class="grid md:grid-cols-2 gap-4 mb-4">
                    <div>
                      <h4 class="font-bold text-gray-800 mb-2">Strengths for Anxiety Treatment</h4>
                      <ul class="space-y-1">
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Structured CBT program specifically for anxiety</span>
                        </li>
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Comprehensive worksheets and activities</span>
                        </li>
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Mindfulness and yoga resources</span>
                        </li>
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Daily therapist feedback on worksheets</span>
                        </li>
                      </ul>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-800 mb-2">Limitations</h4>
                      <ul class="space-y-1">
                        <li class="flex items-start">
                          <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Limited to CBT approach</span>
                        </li>
                        <li class="flex items-start">
                          <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Live sessions only in higher-tier plans</span>
                        </li>
                        <li class="flex items-start">
                          <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>No insurance coverage</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                  
                  <div class="flex justify-between items-center">
                    <div class="text-gray-700">
                      <strong>Price:</strong> $40-$88/week
                    </div>
                    <a href="/reviews/platforms/online-therapy-com" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Read Full Review</a>
                  </div>
                </div>
              </div>
            </div>
            
            {/* Talkspace */}
            <div class="border-b pb-8">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold text-gray-800">3. Talkspace</h3>
                <div class="flex items-center">
                  {renderStars(4.2)}
                  <span class="ml-2 text-gray-600">4.2/5</span>
                </div>
              </div>
              
              <div class="md:flex">
                <div class="md:w-1/4 mb-4 md:mb-0 md:mr-6">
                  <img 
                    src="/images/concepts/reviewspage.jpg" 
                    alt="Talkspace for Anxiety" 
                    class="w-full min-w-0 rounded-lg"
                  />
                </div>
                <div class="md:w-3/4">
                  <p class="text-gray-700 mb-4">
                    Talkspace is particularly well-suited for those with moderate to severe anxiety who may benefit from combined therapy and medication management. The platform's psychiatric services make it an excellent choice for comprehensive anxiety treatment, especially for conditions that respond well to medication.
                  </p>
                  
                  <div class="grid md:grid-cols-2 gap-4 mb-4">
                    <div>
                      <h4 class="font-bold text-gray-800 mb-2">Strengths for Anxiety Treatment</h4>
                      <ul class="space-y-1">
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Integrated medication management</span>
                        </li>
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Insurance coverage available</span>
                        </li>
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Specialized anxiety treatment programs</span>
                        </li>
                        <li class="flex items-start">
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Multiple communication methods</span>
                        </li>
                      </ul>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-800 mb-2">Limitations</h4>
                      <ul class="space-y-1">
                        <li class="flex items-start">
                          <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Higher pricing</span>
                        </li>
                        <li class="flex items-start">
                          <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Limited live sessions on basic plans</span>
                        </li>
                        <li class="flex items-start">
                          <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                          <span>Less structured self-help resources</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                  
                  <div class="flex justify-between items-center">
                    <div class="text-gray-700">
                      <strong>Price:</strong> $65-$99/week
                    </div>
                    <a href="/reviews/platforms/talkspace" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Read Full Review</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* How We Reviewed */}
        

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center mb-8">
          <h2 class="text-2xl font-bold mb-4">Find Your Ideal Anxiety Treatment</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the perfect online therapy platform for your specific anxiety symptoms, preferences, and needs.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find Your Perfect Match</a>
            <a href="/tools/assessments/anxiety-screening" class="border-white text-white hover:bg-white hover:bg-opacity-10">Take Anxiety Assessment</a>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
