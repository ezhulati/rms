---
import BaseLayout from '../../../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Specialty Reviews | RealMindSolutions"
  description="Platform reviews for specific conditions and needs"
>
  <div class="sb-container py-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">Specialty Reviews</h1>
    <p class="text-xl text-gray-600 mb-12">Platform reviews for specific needs</p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <a href="/reviews/specialty/anxiety-treatment" class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Anxiety Treatment</h3>
        <p class="text-gray-600">Best for anxiety disorders</p>
      </a>
      <a href="/reviews/specialty/couples-therapy" class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Couples Therapy</h3>
        <p class="text-gray-600">Relationship counseling online</p>
      </a>
      <a href="/reviews/specialty/online-therapy-for-ptsd" class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <h3 class="text-xl font-semibold text-gray-900 mb-2">PTSD Treatment</h3>
        <p class="text-gray-600">Trauma-focused therapy</p>
      </a>
    </div>
  </div>
</BaseLayout>
