---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { Calendar, CheckCircle, TrendingUp, AlertTriangle, Target, Clock, Heart, Award, Lightbulb, Users, Sun, BookOpen } from 'lucide-react';
