---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Brain, ArrowRight } from 'lucide-react';

const conditions = [
  {
    name: 'Anxiety Disorders',
    slug: 'anxiety-disorder',
    description: 'Persistent feelings of worry, fear, or unease that interfere with daily life.',
  },
  {
    name: 'Depression',
    slug: 'depression',
    description: 'Persistent feelings of sadness, hopelessness, and loss of interest in activities.',
  },
  {
    name: 'Bipolar Disorder',
    slug: 'bipolar-disorder',
    description: 'Extreme mood swings including emotional highs (mania) and lows (depression).',
  },
];
---

<BaseLayout>
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Mental Health Conditions A-Z</h1>
      <p class="font-serif italic text-lg md:text-xl text-neutral-600">
        Explore our comprehensive guide to mental health conditions, including symptoms, treatments, and finding the right help.
      </p>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

      {/* Common Conditions */}
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-gray-800 mb-8">Common Mental Health Conditions</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {conditions.map((condition) => (
            <a
              href={`/conditions/${condition.slug}`}
              class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow"
            >
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-2">{condition.name}</h3>
                <p class="text-gray-600 mb-4">{condition.description}</p>
                <div class="flex items-center text-indigo-600 hover:text-indigo-800">
                  Learn more <ArrowRight class="h-4 w-4 ml-1" />
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>

      {/* Resources Section */}
      <div class="bg-white rounded-lg shadow-md p-8 mb-16">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Mental Health Resources</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
              <Brain class="h-6 w-6 text-indigo-600" />
            </div>
            <h3 class="text-lg font-bold text-gray-800 mb-2">Find Treatment</h3>
            <p class="text-gray-600 mb-4">
              Compare and find the right online therapy platform for your specific condition.
            </p>
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">
              Find your match <ArrowRight class="h-4 w-4 ml-2" />
            </a>
          </div>

          <div>
            <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
              <Brain class="h-6 w-6 text-indigo-600" />
            </div>
            <h3 class="text-lg font-bold text-gray-800 mb-2">Learn More</h3>
            <p class="text-gray-600 mb-4">
              Access our comprehensive library of mental health educational resources.
            </p>
            <a href="/learn" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">
              Explore resources <ArrowRight class="h-4 w-4 ml-2" />
            </a>
          </div>

          <div>
            <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
              <Brain class="h-6 w-6 text-indigo-600" />
            </div>
            <h3 class="text-lg font-bold text-gray-800 mb-2">Get Support</h3>
            <p class="text-gray-600 mb-4">
              Connect with others and find support groups for your specific condition.
            </p>
            <a href="/resources" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">
              Find support <ArrowRight class="h-4 w-4 ml-2" />
            </a>
          </div>
        </div>
      </div>

      {/* CTA Section */}
      <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
        <h2 class="text-2xl font-bold mb-4">Need Help Finding the Right Treatment?</h2>
        <p class="text-lg mb-6 max-w-2xl mx-auto">
          Take our personalized assessment to get matched with the perfect online therapy platform for your specific condition.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/tools/matchers/therapy-platform-matcher" class="whitespace-nowrap bg-white text-indigo-600 px-6 py-3 rounded-md font-medium hover:bg-gray-100 transition">
            Find Your Perfect Match
          </a>
          <a href="/tools/assessments/mental-health-assessment" class="whitespace-nowrap border-2 border-white text-white px-6 py-3 rounded-md font-medium hover:bg-white hover:bg-opacity-10 transition">
            Take Mental Health Assessment
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
