---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Brain, Shield, Users, DollarSign } from 'lucide-react';

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};


const platforms = [];


const features = [];
---

<BaseLayout>
<div class="bg-gray-50 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        {/* Hero Section */}
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Best Online Therapy for Depression</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Compare the most effective online therapy platforms for treating depression, from mild symptoms to major depressive disorder.
          </p>
          <div class="flex justify-center">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find your perfect therapy match</a>
          </div>
        </div>

        {/* Quick Summary */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Top Picks at a Glance</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Best Overall */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Overall
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Talkspace</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.8)}
                  </div>
                  <span class="text-gray-600">4.8/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Comprehensive depression treatment with therapy and medication options.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $65-$99/week
              </div>
              <a href="/reviews/platforms/talkspace" class="w-full min-w-0 justify-center mb-2">Read full review</a>
              <a href="https://www.talkspace.com" class="w-full min-w-0 justify-center">Visit Talkspace</a>
            </div>
            
            {/* Best Value */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Value
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">BetterHelp</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.6)}
                  </div>
                  <span class="text-gray-600">4.6/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Affordable therapy with financial aid options and flexible scheduling.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $60-$90/week
              </div>
              <a href="/reviews/platforms/betterhelp" class="w-full min-w-0 justify-center mb-2">Read full review</a>
              <a href="https://www.betterhelp.com" class="w-full min-w-0 justify-center">Visit BetterHelp</a>
            </div>
            
            {/* Best Specialized Care */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Specialized Care
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Brightside</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.5)}
                  </div>
                  <span class="text-gray-600">4.5/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Data-driven depression treatment with precision medication management.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $95-$349/month
              </div>
              <a href="/reviews/platforms/brightside" class="w-full min-w-0 justify-center mb-2">Read full review</a>
              <a href="https://www.brightside.com" class="w-full min-w-0 justify-center">Visit Brightside</a>
            </div>
          </div>
        </div>

        {/* Understanding Depression Treatment */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Understanding Online Depression Treatment</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Treatment Approaches</h3>
              <div class="space-y-4">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Therapy Options</h4>
                    <p class="text-gray-600">Different therapeutic approaches including CBT, interpersonal therapy, and psychodynamic therapy.</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Medication Management</h4>
                    <p class="text-gray-600">Antidepressant prescriptions and monitoring when appropriate.</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Combined Care</h4>
                    <p class="text-gray-600">Integration of therapy and medication for comprehensive treatment.</p>
                  </div>
                </div>
              </div>
            </div>
            
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Important Considerations</h3>
              <div class="space-y-4">
                <div class="flex items-start">
                  <Shield class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Severity Level</h4>
                    <p class="text-gray-600">Online therapy is most appropriate for mild to moderate depression.</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Treatment Costs</h4>
                    <p class="text-gray-600">Consider therapy fees, medication costs, and insurance coverage.</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <Users class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Support System</h4>
                    <p class="text-gray-600">Additional support resources and crisis management options.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Detailed Platform Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Detailed Platform Reviews</h2>
          
          {platforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class="mr-2">
                        {renderStars(platform.rating)}
                      </div>
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                        <span class="text-gray-600">{platform.price}</span>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <button class="w-full min-w-0 justify-center">Read full review</button>
                      <button class="w-full min-w-0 justify-center">Visit Website</button>
                    </div>
                  </div>
                  
                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-gray-800 mb-3">Why We Recommend It</h4>
                    <p class="text-gray-600 mb-6">
                      {platform.description}
                    </p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                      
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                    
                    <div>
                      <h5 class="font-bold text-gray-800 mb-3">Key Features</h5>
                      <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                        {platform.features.map((feature, i) => (
                          <div key={i} class="bg-gray-50 rounded-lg p-3 flex items-center">
                            <CheckCircle class="h-4 w-4 text-indigo-600 mr-2 flex-shrink-0" />
                            <span class="text-gray-700 text-sm">{feature}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                    
                    <div class="mt-6 bg-indigo-50 rounded-lg p-4">
                      <h5 class="font-bold text-gray-800 mb-2">Best For</h5>
                      <p class="text-gray-700">{platform.bestFor}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* Choosing the Right Platform */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right Platform</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Brain class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Depression Type</h3>
              <p class="text-gray-600">
                Consider the severity and type of your depression symptoms when choosing a platform.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <DollarSign class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Treatment Approach</h3>
              <p class="text-gray-600">
                Decide whether you need therapy alone or combined with medication management.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Shield class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Support Level</h3>
              <p class="text-gray-600">
                Evaluate the level of support and resources offered by each platform.
              </p>
            </div>
          </div>
          
          <div class="mt-8 bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Recommendation</h3>
            <p class="text-gray-700 mb-4">
              For most people seeking depression treatment, we recommend:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Talkspace</strong> for those wanting comprehensive care with insurance coverage</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>BetterHelp</strong> for those seeking affordable therapy with financial aid options</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Brightside</strong> for those needing specialized depression treatment with medication</span>
              </li>
            </ul>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">Ready to Start Your Journey to Better Mental Health?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the perfect online therapy platform for treating your depression.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find Your Perfect Match</a>
            <a href="/tools/assessments/depression-screening" class="border-white text-white hover:bg-white hover:bg-opacity-10">Take Depression Assessment</a>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
