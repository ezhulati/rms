---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ArrowRight, Star, CheckCircle, XCircle, Brain, Search, ExternalLink, Shield, Users, MessageSquare, Video, Phone, Calendar, DollarSign } from 'lucide-react';
---

<BaseLayout>
<div class="bg-gray-50 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Best Online Therapy for Addiction & Recovery</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Find platforms supporting addiction recovery, substance use disorders, and maintaining sobriety with specialized treatment approaches and support systems.
          </p>
          <div class="flex justify-center">
            <Button 
              as={Link} 
              to="/tools/matchers/therapy-platform-matcher" 
              variant="primary" 
              size="lg" 
              icon={Search}
            >
              Find your perfect therapy match
            </Button>
          </div>
        </div>

        {/* Quick Summary */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Top Picks for Addiction Treatment at a Glance</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Best Overall */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Overall
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Monument</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.8)}
                  </div>
                  <span class="text-gray-600">4.8/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Specialized platform for alcohol use disorder treatment with comprehensive care options including therapy and medication management.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $39-$249/month
              </div>
              <Button 
                as={Link} 
                to="/reviews/platforms/monument" 
                variant="outline" 
                size="sm" 
                class="w-full min-w-0 justify-center mb-2"
              >
                Read full review
              </Button>
              <Button 
                as="a"
                href="https://www.joinmonument.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                variant="primary"
                size="sm"
                icon={ExternalLink}
                class="w-full min-w-0 justify-center"
              >
                Visit Monument
              </Button>
            </div>
            
            {/* Best Intensive Program */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Intensive Program
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Lionrock</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.3)}
                  </div>
                  <span class="text-gray-600">4.3/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Comprehensive online intensive outpatient program with strong group support and evidence-based treatment approaches.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> Insurance-based
              </div>
              <Button 
                as={Link} 
                to="/reviews/platforms/lionrock" 
                variant="outline" 
                size="sm" 
                class="w-full min-w-0 justify-center mb-2"
              >
                Read full review
              </Button>
              <Button 
                as="a"
                href="https://www.lionrockrecovery.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                variant="primary"
                size="sm"
                icon={ExternalLink}
                class="w-full min-w-0 justify-center"
              >
                Visit Lionrock
              </Button>
            </div>
            
            {/* Best for MAT */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best for MAT
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Workit Health</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.2)}
                  </div>
                  <span class="text-gray-600">4.2/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Virtual addiction care platform specializing in medication-assisted treatment with integrated therapy support.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $49-$299/month
              </div>
              <Button 
                as={Link} 
                to="/reviews/platforms/workit-health" 
                variant="outline" 
                size="sm" 
                class="w-full min-w-0 justify-center mb-2"
              >
                Read full review
              </Button>
              <Button 
                as="a"
                href="https://www.workithealth.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                variant="primary"
                size="sm"
                icon={ExternalLink}
                class="w-full min-w-0 justify-center"
              >
                Visit Workit Health
              </Button>
            </div>
          </div>
        </div>

        {/* Why Specialized Addiction Treatment Matters */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Why Specialized Addiction Treatment Matters</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Unique Treatment Needs</h3>
              <p class="text-gray-600 mb-4">
                Addiction and substance use disorders require specialized treatment approaches that differ from general mental health care. Key aspects include:
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Evidence-based addiction treatment protocols</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Medication-assisted treatment when appropriate</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Regular monitoring and accountability</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Peer support and community resources</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Relapse prevention strategies</span>
                </li>
              </ul>
              <p class="text-gray-600">
                Therapists specialized in addiction treatment understand these unique needs and can provide more effective support for recovery.
              </p>
            </div>
            
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Comprehensive Care Approach</h3>
              <p class="text-gray-600 mb-4">
                Effective addiction treatment often requires a multi-faceted approach that includes:
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Individual therapy for underlying issues</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Group support for shared experiences</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Medical supervision when needed</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Family support and education</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Long-term recovery planning</span>
                </li>
              </ul>
              <p class="text-gray-600">
                Specialized platforms are better equipped to provide this comprehensive level of care.
              </p>
            </div>
          </div>
          
          <div class="mt-8 bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Communication Preferences</h3>
            <p class="text-gray-700 mb-4">
              Different communication methods serve various needs in addiction treatment:
            </p>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-center mb-2">
                  <MessageSquare class="h-5 w-5 text-indigo-600 mr-2" />
                  <h4 class="font-bold text-gray-800">Messaging Support</h4>
                </div>
                <p class="text-gray-600 text-sm">
                  24/7 access to support through messaging can be crucial during moments of craving or difficulty.
                </p>
              </div>
              
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-center mb-2">
                  <Video class="h-5 w-5 text-indigo-600 mr-2" />
                  <h4 class="font-bold text-gray-800">Video Sessions</h4>
                </div>
                <p class="text-gray-600 text-sm">
                  Face-to-face interaction helps build stronger therapeutic relationships and allows for better assessment.
                </p>
              </div>
              
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-center mb-2">
                  <Users class="h-5 w-5 text-indigo-600 mr-2" />
                  <h4 class="font-bold text-gray-800">Group Support</h4>
                </div>
                <p class="text-gray-600 text-sm">
                  Peer support and group therapy provide community, accountability, and shared learning experiences.
                </p>
              </div>
            </div>
          </div>
        </div>

        {/* Detailed Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Detailed Reviews of the Best Addiction Treatment Platforms</h2>
          
          {platforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class="mr-2">
                        {renderStars(platform.rating)}
                      </div>
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                        <span class="text-gray-600">{platform.price}</span>
                      </div>
                      <div class="flex items-center">
                        <div class="flex space-x-1 mr-2">
                          {platform.communication.includes('messaging') && (
                            <MessageSquare class="h-4 w-4 text-indigo-600" aria-label="Messaging" />
                          )}
                          {platform.communication.includes('video') && (
                            <Video class="h-4 w-4 text-indigo-600" aria-label="Video" />
                          )}
                          {platform.communication.includes('phone') && (
                            <Phone class="h-4 w-4 text-indigo-600" aria-label="Phone" />
                          )}
                        </div>
                        <span class="text-gray-600">Communication</span>
                      </div>
                      <div class="flex items-center">
                        {platform.insurance ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Insurance Coverage</span>
                      </div>
                      <div class="flex items-center">
                        {platform.medication ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Medication Management</span>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <Button 
                        as={Link} 
                        to={`/reviews/platforms/${platform.slug}`} 
                        variant="outline" 
                        size="sm" 
                        class="w-full min-w-0 justify-center"
                      >
                        Read full review
                      </Button>
                      <Button 
                        as="a"
                        href={`https://www.${platform.slug.replace('-', '')}.com`} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        variant="primary"
                        size="sm"
                        icon={ExternalLink}
                        class="w-full min-w-0 justify-center"
                      >
                        Visit Website
                      </Button>
                    </div>
                  </div>
                  
                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-gray-800 mb-3">Why We Recommend It</h4>
                    <p class="text-gray-600 mb-4">
                      {platform.description}
                    </p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                      
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                    
                    <div>
                      <h5 class="font-bold text-gray-800 mb-3">Key Features</h5>
                      <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                        {platform.features.map((feature, i) => (
                          <div key={i} class="bg-gray-50 rounded-lg p-3 flex items-center">
                            <CheckCircle class="h-4 w-4 text-indigo-600 mr-2 flex-shrink-0" />
                            <span class="text-gray-700 text-sm">{feature}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                    
                    <div class="mt-6 bg-indigo-50 rounded-lg p-4">
                      <h5 class="font-bold text-gray-800 mb-2">Best For</h5>
                      <p class="text-gray-700">{platform.bestFor}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* How to Choose */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right Addiction Treatment Platform</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Brain class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Treatment Approach</h3>
              <p class="text-gray-600">
                Consider platforms that offer evidence-based addiction treatment methods like CBT, motivational interviewing, and when needed, medication-assisted treatment (MAT).
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Shield class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Level of Care</h3>
              <p class="text-gray-600">
                Evaluate whether you need intensive outpatient treatment, regular counseling, or maintenance support. Some platforms offer more comprehensive care than others.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Support Features</h3>
              <p class="text-gray-600">
                Look for platforms that offer the right mix of individual therapy, group support, medication management if needed, and crisis resources.
              </p>
            </div>
          </div>
          
          <div class="bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Recommendation</h3>
            <p class="text-gray-700 mb-4">
              For most people seeking online addiction treatment, we recommend:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Monument</strong> for alcohol use disorder, especially if you're interested in medication-assisted treatment</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Lionrock</strong> for those needing a more intensive, structured program with group support</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Workit Health</strong> for those seeking medication-assisted treatment for various substance use disorders</span>
              </li>
            </ul>
          </div>
        </div>

        {/* Important Considerations */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Important Considerations for Online Addiction Treatment</h2>
          
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">When Online Treatment Is Appropriate</h3>
              <p class="text-gray-600">
                Online addiction treatment can be effective for many people, but it's most appropriate for:
              </p>
              <ul class="mt-2 space-y-2">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Individuals who are medically stable and not at risk for severe withdrawal</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Those with a stable living environment and support system</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>People in early recovery or maintaining sobriety</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Individuals seeking ongoing support after completing intensive treatment</span>
                </li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">When Higher Levels of Care Are Needed</h3>
              <p class="text-gray-600">
                Online treatment may not be appropriate for:
              </p>
              <ul class="mt-2 space-y-2">
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>Individuals at risk for severe withdrawal symptoms</span>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>Those with severe or unstable mental health conditions</span>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>People who need 24/7 monitoring or support</span>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>Individuals with a history of multiple relapses</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center mb-8">
          <h2 class="text-2xl font-bold mb-4">Ready to Start Your Recovery Journey?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to find the right addiction treatment platform for your specific needs and circumstances.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <Button 
              as={Link} 
              to="/tools/matchers/therapy-platform-matcher" 
              variant="light"
              size="lg"
            >
              Find Your Perfect Match
            </Button>
            <Button 
              as={Link} 
              to="/tools/assessments/addiction-assessment" 
              variant="outline"
              size="lg"
              class="border-white text-white hover:bg-white hover:bg-opacity-10"
            >
              Take Addiction Assessment
            </Button>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
