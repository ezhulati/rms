---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { platforms, getPlatformBySlug } from '../../../siteData';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Shield, Users, Heart, DollarSign, AlertCircle } from 'lucide-react';

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};

// Select platforms best for anxiety
const anxietyPlatforms = [
  getPlatformBySlug('betterhelp'),
  getPlatformBySlug('online-therapy-com'),
  getPlatformBySlug('brightside'),
  getPlatformBySlug('talkspace'),
  getPlatformBySlug('cerebral')
].filter(p => p);
---

<BaseLayout>
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="text-center mb-12">
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Best Online Therapy for Anxiety 2025</h1>
        <p class="font-serif italic text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto mb-8">
          Find specialized online therapy platforms offering evidence-based treatment for anxiety disorders, including generalized anxiety, panic disorder, social anxiety, and more.
        </p>
        <div class="flex justify-center">
          <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find your anxiety therapy match</a>
        </div>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

        {/* Quick Summary */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Top Picks for Anxiety Therapy at a Glance</h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Best Overall */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Overall
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">BetterHelp</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.8)}
                  </div>
                  <span class="text-gray-600">4.8/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Largest network of anxiety specialists with flexible communication options and proven track record treating anxiety disorders.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $60-$90/week
              </div>
              <a href="https://www.betterhelp.com" class="w-full min-w-0 justify-center">Visit BetterHelp</a>
            </div>

            {/* Best for CBT */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best for CBT
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Online-Therapy.com</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.0)}
                  </div>
                  <span class="text-gray-600">4.0/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Structured CBT program specifically designed for anxiety with worksheets, activities, and evidence-based exercises.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $40-$88/week
              </div>
              <a href="https://www.online-therapy.com" class="w-full min-w-0 justify-center">Visit Online-Therapy.com</a>
            </div>

            {/* Best with Medication */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best with Medication
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Brightside</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.1)}
                  </div>
                  <span class="text-gray-600">4.1/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Combines therapy with psychiatry for comprehensive anxiety treatment including medication management when needed.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $95-$299/month
              </div>
              <a href="https://www.brightside.com" class="w-full min-w-0 justify-center">Visit Brightside</a>
            </div>
          </div>
        </div>

        {/* Understanding Anxiety */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Understanding Anxiety and Online Treatment</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Types of Anxiety Disorders Treated Online</h3>
              <p class="text-gray-600 mb-4">
                Online therapy is highly effective for various anxiety disorders, with research showing outcomes comparable to in-person treatment:
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Generalized Anxiety Disorder (GAD):</strong> Persistent worry about multiple areas of life</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Social Anxiety:</strong> Fear of social situations and judgment from others</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Panic Disorder:</strong> Recurrent panic attacks and fear of future attacks</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Health Anxiety:</strong> Excessive worry about having serious illness</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Phobias:</strong> Intense fear of specific objects or situations</span>
                </li>
              </ul>
            </div>

            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Evidence-Based Treatment Approaches</h3>
              <p class="text-gray-600 mb-4">
                Effective online therapy for anxiety typically uses these proven approaches:
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Cognitive Behavioral Therapy (CBT):</strong> Gold standard for anxiety treatment, challenging anxious thoughts</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Exposure Therapy:</strong> Gradual exposure to feared situations in safe environment</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Acceptance and Commitment Therapy (ACT):</strong> Learning to accept anxiety while taking valued action</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Mindfulness-Based Approaches:</strong> Developing present-moment awareness to reduce worry</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Medication Management:</strong> Anti-anxiety medications when appropriate, combined with therapy</span>
                </li>
              </ul>
            </div>
          </div>

          <div class="mt-8 bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Why Online Therapy Works Well for Anxiety</h3>
            <p class="text-gray-700 mb-4">
              Online therapy offers unique advantages for anxiety treatment:
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Accessibility</h4>
                    <p class="text-gray-600 text-sm">
                      Access therapy from home, reducing anxiety about commuting or sitting in waiting rooms
                    </p>
                  </div>
                </div>
              </div>

              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Consistent Support</h4>
                    <p class="text-gray-600 text-sm">
                      Message your therapist between sessions during anxious moments for real-time support
                    </p>
                  </div>
                </div>
              </div>

              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Flexible Scheduling</h4>
                    <p class="text-gray-600 text-sm">
                      Book sessions when anxiety is highest, not just during business hours
                    </p>
                  </div>
                </div>
              </div>

              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Reduced Barriers</h4>
                    <p class="text-gray-600 text-sm">
                      Lower threshold to start therapy, particularly helpful for those with social anxiety
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Detailed Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Detailed Reviews of the Best Anxiety Therapy Platforms</h2>

          {anxietyPlatforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class="mr-2">
                        {renderStars(platform.rating)}
                      </div>
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                        <span class="text-gray-600">{platform.price}</span>
                      </div>
                      <div class="flex items-center">
                        <div class="flex space-x-1 mr-2">
                          {platform.communication.includes('messaging') && (
                            <MessageSquare class="h-4 w-4 text-indigo-600" />
                          )}
                          {platform.communication.includes('video') && (
                            <Video class="h-4 w-4 text-indigo-600" />
                          )}
                          {platform.communication.includes('phone') && (
                            <Phone class="h-4 w-4 text-indigo-600" />
                          )}
                        </div>
                        <span class="text-gray-600">Communication</span>
                      </div>
                      <div class="flex items-center">
                        {platform.insurance ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Insurance Coverage</span>
                      </div>
                      <div class="flex items-center">
                        {platform.medication ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Medication Management</span>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <button class="w-full min-w-0 justify-center">Visit Website</button>
                    </div>
                  </div>

                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-gray-800 mb-3">Why We Recommend It for Anxiety</h4>
                    <p class="text-gray-600 mb-4">
                      {platform.description}
                    </p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>

                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>

                    <div class="mt-6 bg-indigo-50 rounded-lg p-4">
                      <h5 class="font-bold text-gray-800 mb-2">Best For</h5>
                      <div class="flex flex-wrap gap-2">
                        {platform.bestFor.map((item, i) => (
                          <span key={i} class="bg-white px-3 py-1 rounded-full text-sm text-gray-700">{item}</span>
                        ))}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* How to Choose */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right Anxiety Therapy Platform</h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <AlertCircle class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Severity Level</h3>
              <p class="text-gray-600">
                For mild to moderate anxiety, therapy-only platforms work well. For severe anxiety or panic disorder, consider platforms offering medication management.
              </p>
            </div>

            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Treatment Approach</h3>
              <p class="text-gray-600">
                CBT is the gold standard for anxiety. Look for platforms specializing in CBT or offering structured anxiety programs with proven techniques.
              </p>
            </div>

            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Heart class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Support Frequency</h3>
              <p class="text-gray-600">
                Anxiety can spike unexpectedly. Platforms offering unlimited messaging between sessions provide valuable support during anxious moments.
              </p>
            </div>
          </div>

          <div class="bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Recommendation</h3>
            <p class="text-gray-700 mb-4">
              For most individuals seeking anxiety treatment:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>BetterHelp</strong> for the largest network of anxiety specialists and flexible communication options</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Online-Therapy.com</strong> for structured CBT approach with worksheets and activities specifically for anxiety</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Brightside</strong> for comprehensive treatment combining therapy with medication for moderate to severe anxiety</span>
              </li>
            </ul>
          </div>
        </div>

        {/* FAQs */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Frequently Asked Questions</h2>

          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">How long does it take for online therapy to help with anxiety?</h3>
              <p class="text-gray-600">
                Many people notice improvement within 4-8 weeks of consistent therapy, especially with CBT approaches. However, treatment duration varies based on anxiety severity and individual factors. Most benefit from 12-20 sessions.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Can online therapy help with panic attacks?</h3>
              <p class="text-gray-600">
                Yes, online therapy is effective for panic disorder. CBT teaches techniques to manage panic symptoms, identify triggers, and reduce fear of future attacks. Messaging access between sessions can be particularly helpful during panic episodes.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Do I need medication for anxiety or is therapy enough?</h3>
              <p class="text-gray-600">
                This depends on severity. Mild to moderate anxiety often responds well to therapy alone. Severe anxiety, panic disorder, or anxiety interfering with daily life may benefit from combined therapy and medication. Your therapist can help determine the best approach.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">What if my anxiety makes it hard to start therapy?</h3>
              <p class="text-gray-600">
                This is common with social anxiety. Online therapy actually reduces this barrier since you can start from home. Begin with messaging if video feels too overwhelming, and transition to video sessions when comfortable.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Can online therapy help with specific phobias?</h3>
              <p class="text-gray-600">
                Yes, exposure therapy for phobias can be adapted for online settings. Therapists use virtual exposure techniques, gradual exposure planning, and between-session assignments. Some phobias may require in-person components, which your therapist will discuss.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">How do I know if my anxiety is severe enough for therapy?</h3>
              <p class="text-gray-600">
                If anxiety interferes with work, relationships, daily activities, or quality of life, therapy can help. You don't need to wait until anxiety is "severe enough" - early intervention often leads to faster improvement.
              </p>
            </div>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">Ready to Start Managing Your Anxiety?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to find the perfect anxiety therapy platform matched to your specific needs and symptoms.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-white text-indigo-600 px-6 py-3 whitespace-nowrap rounded-md hover:bg-gray-100 transition">Find Your Perfect Match</a>
            <a href="/tools/assessments/anxiety-screening" class="border-white text-white hover:bg-white hover:bg-opacity-10 inline-flex items-center px-6 py-3 rounded-md border-2">Take Anxiety Assessment</a>
          </div>
        </div>
    </div>
  </section>
</BaseLayout>
