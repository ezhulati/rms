---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { platforms, getPlatformBySlug } from '../../../siteData';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Shield, Users, Heart, DollarSign, AlertCircle, Award, Sparkles } from 'lucide-react';

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};

// Select platforms best for anxiety
const anxietyPlatforms = [
  getPlatformBySlug('betterhelp'),
  getPlatformBySlug('online-therapy-com'),
  getPlatformBySlug('brightside'),
  getPlatformBySlug('talkspace'),
  getPlatformBySlug('cerebral')
].filter(p => p);
---

<BaseLayout title="Best Online Therapy for Anxiety 2025 | Expert Reviews & Comparisons" description="Find specialized online therapy platforms offering evidence-based treatment for anxiety disorders, including generalized anxiety, panic disorder, social anxiety, and more.">

  {/* Hero Section - Enhanced */}
  <section class="relative bg-gradient-to-b from-white via-brand-primary-50/20 to-white pt-20 pb-16 md:pt-28 md:pb-20 overflow-hidden">
    {/* Background decoration */}
    <div class="absolute inset-0 overflow-hidden pointer-events-none opacity-30">
      <div class="absolute top-20 right-20 w-96 h-96 bg-brand-primary-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
      <div class="absolute top-40 left-20 w-96 h-96 bg-brand-secondary-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
      <div class="absolute -bottom-8 left-1/2 w-96 h-96 bg-accent-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6 lg:px-12 relative z-10">
      {/* Breadcrumb */}
      <nav class="flex items-center space-x-2 text-sm text-neutral-600 mb-8 animate-fade-in">
        <a href="/" class="hover:text-brand-primary-600 transition">Home</a>
        <span>/</span>
        <a href="/best" class="hover:text-brand-primary-600 transition">Best Platforms</a>
        <span>/</span>
        <a href="/best/conditions" class="hover:text-brand-primary-600 transition">Conditions</a>
        <span>/</span>
        <span class="text-neutral-900 font-medium">Anxiety</span>
      </nav>

      <div class="text-center animate-fade-in-up">
        <div class="inline-flex items-center gap-2 bg-brand-primary-100 text-brand-primary-700 px-4 py-2 rounded-full text-sm font-medium mb-6">
          <Sparkles class="h-4 w-4" />
          <span>Expert-Reviewed Anxiety Treatment Platforms</span>
        </div>
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Best Online Therapy for Anxiety 2025</h1>
        <p class="font-sans text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto mb-8 leading-relaxed">
          Find specialized online therapy platforms offering evidence-based treatment for anxiety disorders, including generalized anxiety, panic disorder, social anxiety, and more.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center gap-2 bg-brand-primary-600 text-white px-8 py-4 rounded-lg hover:bg-brand-primary-700 transition-all hover:scale-105 shadow-lg hover:shadow-xl font-medium">
            <Search class="h-5 w-5" />
            Find Your Perfect Match
          </a>
          <a href="/tools/assessments/anxiety-screening" class="inline-flex items-center gap-2 bg-white text-brand-primary-600 border-2 border-brand-primary-200 px-8 py-4 rounded-lg hover:border-brand-primary-400 transition-all hover:scale-105 shadow-sm hover:shadow-md font-medium">
            <Heart class="h-5 w-5" />
            Take Anxiety Assessment
          </a>
        </div>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

        {/* Top Picks - Enhanced */}
        <div class="bg-gradient-to-br from-brand-primary-50 to-white rounded-2xl border-2 border-brand-primary-100 p-8 md:p-12 mb-16 shadow-sm">
          <div class="flex items-center gap-3 mb-8">
            <Award class="h-8 w-8 text-brand-primary-600" />
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-900">Top Picks for Anxiety Therapy</h2>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Best Overall */}
            <div class="bg-white rounded-xl border-2 border-brand-primary-200 p-6 relative hover:shadow-lg transition-all hover:scale-105">
              <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-gradient-to-r from-brand-primary-600 to-brand-primary-500 text-white px-4 py-1.5 rounded-full text-sm font-bold shadow-md">
                üèÜ Best Overall
              </div>
              <div class="mt-4">
                <h3 class="text-2xl font-bold text-neutral-900 mb-2">BetterHelp</h3>
                <div class="flex items-center gap-2 mb-4">
                  {renderStars(4.8).map((filled, i) => (
                    <Star key={i} class={`h-5 w-5 ${filled ? 'fill-yellow-400 text-yellow-400' : 'text-gray-300'}`} />
                  ))}
                  <span class="text-neutral-600 font-medium ml-1">4.8/5</span>
                </div>
                <p class="text-neutral-600 mb-6 leading-relaxed">
                  Largest network of anxiety specialists with flexible communication options and proven track record treating anxiety disorders.
                </p>
                <div class="flex items-center gap-2 text-neutral-700 mb-6">
                  <DollarSign class="h-5 w-5 text-brand-primary-600" />
                  <span class="font-medium">$60-$90/week</span>
                </div>
                <a href="/reviews/platforms/betterhelp" class="block w-full text-center bg-brand-primary-600 text-white px-6 py-3 rounded-lg hover:bg-brand-primary-700 transition font-medium">View Full Review</a>
              </div>
            </div>

            {/* Best for CBT */}
            <div class="bg-white rounded-xl border-2 border-accent-200 p-6 relative hover:shadow-lg transition-all hover:scale-105">
              <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-gradient-to-r from-accent-500 to-accent-600 text-white px-4 py-1.5 rounded-full text-sm font-bold shadow-md">
                ‚≠ê Best for CBT
              </div>
              <div class="mt-4">
                <h3 class="text-2xl font-bold text-neutral-900 mb-2">Online-Therapy.com</h3>
                <div class="flex items-center gap-2 mb-4">
                  {renderStars(4.0).map((filled, i) => (
                    <Star key={i} class={`h-5 w-5 ${filled ? 'fill-yellow-400 text-yellow-400' : 'text-gray-300'}`} />
                  ))}
                  <span class="text-neutral-600 font-medium ml-1">4.0/5</span>
                </div>
                <p class="text-neutral-600 mb-6 leading-relaxed">
                  Structured CBT program specifically designed for anxiety with worksheets, activities, and evidence-based exercises.
                </p>
                <div class="flex items-center gap-2 text-neutral-700 mb-6">
                  <DollarSign class="h-5 w-5 text-accent-600" />
                  <span class="font-medium">$40-$88/week</span>
                </div>
                <a href="/reviews/platforms/online-therapy" class="block w-full text-center bg-accent-500 text-white px-6 py-3 rounded-lg hover:bg-accent-600 transition font-medium">View Full Review</a>
              </div>
            </div>

            {/* Best with Medication */}
            <div class="bg-white rounded-xl border-2 border-brand-secondary-200 p-6 relative hover:shadow-lg transition-all hover:scale-105">
              <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-gradient-to-r from-brand-secondary-600 to-brand-secondary-500 text-white px-4 py-1.5 rounded-full text-sm font-bold shadow-md">
                üíä Best with Medication
              </div>
              <div class="mt-4">
                <h3 class="text-2xl font-bold text-neutral-900 mb-2">Brightside</h3>
                <div class="flex items-center gap-2 mb-4">
                  {renderStars(4.1).map((filled, i) => (
                    <Star key={i} class={`h-5 w-5 ${filled ? 'fill-yellow-400 text-yellow-400' : 'text-gray-300'}`} />
                  ))}
                  <span class="text-neutral-600 font-medium ml-1">4.1/5</span>
                </div>
                <p class="text-neutral-600 mb-6 leading-relaxed">
                  Combines therapy with psychiatry for comprehensive anxiety treatment including medication management when needed.
                </p>
                <div class="flex items-center gap-2 text-neutral-700 mb-6">
                  <DollarSign class="h-5 w-5 text-brand-secondary-600" />
                  <span class="font-medium">$95-$299/month</span>
                </div>
                <a href="/reviews/platforms/brightside" class="block w-full text-center bg-brand-secondary-600 text-white px-6 py-3 rounded-lg hover:bg-brand-secondary-700 transition font-medium">View Full Review</a>
              </div>
            </div>
          </div>
        </div>

        {/* Understanding Anxiety - Enhanced */}
        <div class="bg-white rounded-2xl border-2 border-neutral-100 p-8 md:p-12 mb-16 shadow-sm">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-900 mb-8">Understanding Anxiety and Online Treatment</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <div class="bg-gradient-to-br from-green-50 to-white rounded-xl border border-green-100 p-6">
              <h3 class="text-xl font-bold text-neutral-900 mb-4 flex items-center gap-2">
                <div class="w-1 h-6 bg-green-500 rounded-full"></div>
                Types of Anxiety Disorders Treated Online
              </h3>
              <p class="text-neutral-600 mb-4 leading-relaxed">
                Online therapy is highly effective for various anxiety disorders, with research showing outcomes comparable to in-person treatment:
              </p>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-green-500 mt-0.5 flex-shrink-0" />
                  <span class="text-neutral-700"><strong class="text-neutral-900">Generalized Anxiety Disorder (GAD):</strong> Persistent worry about multiple areas of life</span>
                </li>
                <li class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-green-500 mt-0.5 flex-shrink-0" />
                  <span class="text-neutral-700"><strong class="text-neutral-900">Social Anxiety:</strong> Fear of social situations and judgment from others</span>
                </li>
                <li class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-green-500 mt-0.5 flex-shrink-0" />
                  <span class="text-neutral-700"><strong class="text-neutral-900">Panic Disorder:</strong> Recurrent panic attacks and fear of future attacks</span>
                </li>
                <li class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-green-500 mt-0.5 flex-shrink-0" />
                  <span class="text-neutral-700"><strong class="text-neutral-900">Health Anxiety:</strong> Excessive worry about having serious illness</span>
                </li>
                <li class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-green-500 mt-0.5 flex-shrink-0" />
                  <span class="text-neutral-700"><strong class="text-neutral-900">Phobias:</strong> Intense fear of specific objects or situations</span>
                </li>
              </ul>
            </div>

            <div class="bg-gradient-to-br from-blue-50 to-white rounded-xl border border-blue-100 p-6">
              <h3 class="text-xl font-bold text-neutral-900 mb-4 flex items-center gap-2">
                <div class="w-1 h-6 bg-blue-500 rounded-full"></div>
                Evidence-Based Treatment Approaches
              </h3>
              <p class="text-neutral-600 mb-4 leading-relaxed">
                Effective online therapy for anxiety typically uses these proven approaches:
              </p>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-blue-500 mt-0.5 flex-shrink-0" />
                  <span class="text-neutral-700"><strong class="text-neutral-900">Cognitive Behavioral Therapy (CBT):</strong> Gold standard for anxiety treatment, challenging anxious thoughts</span>
                </li>
                <li class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-blue-500 mt-0.5 flex-shrink-0" />
                  <span class="text-neutral-700"><strong class="text-neutral-900">Exposure Therapy:</strong> Gradual exposure to feared situations in safe environment</span>
                </li>
                <li class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-blue-500 mt-0.5 flex-shrink-0" />
                  <span class="text-neutral-700"><strong class="text-neutral-900">Acceptance and Commitment Therapy (ACT):</strong> Learning to accept anxiety while taking valued action</span>
                </li>
                <li class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-blue-500 mt-0.5 flex-shrink-0" />
                  <span class="text-neutral-700"><strong class="text-neutral-900">Mindfulness-Based Approaches:</strong> Developing present-moment awareness to reduce worry</span>
                </li>
                <li class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-blue-500 mt-0.5 flex-shrink-0" />
                  <span class="text-neutral-700"><strong class="text-neutral-900">Medication Management:</strong> Anti-anxiety medications when appropriate, combined with therapy</span>
                </li>
              </ul>
            </div>
          </div>

          <div class="bg-gradient-to-br from-brand-primary-50 to-white rounded-xl border border-brand-primary-100 p-6">
            <h3 class="text-xl font-bold text-neutral-900 mb-4 flex items-center gap-2">
              <Shield class="h-6 w-6 text-brand-primary-600" />
              Why Online Therapy Works Well for Anxiety
            </h3>
            <p class="text-neutral-700 mb-6 leading-relaxed">
              Online therapy offers unique advantages for anxiety treatment:
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="bg-white rounded-lg border border-neutral-200 p-4 hover:shadow-md transition">
                <div class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-brand-primary-600 mt-0.5 flex-shrink-0" />
                  <div>
                    <h4 class="font-bold text-neutral-900 mb-1">Accessibility</h4>
                    <p class="text-neutral-600 text-sm leading-relaxed">
                      Access therapy from home, reducing anxiety about commuting or sitting in waiting rooms
                    </p>
                  </div>
                </div>
              </div>

              <div class="bg-white rounded-lg border border-neutral-200 p-4 hover:shadow-md transition">
                <div class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-brand-primary-600 mt-0.5 flex-shrink-0" />
                  <div>
                    <h4 class="font-bold text-neutral-900 mb-1">Consistent Support</h4>
                    <p class="text-neutral-600 text-sm leading-relaxed">
                      Message your therapist between sessions during anxious moments for real-time support
                    </p>
                  </div>
                </div>
              </div>

              <div class="bg-white rounded-lg border border-neutral-200 p-4 hover:shadow-md transition">
                <div class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-brand-primary-600 mt-0.5 flex-shrink-0" />
                  <div>
                    <h4 class="font-bold text-neutral-900 mb-1">Flexible Scheduling</h4>
                    <p class="text-neutral-600 text-sm leading-relaxed">
                      Book sessions when anxiety is highest, not just during business hours
                    </p>
                  </div>
                </div>
              </div>

              <div class="bg-white rounded-lg border border-neutral-200 p-4 hover:shadow-md transition">
                <div class="flex items-start gap-3">
                  <CheckCircle class="h-5 w-5 text-brand-primary-600 mt-0.5 flex-shrink-0" />
                  <div>
                    <h4 class="font-bold text-neutral-900 mb-1">Reduced Barriers</h4>
                    <p class="text-neutral-600 text-sm leading-relaxed">
                      Lower threshold to start therapy, particularly helpful for those with social anxiety
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Detailed Reviews - Enhanced */}
        <div class="mb-16">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-900 mb-8">Detailed Reviews of the Best Anxiety Therapy Platforms</h2>

          {anxietyPlatforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-2xl border-2 border-neutral-100 overflow-hidden mb-8 hover:shadow-lg transition-all hover:border-brand-primary-200">
              <div class="p-8 md:p-10">
                <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
                  {/* Left Column - Platform Info */}
                  <div class="lg:col-span-1">
                    <div class="flex items-center gap-3 mb-4">
                      <div class="bg-brand-primary-100 text-brand-primary-700 rounded-full w-10 h-10 flex items-center justify-center font-bold text-lg">
                        {index + 1}
                      </div>
                      <h3 class="font-heading text-2xl font-bold text-neutral-900">{platform.name}</h3>
                    </div>

                    <div class="flex items-center gap-2 mb-6">
                      {renderStars(platform.rating).map((filled, i) => (
                        <Star key={i} class={`h-5 w-5 ${filled ? 'fill-yellow-400 text-yellow-400' : 'text-gray-300'}`} />
                      ))}
                      <span class="text-neutral-600 font-medium ml-1">{platform.rating}/5</span>
                    </div>

                    <div class="space-y-4 mb-8">
                      <div class="flex items-center gap-3">
                        <div class="bg-brand-primary-100 rounded-lg p-2">
                          <DollarSign class="h-5 w-5 text-brand-primary-600" />
                        </div>
                        <div>
                          <div class="text-xs text-neutral-500 font-medium">PRICING</div>
                          <div class="text-neutral-700 font-semibold">{platform.price}</div>
                        </div>
                      </div>

                      <div class="flex items-center gap-3">
                        <div class="bg-brand-primary-100 rounded-lg p-2">
                          <MessageSquare class="h-5 w-5 text-brand-primary-600" />
                        </div>
                        <div>
                          <div class="text-xs text-neutral-500 font-medium">COMMUNICATION</div>
                          <div class="flex gap-1 mt-1">
                            {platform.communication.includes('messaging') && (
                              <MessageSquare class="h-4 w-4 text-brand-primary-600" />
                            )}
                            {platform.communication.includes('video') && (
                              <Video class="h-4 w-4 text-brand-primary-600" />
                            )}
                            {platform.communication.includes('phone') && (
                              <Phone class="h-4 w-4 text-brand-primary-600" />
                            )}
                          </div>
                        </div>
                      </div>

                      <div class="flex items-center gap-3">
                        <div class={`rounded-lg p-2 ${platform.insurance ? 'bg-green-100' : 'bg-red-100'}`}>
                          {platform.insurance ? (
                            <CheckCircle class="h-5 w-5 text-green-600" />
                          ) : (
                            <XCircle class="h-5 w-5 text-red-600" />
                          )}
                        </div>
                        <div>
                          <div class="text-xs text-neutral-500 font-medium">INSURANCE</div>
                          <div class="text-neutral-700 font-semibold">{platform.insurance ? 'Accepted' : 'Not Accepted'}</div>
                        </div>
                      </div>

                      <div class="flex items-center gap-3">
                        <div class={`rounded-lg p-2 ${platform.medication ? 'bg-green-100' : 'bg-neutral-100'}`}>
                          {platform.medication ? (
                            <CheckCircle class="h-5 w-5 text-green-600" />
                          ) : (
                            <XCircle class="h-5 w-5 text-neutral-400" />
                          )}
                        </div>
                        <div>
                          <div class="text-xs text-neutral-500 font-medium">MEDICATION</div>
                          <div class="text-neutral-700 font-semibold">{platform.medication ? 'Available' : 'Not Available'}</div>
                        </div>
                      </div>
                    </div>

                    <a href={`/reviews/platforms/${platform.slug}`} class="block w-full text-center bg-brand-primary-600 text-white px-6 py-3 rounded-lg hover:bg-brand-primary-700 transition font-medium shadow-md hover:shadow-lg">
                      View Full Review
                    </a>
                  </div>

                  {/* Right Column - Details */}
                  <div class="lg:col-span-3">
                    <h4 class="font-bold text-neutral-900 mb-3 text-lg">Why We Recommend It for Anxiety</h4>
                    <p class="text-neutral-600 mb-6 leading-relaxed">
                      {platform.description}
                    </p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div class="bg-gradient-to-br from-green-50 to-white rounded-xl border border-green-100 p-6">
                        <h5 class="font-bold text-neutral-900 mb-4 flex items-center gap-2">
                          <CheckCircle class="h-5 w-5 text-green-500" />
                          Pros
                        </h5>
                        <ul class="space-y-2">
                          {platform.pros.slice(0, 4).map((pro, i) => (
                            <li key={i} class="flex items-start gap-2">
                              <CheckCircle class="h-4 w-4 text-green-500 mt-0.5 flex-shrink-0" />
                              <span class="text-neutral-600 text-sm leading-relaxed">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>

                      <div class="bg-gradient-to-br from-red-50 to-white rounded-xl border border-red-100 p-6">
                        <h5 class="font-bold text-neutral-900 mb-4 flex items-center gap-2">
                          <XCircle class="h-5 w-5 text-red-500" />
                          Cons
                        </h5>
                        <ul class="space-y-2">
                          {platform.cons.slice(0, 4).map((con, i) => (
                            <li key={i} class="flex items-start gap-2">
                              <XCircle class="h-4 w-4 text-red-500 mt-0.5 flex-shrink-0" />
                              <span class="text-neutral-600 text-sm leading-relaxed">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>

                    <div class="bg-gradient-to-br from-brand-primary-50 to-white rounded-xl border border-brand-primary-100 p-6">
                      <h5 class="font-bold text-neutral-900 mb-3 flex items-center gap-2">
                        <Award class="h-5 w-5 text-brand-primary-600" />
                        Best For
                      </h5>
                      <div class="flex flex-wrap gap-2">
                        {platform.bestFor.map((item, i) => (
                          <span key={i} class="bg-white border border-brand-primary-200 px-3 py-1.5 rounded-full text-sm text-neutral-700 font-medium hover:bg-brand-primary-50 transition">{item}</span>
                        ))}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* How to Choose - Enhanced */}
        <div class="bg-white rounded-2xl border-2 border-neutral-100 p-8 md:p-12 mb-16 shadow-sm">
          <h2 class="font-heading text-3xl md:text-4xl font-bold text-neutral-900 mb-8">How to Choose the Right Anxiety Therapy Platform</h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <div class="bg-gradient-to-br from-brand-primary-50 to-white rounded-xl border border-brand-primary-100 p-6 hover:shadow-md transition">
              <div class="bg-brand-primary-100 rounded-full w-14 h-14 flex items-center justify-center mb-4">
                <AlertCircle class="h-7 w-7 text-brand-primary-600" />
              </div>
              <h3 class="text-lg font-bold text-neutral-900 mb-3">Severity Level</h3>
              <p class="text-neutral-600 leading-relaxed">
                For mild to moderate anxiety, therapy-only platforms work well. For severe anxiety or panic disorder, consider platforms offering medication management.
              </p>
            </div>

            <div class="bg-gradient-to-br from-accent-50 to-white rounded-xl border border-accent-100 p-6 hover:shadow-md transition">
              <div class="bg-accent-100 rounded-full w-14 h-14 flex items-center justify-center mb-4">
                <Users class="h-7 w-7 text-accent-600" />
              </div>
              <h3 class="text-lg font-bold text-neutral-900 mb-3">Treatment Approach</h3>
              <p class="text-neutral-600 leading-relaxed">
                CBT is the gold standard for anxiety. Look for platforms specializing in CBT or offering structured anxiety programs with proven techniques.
              </p>
            </div>

            <div class="bg-gradient-to-br from-brand-secondary-50 to-white rounded-xl border border-brand-secondary-100 p-6 hover:shadow-md transition">
              <div class="bg-brand-secondary-100 rounded-full w-14 h-14 flex items-center justify-center mb-4">
