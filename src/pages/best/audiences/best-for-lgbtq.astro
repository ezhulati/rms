---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { platforms } from '../../../siteData';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Shield, Users, Heart, DollarSign } from 'lucide-react';
import { platforms } from '../../../siteData';

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};


// const platforms = []; // Now using real data from siteData


const features = [];
---

<BaseLayout>
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="text-center mb-12">
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Best Online Therapy for LGBTQ+ Individuals</h1>
        <p class="font-serif italic text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto mb-8">
          Find affirming, specialized online therapy platforms that understand and support the unique needs of LGBTQ+ individuals.
        </p>
        <div class="flex justify-center">
          <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find your perfect LGBTQ+ affirming therapy match</a>
        </div>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

        {/* Quick Summary */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Top Picks for LGBTQ+ Therapy at a Glance</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Best Overall */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Overall
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Pride Counseling</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.8)}
                  </div>
                  <span class="text-gray-600">4.8/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Specialized platform with LGBTQ+ affirming therapists trained in issues specific to the community.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $60-$90/week
              </div>
              <a href="https://www.pridecounseling.com" class="w-full min-w-0 justify-center">Visit Pride Counseling</a>
            </div>
            
            {/* Best with Insurance */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best with Insurance
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Talkspace</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.6)}
                  </div>
                  <span class="text-gray-600">4.6/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Large platform with LGBTQ+ friendly therapists and medication management with insurance coverage.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $65-$99/week
              </div>
              <a href="https://www.talkspace.com" class="w-full min-w-0 justify-center">Visit Talkspace</a>
            </div>
            
            {/* Best for Intersectional Identities */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best for Intersectionality
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Ayana Therapy</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.3)}
                  </div>
                  <span class="text-gray-600">4.3/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Culturally competent therapy platform focused on marginalized communities, including LGBTQ+ individuals of color.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $60-$90/month
              </div>
              <a href="https://www.ayanatherapy.com" class="w-full min-w-0 justify-center">Visit Ayana Therapy</a>
            </div>
          </div>
        </div>

        {/* Understanding LGBTQ+ Therapy */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Understanding LGBTQ+ Affirming Therapy</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">What Makes Therapy LGBTQ+ Affirming?</h3>
              <p class="text-gray-600 mb-4">
                LGBTQ+ affirming therapy goes beyond basic acceptance to actively validate and support diverse sexual orientations, gender identities, and relationship structures. Key elements include:
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Recognition of LGBTQ+ identities as normal variations of human experience</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Understanding of the impact of minority stress and discrimination</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Knowledge of LGBTQ+ community-specific challenges and resources</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Use of appropriate language, pronouns, and terminology</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Awareness of intersectionality with other marginalized identities</span>
                </li>
              </ul>
              <p class="text-gray-600">
                Affirming therapy creates a safe space where LGBTQ+ individuals can explore their authentic selves without fear of judgment or the need to educate their therapist about basic LGBTQ+ concepts.
              </p>
            </div>
            
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Common Therapeutic Needs in the LGBTQ+ Community</h3>
              <p class="text-gray-600 mb-4">
                While LGBTQ+ individuals seek therapy for many of the same reasons as anyone else, some concerns are more prevalent or uniquely experienced:
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Identity exploration and affirmation</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Coming out and disclosure decisions</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Family acceptance and relationship challenges</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Minority stress, discrimination, and trauma</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Gender-affirming care and transition support</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Internalized stigma and self-acceptance</span>
                </li>
              </ul>
              <p class="text-gray-600">
                Effective LGBTQ+ therapy addresses these concerns within the context of affirming one's identity rather than treating identity itself as a problem to be solved.
              </p>
            </div>
          </div>
          
          <div class="mt-8 bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">The Importance of LGBTQ+ Cultural Competence</h3>
            <p class="text-gray-700 mb-4">
              Many LGBTQ+ individuals report negative experiences with therapists who lack cultural competence, including:
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Microaggressions</h4>
                    <p class="text-gray-600 text-sm">
                      Subtle comments or assumptions that invalidate or stigmatize LGBTQ+ identities
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Over-focusing on Identity</h4>
                    <p class="text-gray-600 text-sm">
                      Assuming all problems are related to sexual orientation or gender identity
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Lack of Knowledge</h4>
                    <p class="text-gray-600 text-sm">
                      Requiring clients to educate therapists about basic LGBTQ+ concepts and experiences
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Pathologizing Identity</h4>
                    <p class="text-gray-600 text-sm">
                      Treating LGBTQ+ identities as disorders or problems to be fixed
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <p class="text-gray-700 mt-4">
              The platforms we recommend have therapists who are either LGBTQ+ specialists or have demonstrated cultural competence in working with the community.
            </p>
          </div>
        </div>

        {/* Detailed Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Detailed Reviews of the Best LGBTQ+ Therapy Platforms</h2>
          
          {platforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class="mr-2">
                        {renderStars(platform.rating)}
                      </div>
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                        <span class="text-gray-600">{platform.price}</span>
                      </div>
                      <div class="flex items-center">
                        <div class="flex space-x-1 mr-2">
                          {platform.communication.includes('messaging') && (
                            <MessageSquare class="h-4 w-4 text-indigo-600" />
                          )}
                          {platform.communication.includes('video') && (
                            <Video class="h-4 w-4 text-indigo-600" />
                          )}
                          {platform.communication.includes('phone') && (
                            <Phone class="h-4 w-4 text-indigo-600" />
                          )}
                        </div>
                        <span class="text-gray-600">Communication</span>
                      </div>
                      <div class="flex items-center">
                        {platform.insurance ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Insurance Coverage</span>
                      </div>
                      <div class="flex items-center">
                        {platform.medication ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Medication Management</span>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <button class="w-full min-w-0 justify-center">Visit Website</button>
                    </div>
                  </div>
                  
                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-gray-800 mb-3">Why We Recommend It for LGBTQ+ Individuals</h4>
                    <p class="text-gray-600 mb-4">
                      {platform.description}
                    </p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                      
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                    
                    <div>
                      <h5 class="font-bold text-gray-800 mb-3">LGBTQ+ Specific Features</h5>
                      <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                        {platform.features.map((feature, i) => (
                          <div key={i} class="bg-gray-50 rounded-lg p-3 flex items-center">
                            <CheckCircle class="h-4 w-4 text-indigo-600 mr-2 flex-shrink-0" />
                            <span class="text-gray-700 text-sm">{feature}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                    
                    <div class="mt-6 bg-indigo-50 rounded-lg p-4">
                      <h5 class="font-bold text-gray-800 mb-2">Best For</h5>
                      <p class="text-gray-700">{platform.bestFor}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* How to Choose */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right LGBTQ+ Therapy Platform</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Heart class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Affirming Approach</h3>
              <p class="text-gray-600">
                Look for platforms that explicitly state their commitment to LGBTQ+ affirming care and have therapists with specialized training or experience in LGBTQ+ issues.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Intersectionality</h3>
              <p class="text-gray-600">
                Consider how your other identities (race, ethnicity, disability, etc.) intersect with your LGBTQ+ identity and whether the platform offers therapists who understand these intersections.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <DollarSign class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Practical Factors</h3>
              <p class="text-gray-600">
                Consider your budget, insurance needs, communication preferences, and whether you might benefit from medication management alongside therapy.
              </p>
            </div>
          </div>
          
          <div class="bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Recommendation</h3>
            <p class="text-gray-700 mb-4">
              For most LGBTQ+ individuals seeking online therapy, we recommend:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Pride Counseling</strong> for those seeking specialized LGBTQ+ affirming therapy with therapists trained in community-specific issues</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Talkspace</strong> for those needing both therapy and medication management with insurance coverage</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Ayana Therapy</strong> for LGBTQ+ individuals of color seeking culturally competent, intersectional therapy</span>
              </li>
            </ul>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">Ready to Start Your Therapy Journey?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the perfect LGBTQ+ affirming therapy platform for your needs.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find Your Perfect Match</a>
            <a href="/learn/fundamentals/therapy-types-explained" class="border-white text-white hover:bg-white hover:bg-opacity-10">Learn About Therapy Types</a>
          </div>
        </div>
    </div>
  </section>
</BaseLayout>
