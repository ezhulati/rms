---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Shield, Users, Brain, DollarSign } from 'lucide-react';
---

<BaseLayout>
<div class="bg-gray-50 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Best Online Therapy for Teens</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Find specialized online therapy platforms that understand and support the unique mental health needs of teenagers.
          </p>
          <div class="flex justify-center">
            <Button 
              as={Link} 
              to="/tools/matchers/therapy-platform-matcher" 
              variant="primary" 
              size="lg" 
              icon={Search}
            >
              Find the perfect teen therapy match
            </Button>
          </div>
        </div>

        {/* Quick Summary */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Top Picks for Teen Therapy at a Glance</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Best Overall */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Overall
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Teen Counseling</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.7)}
                  </div>
                  <span class="text-gray-600">4.7/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Specialized platform with therapists trained in adolescent mental health and development.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $60-$90/week
              </div>
              <Button 
                as="a"
                href="https://www.teencounseling.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                variant="primary"
                size="sm"
                icon={ArrowRight}
                class="w-full min-w-0 justify-center"
              >
                Visit Teen Counseling
              </Button>
            </div>
            
            {/* Best with Insurance */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best with Insurance
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Talkspace</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.5)}
                  </div>
                  <span class="text-gray-600">4.5/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Large platform with teen-friendly therapists and medication management with insurance coverage.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $65-$99/week
              </div>
              <Button 
                as="a"
                href="https://www.talkspace.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                variant="primary"
                size="sm"
                icon={ArrowRight}
                class="w-full min-w-0 justify-center"
              >
                Visit Talkspace
              </Button>
            </div>
            
            {/* Best for Intensive Support */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Intensive Support
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Charlie Health</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.2)}
                  </div>
                  <span class="text-gray-600">4.2/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Intensive outpatient program specifically designed for teens and young adults with serious mental health needs.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> Insurance-based
              </div>
              <Button 
                as="a"
                href="https://www.charliehealth.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                variant="primary"
                size="sm"
                icon={ArrowRight}
                class="w-full min-w-0 justify-center"
              >
                Visit Charlie Health
              </Button>
            </div>
          </div>
        </div>

        {/* Understanding Teen Therapy */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Understanding Teen Therapy Needs</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Why Teens Need Specialized Support</h3>
              <p class="text-gray-600 mb-4">
                Adolescence is a unique developmental period with specific challenges that benefit from specialized therapeutic approaches. Effective teen therapy considers:
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Developmental stage and brain development</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Identity formation and independence needs</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Peer relationships and social pressures</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>School and academic stressors</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Family dynamics and parental relationships</span>
                </li>
              </ul>
              <p class="text-gray-600">
                Therapists who specialize in working with teens understand these unique factors and adapt their approaches accordingly, using age-appropriate techniques and communication styles.
              </p>
            </div>
            
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Common Mental Health Concerns for Teens</h3>
              <p class="text-gray-600 mb-4">
                While teens can experience the same mental health conditions as adults, certain issues are particularly prevalent during adolescence:
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Anxiety and social anxiety</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Depression and mood disorders</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Identity and self-esteem issues</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>School-related stress and academic pressure</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Family conflicts and peer relationship challenges</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Body image concerns and eating disorders</span>
                </li>
              </ul>
              <p class="text-gray-600">
                Online therapy platforms for teens should have therapists experienced in addressing these common adolescent concerns with evidence-based approaches.
              </p>
            </div>
          </div>
          
          <div class="mt-8 bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">The Balance of Privacy and Parental Involvement</h3>
            <p class="text-gray-700 mb-4">
              A key consideration in teen therapy is balancing the adolescent's need for privacy with appropriate parental involvement:
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Confidentiality</h4>
                    <p class="text-gray-600 text-sm">
                      Teens need a private space to share openly with their therapist, with clear limits on what will be shared with parents
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Safety Protocols</h4>
                    <p class="text-gray-600 text-sm">
                      Clear policies on when confidentiality must be broken for safety concerns like self-harm or suicide risk
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Parental Updates</h4>
                    <p class="text-gray-600 text-sm">
                      Structured ways for parents to receive general progress updates without violating the teen's trust
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Family Sessions</h4>
                    <p class="text-gray-600 text-sm">
                      Options for occasional family therapy sessions to address systemic issues while maintaining individual therapy
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <p class="text-gray-700 mt-4">
              The platforms we recommend have thoughtful policies and practices around teen privacy and parental involvement, creating a safe therapeutic environment while keeping parents appropriately informed.
            </p>
          </div>
        </div>

        {/* Detailed Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Detailed Reviews of the Best Teen Therapy Platforms</h2>
          
          {platforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class="mr-2">
                        {renderStars(platform.rating)}
                      </div>
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                        <span class="text-gray-600">{platform.price}</span>
                      </div>
                      <div class="flex items-center">
                        <div class="flex space-x-1 mr-2">
                          {platform.communication.includes('messaging') && (
                            <MessageSquare class="h-4 w-4 text-indigo-600" />
                          )}
                          {platform.communication.includes('video') && (
                            <Video class="h-4 w-4 text-indigo-600" />
                          )}
                          {platform.communication.includes('phone') && (
                            <Phone class="h-4 w-4 text-indigo-600" />
                          )}
                          {platform.communication.includes('group') && (
                            <Users class="h-4 w-4 text-indigo-600" />
                          )}
                        </div>
                        <span class="text-gray-600">Communication</span>
                      </div>
                      <div class="flex items-center">
                        {platform.insurance ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Insurance Coverage</span>
                      </div>
                      <div class="flex items-center">
                        {platform.medication ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Medication Management</span>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <Button 
                        as="a"
                        href={`https://www.${platform.slug.replace('-', '')}.com`} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        variant="primary"
                        size="sm"
                        icon={ArrowRight}
                        class="w-full min-w-0 justify-center"
                      >
                        Visit Website
                      </Button>
                    </div>
                  </div>
                  
                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-gray-800 mb-3">Why We Recommend It for Teens</h4>
                    <p class="text-gray-600 mb-4">
                      {platform.description}
                    </p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                      
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                    
                    <div>
                      <h5 class="font-bold text-gray-800 mb-3">Teen-Specific Features</h5>
                      <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                        {platform.features.map((feature, i) => (
                          <div key={i} class="bg-gray-50 rounded-lg p-3 flex items-center">
                            <CheckCircle class="h-4 w-4 text-indigo-600 mr-2 flex-shrink-0" />
                            <span class="text-gray-700 text-sm">{feature}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                    
                    <div class="mt-6 bg-indigo-50 rounded-lg p-4">
                      <h5 class="font-bold text-gray-800 mb-2">Best For</h5>
                      <p class="text-gray-700">{platform.bestFor}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* How to Choose */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right Teen Therapy Platform</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Brain class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Teen's Needs & Preferences</h3>
              <p class="text-gray-600">
                Consider your teen's specific mental health needs, communication preferences, and comfort level with technology. Involving them in the decision can increase their engagement in therapy.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Parental Involvement</h3>
              <p class="text-gray-600">
                Look for platforms that balance teen privacy with appropriate parental involvement, with clear policies on confidentiality and safety protocols.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Shield class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Safety & Credentials</h3>
              <p class="text-gray-600">
                Ensure the platform has licensed therapists with experience working with teens, clear crisis protocols, and strong privacy protections appropriate for minors.
              </p>
            </div>
          </div>
          
          <div class="bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Recommendation</h3>
            <p class="text-gray-700 mb-4">
              For most teens seeking online therapy, we recommend:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Teen Counseling</strong> for most teens seeking specialized adolescent therapy with appropriate privacy and parental involvement</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Talkspace</strong> for teens who may need medication management alongside therapy with insurance coverage</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Charlie Health</strong> for teens with more serious mental health needs requiring intensive support and group therapy</span>
              </li>
            </ul>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">Ready to Find the Right Teen Therapy?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the perfect online therapy platform for your teen's unique needs.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <Button 
              as={Link} 
              to="/tools/matchers/therapy-platform-matcher" 
              variant="light"
              size="lg"
            >
              Find Your Perfect Match
            </Button>
            <Button 
              as={Link} 
              to="/learn/fundamentals/therapy-types-explained" 
              variant="outline"
              size="lg"
              class="border-white text-white hover:bg-white hover:bg-opacity-10"
            >
              Learn About Therapy Types
            </Button>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
