---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Heart, Users, Brain, DollarSign } from 'lucide-react';

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};

const platforms = [
  {
    slug: 'regain',
    name: 'ReGain',
    rating: 4.8,
    price: '$60-90/week',
    description: 'ReGain specializes exclusively in couples therapy and relationship counseling.',
    communication: ['messaging', 'video', 'phone'],
    insurance: false,
    pros: ['Specialized in couples therapy', 'Experienced relationship counselors', 'Flexible scheduling'],
    cons: ['No insurance coverage', 'Higher price point'],
    features: ['Unlimited messaging', 'Live video sessions', 'Couples-focused therapy'],
    bestFor: 'Couples seeking specialized relationship counseling with experienced therapists.',
  },
  {
    slug: 'talkspace',
    name: 'Talkspace',
    rating: 4.6,
    price: '$69+/week',
    description: 'Talkspace offers comprehensive couples therapy with insurance coverage options.',
    communication: ['messaging', 'video'],
    insurance: true,
    pros: ['Accepts insurance', 'Large therapist network', 'Multiple communication options'],
    cons: ['Can be expensive without insurance', 'Less specialized in couples therapy'],
    features: ['Insurance accepted', 'Live video sessions', 'Unlimited messaging'],
    bestFor: 'Couples who want to use insurance for therapy coverage.',
  },
  {
    slug: 'lasting',
    name: 'Lasting',
    rating: 4.5,
    price: '$11.99/month',
    description: 'Lasting provides app-based relationship counseling with structured programs.',
    communication: ['messaging'],
    insurance: false,
    pros: ['Very affordable', 'Structured programs', 'Self-guided exercises'],
    cons: ['No live therapist sessions', 'App-based only'],
    features: ['Relationship exercises', 'Progress tracking', 'Research-based programs'],
    bestFor: 'Couples looking for affordable self-guided relationship improvement programs.',
  },
];

const features = [];
---

<BaseLayout>
<div class="bg-gray-50 min-h-screen">
      <div class="sb-container py-12">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Best Online Therapy for Couples</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Compare the top online therapy platforms designed for couples and relationship counseling.
          </p>
          <div class="flex justify-center">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find your perfect couples therapy match</a>
          </div>
        </div>

        {/* Quick Summary */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Top Picks for Couples Therapy</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Best Overall */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Overall
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">ReGain</h3>
                <div class="flex items-center">
                  <div class="flex mr-1">
                    {renderStars(4.8).map((filled) => (
                      <Star class={`h-5 w-5 ${filled ? 'text-yellow-400 fill-yellow-400' : 'text-gray-300'}`} />
                    ))}
                  </div>
                  <span class="text-gray-600">4.8/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Specialized platform exclusively for couples with dedicated relationship counselors.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $60-$90/week
              </div>
              <a href="/reviews/platforms/regain" class="w-full min-w-0 justify-center mb-2">Read full review</a>
              <a href="https://www.regain.us" class="w-full min-w-0 justify-center">Visit ReGain</a>
            </div>
            
            {/* Best with Insurance */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best with Insurance
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Talkspace</h3>
                <div class="flex items-center">
                  <div class="flex mr-1">
                    {renderStars(4.6).map((filled) => (
                      <Star class={`h-5 w-5 ${filled ? 'text-yellow-400 fill-yellow-400' : 'text-gray-300'}`} />
                    ))}
                  </div>
                  <span class="text-gray-600">4.6/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Comprehensive platform offering couples therapy with insurance coverage options.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $99-$139/week
              </div>
              <a href="/reviews/platforms/talkspace" class="w-full min-w-0 justify-center mb-2">Read full review</a>
              <a href="https://www.talkspace.com" class="w-full min-w-0 justify-center">Visit Talkspace</a>
            </div>
            
            {/* Best Self-Guided */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Self-Guided
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Lasting</h3>
                <div class="flex items-center">
                  <div class="flex mr-1">
                    {renderStars(4.5).map((filled) => (
                      <Star class={`h-5 w-5 ${filled ? 'text-yellow-400 fill-yellow-400' : 'text-gray-300'}`} />
                    ))}
                  </div>
                  <span class="text-gray-600">4.5/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                App-based relationship counseling with structured programs and exercises.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $15-$89/month
              </div>
              <a href="/reviews/platforms/lasting" class="w-full min-w-0 justify-center mb-2">Read full review</a>
              <a href="https://www.getlasting.com" class="w-full min-w-0 justify-center">Visit Lasting</a>
            </div>
          </div>
        </div>

        {/* Understanding Couples Therapy */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Understanding Online Couples Therapy</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Key Benefits</h3>
              <ul class="space-y-2">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Convenient scheduling for both partners</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Access from different locations</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>More affordable than traditional couples therapy</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Ongoing communication between sessions</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Access to relationship resources and exercises</span>
                </li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Important Considerations</h3>
              <ul class="space-y-2">
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>Both partners must be willing to participate</span>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>May require technical setup for joint sessions</span>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>Not suitable for domestic violence situations</span>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>Insurance coverage varies</span>
                </li>
                <li class="flex items-start">
                  <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5" />
                  <span>May require additional individual therapy</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        {/* Detailed Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Detailed Platform Reviews</h2>
          
          {platforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class="flex mr-2">
                        {renderStars(platform.rating).map((filled) => (
                          <Star class={`h-5 w-5 ${filled ? 'text-yellow-400 fill-yellow-400' : 'text-gray-300'}`} />
                        ))}
                      </div>
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                        <span class="text-gray-600">{platform.price}</span>
                      </div>
                      <div class="flex items-center">
                        <div class="flex space-x-1 mr-2">
                          {platform.communication.includes('messaging') && (
                            <MessageSquare class="h-4 w-4 text-indigo-600" aria-label="Messaging" />
                          )}
                          {platform.communication.includes('video') && (
                            <Video class="h-4 w-4 text-indigo-600" aria-label="Video" />
                          )}
                          {platform.communication.includes('phone') && (
                            <Phone class="h-4 w-4 text-indigo-600" aria-label="Phone" />
                          )}
                        </div>
                        <span class="text-gray-600">Communication</span>
                      </div>
                      <div class="flex items-center">
                        {platform.insurance ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Insurance Coverage</span>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <button class="w-full min-w-0 justify-center">Read full review</button>
                      <button class="w-full min-w-0 justify-center">Visit Website</button>
                    </div>
                  </div>
                  
                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-gray-800 mb-3">Why We Recommend It for Couples</h4>
                    <p class="text-gray-600 mb-6">
                      {platform.description}
                    </p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                      
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                    
                    <div>
                      <h5 class="font-bold text-gray-800 mb-3">Couples-Specific Features</h5>
                      <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                        {platform.features.map((feature, i) => (
                          <div key={i} class="bg-gray-50 rounded-lg p-3 flex items-center">
                            <CheckCircle class="h-4 w-4 text-indigo-600 mr-2 flex-shrink-0" />
                            <span class="text-gray-700 text-sm">{feature}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                    
                    <div class="mt-6 bg-indigo-50 rounded-lg p-4">
                      <h5 class="font-bold text-gray-800 mb-2">Best For</h5>
                      <p class="text-gray-700">{platform.bestFor}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* Choosing the Right Platform */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right Couples Therapy Platform</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Heart class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Relationship Goals</h3>
              <p class="text-gray-600">
                Consider your specific relationship challenges and what type of support would be most helpful.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Joint Participation</h3>
              <p class="text-gray-600">
                Ensure both partners are comfortable with the chosen platform and communication methods.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <DollarSign class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Practical Factors</h3>
              <p class="text-gray-600">
                Consider budget, scheduling flexibility, and technical requirements for joint sessions.
              </p>
            </div>
          </div>
          
          <div class="mt-8 bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Recommendation</h3>
            <p class="text-gray-700 mb-4">
              For most couples, we recommend:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>ReGain</strong> for dedicated couples therapy with specialized relationship counselors</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Talkspace</strong> for couples who want to use insurance benefits</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Lasting</strong> for couples seeking an affordable, self-guided approach</span>
              </li>
            </ul>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">Ready to Start Couples Therapy?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the perfect couples therapy platform for your relationship.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find Your Perfect Match</a>
            <a href="/tools/assessments/relationship-assessment" class="border-white text-white hover:bg-white hover:bg-opacity-10">Take Relationship Assessment</a>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
