---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Shield, Users, Heart, DollarSign } from 'lucide-react';
---

<BaseLayout>
<div class="bg-gray-50 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Best Online Therapy for Seniors</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Find specialized online therapy platforms that understand and support the unique mental health needs of older adults.
          </p>
          <div class="flex justify-center">
            <Button 
              as={Link} 
              to="/tools/matchers/therapy-platform-matcher" 
              variant="primary" 
              size="lg" 
              icon={Search}
            >
              Find your perfect senior therapy match
            </Button>
          </div>
        </div>

        {/* Quick Summary */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Top Picks for Senior Therapy at a Glance</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Best Overall */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Overall
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">BetterHelp</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.7)}
                  </div>
                  <span class="text-gray-600">4.7/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Large network with therapists experienced in senior-specific issues and flexible communication options.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $60-$90/week
              </div>
              <Button 
                as="a"
                href="https://www.betterhelp.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                variant="primary"
                size="sm"
                icon={ArrowRight}
                class="w-full min-w-0 justify-center"
              >
                Visit BetterHelp
              </Button>
            </div>
            
            {/* Best with Medicare */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best with Medicare
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Amwell</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.5)}
                  </div>
                  <span class="text-gray-600">4.5/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Telehealth platform with strong Medicare acceptance, medication management, and integration with medical care.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $109-$129/session
              </div>
              <Button 
                as="a"
                href="https://www.amwell.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                variant="primary"
                size="sm"
                icon={ArrowRight}
                class="w-full min-w-0 justify-center"
              >
                Visit Amwell
              </Button>
            </div>
            
            {/* Best Budget Option */}
            <div class="bg-indigo-50 rounded-lg p-6 relative">
              <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                Best Budget Option
              </div>
              <div class="flex items-center mb-3">
                <h3 class="text-xl font-bold text-gray-800 mr-3">Calmerry</h3>
                <div class="flex items-center">
                  <div class="mr-1">
                    {renderStars(4.3)}
                  </div>
                  <span class="text-gray-600">4.3/5</span>
                </div>
              </div>
              <p class="text-gray-600 mb-4">
                Affordable platform with a simple interface and therapists experienced in issues common among seniors.
              </p>
              <div class="text-sm text-gray-600 mb-4">
                <strong>Price:</strong> $42-$68/week
              </div>
              <Button 
                as="a"
                href="https://www.calmerry.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                variant="primary"
                size="sm"
                icon={ArrowRight}
                class="w-full min-w-0 justify-center"
              >
                Visit Calmerry
              </Button>
            </div>
          </div>
        </div>

        {/* Understanding Senior Therapy */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Understanding Senior Mental Health Needs</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Common Mental Health Concerns for Seniors</h3>
              <p class="text-gray-600 mb-4">
                Older adults face unique mental health challenges that can benefit from specialized therapeutic approaches:
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Depression and isolation</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Anxiety about health and independence</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Grief and loss of loved ones</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Adjustment to retirement and life changes</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Cognitive changes and concerns</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Caregiver stress and family dynamics</span>
                </li>
              </ul>
              <p class="text-gray-600">
                Effective therapy for seniors addresses these concerns with approaches that respect life experience and wisdom while providing practical support for current challenges.
              </p>
            </div>
            
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Benefits of Online Therapy for Seniors</h3>
              <p class="text-gray-600 mb-4">
                Online therapy offers several advantages that make it particularly suitable for older adults:
              </p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Accessibility without transportation barriers</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Comfort of receiving therapy in familiar surroundings</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Reduced exposure risk for those with health concerns</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Flexible scheduling that accommodates daily routines</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Multiple communication options (text, phone, video)</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span>Access to specialists regardless of geographic location</span>
                </li>
              </ul>
              <p class="text-gray-600">
                While there may be a technology learning curve for some seniors, many platforms offer user-friendly interfaces and support to help overcome these challenges.
              </p>
            </div>
          </div>
          
          <div class="mt-8 bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Important Considerations for Senior Therapy</h3>
            <p class="text-gray-700 mb-4">
              When evaluating online therapy platforms for seniors, these factors are particularly important:
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Medicare Acceptance</h4>
                    <p class="text-gray-600 text-sm">
                      Many seniors rely on Medicare, so platforms that accept this insurance can significantly reduce costs
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">User-Friendly Interface</h4>
                    <p class="text-gray-600 text-sm">
                      Simple navigation, clear text, and minimal technical requirements make platforms more accessible
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Multiple Communication Options</h4>
                    <p class="text-gray-600 text-sm">
                      Flexibility to choose between text, phone, or video based on comfort level and hearing/vision needs
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <div class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <div>
                    <h4 class="font-bold text-gray-800">Integration with Medical Care</h4>
                    <p class="text-gray-600 text-sm">
                      Platforms that coordinate with physical healthcare providers can offer more comprehensive support
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <p class="text-gray-700 mt-4">
              The platforms we recommend have been evaluated with these senior-specific considerations in mind.
            </p>
          </div>
        </div>

        {/* Detailed Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Detailed Reviews of the Best Senior Therapy Platforms</h2>
          
          {platforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class="mr-2">
                        {renderStars(platform.rating)}
                      </div>
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                        <span class="text-gray-600">{platform.price}</span>
                      </div>
                      <div class="flex items-center">
                        <div class="flex space-x-1 mr-2">
                          {platform.communication.includes('messaging') && (
                            <MessageSquare class="h-4 w-4 text-indigo-600" />
                          )}
                          {platform.communication.includes('video') && (
                            <Video class="h-4 w-4 text-indigo-600" />
                          )}
                          {platform.communication.includes('phone') && (
                            <Phone class="h-4 w-4 text-indigo-600" />
                          )}
                        </div>
                        <span class="text-gray-600">Communication</span>
                      </div>
                      <div class="flex items-center">
                        {platform.insurance ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Insurance Coverage</span>
                      </div>
                      <div class="flex items-center">
                        {platform.medication ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Medication Management</span>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <Button 
                        as="a"
                        href={`https://www.${platform.slug.replace('-', '')}.com`} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        variant="primary"
                        size="sm"
                        icon={ArrowRight}
                        class="w-full min-w-0 justify-center"
                      >
                        Visit Website
                      </Button>
                    </div>
                  </div>
                  
                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-gray-800 mb-3">Why We Recommend It for Seniors</h4>
                    <p class="text-gray-600 mb-4">
                      {platform.description}
                    </p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                      
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                    
                    <div>
                      <h5 class="font-bold text-gray-800 mb-3">Senior-Specific Features</h5>
                      <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                        {platform.features.map((feature, i) => (
                          <div key={i} class="bg-gray-50 rounded-lg p-3 flex items-center">
                            <CheckCircle class="h-4 w-4 text-indigo-600 mr-2 flex-shrink-0" />
                            <span class="text-gray-700 text-sm">{feature}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                    
                    <div class="mt-6 bg-indigo-50 rounded-lg p-4">
                      <h5 class="font-bold text-gray-800 mb-2">Best For</h5>
                      <p class="text-gray-700">{platform.bestFor}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* How to Choose */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right Senior Therapy Platform</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Heart class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Specific Needs</h3>
              <p class="text-gray-600">
                Consider the specific mental health concerns you're facing, such as grief, depression, anxiety, or adjustment to life changes, and look for platforms with therapists experienced in these areas.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <DollarSign class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Insurance & Budget</h3>
              <p class="text-gray-600">
                If you have Medicare or other insurance, prioritize platforms that accept your coverage. Otherwise, consider your budget and look for platforms offering financial aid for seniors.
              </p>
            </div>
            
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Phone class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Communication Preference</h3>
              <p class="text-gray-600">
                Consider your comfort level with technology and communication preferences. Some seniors prefer phone sessions over video, while others appreciate the option for text-based communication.
              </p>
            </div>
          </div>
          
          <div class="bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Recommendation</h3>
            <p class="text-gray-700 mb-4">
              For most seniors seeking online therapy, we recommend:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>BetterHelp</strong> for most seniors comfortable with technology who want flexible therapy options and a wide selection of experienced therapists</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Amwell</strong> for seniors with Medicare who need integrated mental and physical healthcare with medication management</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Calmerry</strong> for budget-conscious seniors seeking an affordable, user-friendly therapy platform</span>
              </li>
            </ul>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">Ready to Start Your Therapy Journey?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the perfect online therapy platform for your unique needs.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <Button 
              as={Link} 
              to="/tools/matchers/therapy-platform-matcher" 
              variant="light"
              size="lg"
            >
              Find Your Perfect Match
            </Button>
            <Button 
              as={Link} 
              to="/learn/fundamentals/therapy-types-explained" 
              variant="outline"
              size="lg"
              class="border-white text-white hover:bg-white hover:bg-opacity-10"
            >
              Learn About Therapy Types
            </Button>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
