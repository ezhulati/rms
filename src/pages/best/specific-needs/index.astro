---
import BaseLayout from '../../../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Best for Specific Needs | RealMindSolutions"
  description="Best platforms for specific requirements"
>
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Best for Specific Needs</h1>
      <p class="font-serif italic text-lg md:text-xl text-neutral-600 mb-12">Specialized platform recommendations</p>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <a href="/best/specific-needs/best-specific-needs" class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <h3 class="text-xl font-semibold text-gray-900 mb-2">View All</h3>
        <p class="text-gray-600">All specialized options</p>
      </a>
    </div>
    </div>
  </section>
</BaseLayout>
