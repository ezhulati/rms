---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { platforms, getPlatformBySlug } from '../../../siteData';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, DollarSign, Award, Clock, Users } from 'lucide-react';

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};

// Get top platforms for this page
const betterhelp = getPlatformBySlug('betterhelp');
const talkspace = getPlatformBySlug('talkspace');
const cerebral = getPlatformBySlug('cerebral');
const onlineTherapy = getPlatformBySlug('online-therapy-com');
const calmerry = getPlatformBySlug('calmerry');
const prideCounseling = getPlatformBySlug('pride-counseling');

const topPlatforms = [betterhelp, talkspace, cerebral, onlineTherapy, calmerry, prideCounseling].filter(Boolean);
---

<BaseLayout>
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-white via-brand-primary-50/30 to-white pt-16 pb-12 md:pt-24 md:pb-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="text-center mb-12">
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Best Online Therapy Platforms 2025</h1>
        <p class="font-serif italic text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto mb-8">
          Compare the top online therapy platforms to find the perfect fit for your mental health needs. We've evaluated the leading services for quality, affordability, and user experience.
        </p>
        <div class="flex justify-center">
          <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-indigo-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-indigo-700 transition">Find Your Perfect Therapy Match</a>
        </div>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

        {/* Quick Summary */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Top Picks at a Glance</h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {/* Best Overall */}
            {betterhelp && (
              <div class="bg-indigo-50 rounded-lg p-6 relative">
                <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                  Best Overall
                </div>
                <div class="flex items-center mb-3">
                  <h3 class="text-xl font-bold text-gray-800 mr-3">{betterhelp.name}</h3>
                  <span class="text-gray-600">{betterhelp.rating}/5</span>
                </div>
                <p class="text-gray-600 mb-4">
                  World's largest online therapy platform with over 30,000 licensed therapists and flexible communication options.
                </p>
                <div class="text-sm text-gray-600 mb-4">
                  <strong>Price:</strong> {betterhelp.price}
                </div>
                <a href={`/reviews/platforms/${betterhelp.slug}-review`} class="w-full min-w-0 justify-center">Learn More</a>
              </div>
            )}

            {/* Best with Insurance */}
            {talkspace && (
              <div class="bg-indigo-50 rounded-lg p-6 relative">
                <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                  Best with Insurance
                </div>
                <div class="flex items-center mb-3">
                  <h3 class="text-xl font-bold text-gray-800 mr-3">{talkspace.name}</h3>
                  <span class="text-gray-600">{talkspace.rating}/5</span>
                </div>
                <p class="text-gray-600 mb-4">
                  Accepts major insurance plans and offers both therapy and psychiatry services for comprehensive care.
                </p>
                <div class="text-sm text-gray-600 mb-4">
                  <strong>Price:</strong> {talkspace.price}
                </div>
                <a href={`/reviews/platforms/${talkspace.slug}-review`} class="w-full min-w-0 justify-center">Learn More</a>
              </div>
            )}

            {/* Best for Medication Management */}
            {cerebral && (
              <div class="bg-indigo-50 rounded-lg p-6 relative">
                <div class="absolute top-0 right-0 bg-indigo-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                  Best for Medication
                </div>
                <div class="flex items-center mb-3">
                  <h3 class="text-xl font-bold text-gray-800 mr-3">{cerebral.name}</h3>
                  <span class="text-gray-600">{cerebral.rating}/5</span>
                </div>
                <p class="text-gray-600 mb-4">
                  Comprehensive mental health care combining therapy and medication management for anxiety, depression, and ADHD.
                </p>
                <div class="text-sm text-gray-600 mb-4">
                  <strong>Price:</strong> {cerebral.price}
                </div>
                <a href={`/reviews/platforms/${cerebral.slug}-review`} class="w-full min-w-0 justify-center">Learn More</a>
              </div>
            )}
          </div>
        </div>

        {/* What to Look For */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">What Makes a Great Online Therapy Platform?</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Key Features to Consider</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Licensed Therapists:</strong> All providers should be licensed, vetted professionals with proper credentials</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Communication Options:</strong> Video, phone, messaging, or live chat to fit your preferences</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Flexibility:</strong> Easy scheduling, ability to switch therapists, and no long-term commitments</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Privacy & Security:</strong> HIPAA-compliant platforms with encrypted communications</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Specializations:</strong> Therapists experienced in your specific concerns or conditions</span>
                </li>
              </ul>
            </div>

            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Cost Considerations</h3>
              <p class="text-gray-600 mb-4">
                Online therapy platforms vary significantly in pricing structure:
              </p>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <span><strong>Subscription Models:</strong> Weekly or monthly fees ($40-$325/month) for unlimited messaging plus live sessions</span>
                </li>
                <li class="flex items-start">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <span><strong>Per-Session Pricing:</strong> Pay for individual sessions ($99-$284 per session) with insurance coverage options</span>
                </li>
                <li class="flex items-start">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <span><strong>Insurance Coverage:</strong> Some platforms accept insurance, reducing out-of-pocket costs significantly</span>
                </li>
                <li class="flex items-start">
                  <DollarSign class="h-5 w-5 text-indigo-600 mr-2 mt-0.5" />
                  <span><strong>Financial Aid:</strong> Many platforms offer sliding scale fees or financial assistance for those who qualify</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        {/* Detailed Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-8">Detailed Platform Reviews</h2>

          {topPlatforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-indigo-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-gray-800">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <span class="text-gray-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-indigo-600 mr-2" />
                        <span class="text-gray-600">{platform.price}</span>
                      </div>
                      <div class="flex items-center">
                        <div class="flex space-x-1 mr-2">
                          {platform.communication.includes('messaging') && (
                            <MessageSquare class="h-4 w-4 text-indigo-600" />
                          )}
                          {platform.communication.includes('video') && (
                            <Video class="h-4 w-4 text-indigo-600" />
                          )}
                          {platform.communication.includes('phone') && (
                            <Phone class="h-4 w-4 text-indigo-600" />
                          )}
                        </div>
                        <span class="text-gray-600">Communication</span>
                      </div>
                      <div class="flex items-center">
                        {platform.insurance ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Insurance</span>
                      </div>
                      <div class="flex items-center">
                        {platform.medication ? (
                          <CheckCircle class="h-5 w-5 text-green-500 mr-2" />
                        ) : (
                          <XCircle class="h-5 w-5 text-red-500 mr-2" />
                        )}
                        <span class="text-gray-600">Medication</span>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <a href={`/reviews/platforms/${platform.slug}-review`} class="w-full min-w-0 justify-center">Read Full Review</a>
                    </div>
                  </div>

                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-gray-800 mb-3">Overview</h4>
                    <p class="text-gray-600 mb-4">
                      {platform.description}
                    </p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.slice(0, 4).map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>

                      <div>
                        <h5 class="font-bold text-gray-800 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.slice(0, 4).map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-gray-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>

                    <div class="bg-indigo-50 rounded-lg p-4">
                      <h5 class="font-bold text-gray-800 mb-2">Best For</h5>
                      <div class="flex flex-wrap gap-2">
                        {platform.bestFor.slice(0, 4).map((item, i) => (
                          <span key={i} class="bg-white px-3 py-1 rounded-full text-sm text-gray-700">{item}</span>
                        ))}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* Comparison Table */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Platform Comparison</h2>

          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b-2 border-gray-200">
                  <th class="text-left py-3 px-4">Platform</th>
                  <th class="text-left py-3 px-4">Price Range</th>
                  <th class="text-left py-3 px-4">Rating</th>
                  <th class="text-left py-3 px-4">Insurance</th>
                  <th class="text-left py-3 px-4">Medication</th>
                  <th class="text-left py-3 px-4">Communication</th>
                </tr>
              </thead>
              <tbody>
                {topPlatforms.map((platform) => (
                  <tr key={platform.slug} class="border-b border-gray-200 hover:bg-gray-50">
                    <td class="py-3 px-4 font-medium">{platform.name}</td>
                    <td class="py-3 px-4">{platform.price}</td>
                    <td class="py-3 px-4">{platform.rating}/5</td>
                    <td class="py-3 px-4">
                      {platform.insurance ? (
                        <CheckCircle class="h-5 w-5 text-green-500" />
                      ) : (
                        <XCircle class="h-5 w-5 text-red-500" />
                      )}
                    </td>
                    <td class="py-3 px-4">
                      {platform.medication ? (
                        <CheckCircle class="h-5 w-5 text-green-500" />
                      ) : (
                        <XCircle class="h-5 w-5 text-red-500" />
                      )}
                    </td>
                    <td class="py-3 px-4">
                      <div class="flex space-x-1">
                        {platform.communication.includes('messaging') && (
                          <MessageSquare class="h-4 w-4 text-indigo-600" />
                        )}
                        {platform.communication.includes('video') && (
                          <Video class="h-4 w-4 text-indigo-600" />
                        )}
                        {platform.communication.includes('phone') && (
                          <Phone class="h-4 w-4 text-indigo-600" />
                        )}
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>

        {/* FAQs */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-10">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Frequently Asked Questions</h2>

          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Is online therapy as effective as in-person therapy?</h3>
              <p class="text-gray-600">
                Research shows that online therapy is just as effective as in-person therapy for many conditions, including anxiety, depression, and PTSD. The key is finding a qualified, licensed therapist and a communication method that works for you.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">How much does online therapy cost?</h3>
              <p class="text-gray-600">
                Online therapy typically costs between $40-$325 per week or month, depending on the platform and services. Subscription-based platforms usually offer unlimited messaging plus scheduled live sessions, while per-session platforms charge $99-$284 per session but may accept insurance.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Do online therapy platforms accept insurance?</h3>
              <p class="text-gray-600">
                Some platforms like Talkspace, Cerebral, MDLive, and Amwell accept insurance from major providers. However, many subscription-based platforms like BetterHelp and Calmerry do not accept insurance but offer more affordable pricing and financial aid options.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">How quickly can I start therapy?</h3>
              <p class="text-gray-600">
                Most online therapy platforms can match you with a therapist within 24-48 hours. Some platforms offering insurance-based care may have same-day appointments available for urgent consultations.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">What if I don't like my therapist?</h3>
              <p class="text-gray-600">
                All reputable online therapy platforms allow you to switch therapists at no extra cost. Finding the right therapeutic fit is important, and platforms make it easy to request a new therapist if needed.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Are online therapy platforms secure and private?</h3>
              <p class="text-gray-600">
                Yes, all legitimate online therapy platforms are HIPAA-compliant and use encrypted communications to protect your privacy. Your sessions and messages are confidential and secure.
              </p>
            </div>
          </div>
        </div>

        {/* How to Choose */}
        <div class="bg-white rounded-lg shadow-md p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">How to Choose the Right Platform</h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <DollarSign class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Consider Your Budget</h3>
              <p class="text-gray-600">
                Determine what you can afford per week or month. If you have insurance, check which platforms are in-network. If not, look for platforms offering financial aid or lower subscription costs.
              </p>
            </div>

            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <MessageSquare class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Choose Your Format</h3>
              <p class="text-gray-600">
                Decide how you want to communicate with your therapist. Some people prefer video sessions, while others find messaging or phone calls more comfortable. Most platforms offer multiple options.
              </p>
            </div>

            <div>
              <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-indigo-600" />
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-2">Match Your Needs</h3>
              <p class="text-gray-600">
                Consider your specific mental health needs. Do you need medication management? Are you looking for specialized therapy like CBT? Do you need LGBTQ+ affirming care? Choose a platform with expertise in your area.
              </p>
            </div>
          </div>

          <div class="bg-indigo-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-3">Our Top Recommendation</h3>
            <p class="text-gray-700 mb-4">
              For most people seeking online therapy:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>BetterHelp</strong> offers the best overall experience with the largest therapist network, flexible communication options, and competitive pricing</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Talkspace</strong> is ideal if you have insurance coverage or need medication management alongside therapy</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Calmerry</strong> provides the most affordable option for budget-conscious therapy seekers without sacrificing quality</span>
              </li>
            </ul>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">Ready to Start Your Therapy Journey?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the perfect online therapy platform for your unique needs and preferences.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-white text-indigo-600 px-6 py-3 whitespace-nowrap rounded-md hover:bg-gray-100 transition font-medium">Find Your Perfect Match</a>
            <a href="/learn/fundamentals/therapy-types-explained" class="inline-flex items-center border-2 border-white text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-white hover:bg-opacity-10 transition">Learn About Therapy Types</a>
          </div>
        </div>
    </div>
  </section>
</BaseLayout>
