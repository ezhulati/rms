---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { platforms } from '../../../siteData';
import { ArrowRight, Star, CheckCircle, XCircle, MessageSquare, Video, Phone, Search, Heart, Users, Brain, DollarSign, Sparkles, Shield, Award, Clock } from 'lucide-react';

const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const starsArray = Array(5).fill(0).map((_, i) => i < fullStars);
  return starsArray;
};


// const platforms = []; // Now using real data from siteData


const features = [];
---

<BaseLayout title="Best Specialized Therapy Platforms 2025" description="Find specialized therapy platforms that focus on specific mental health conditions, demographics, or therapeutic approaches.">

  {/* Hero Section - Enhanced */}
  <section class="relative bg-gradient-to-b from-white via-brand-primary-50/20 to-white pt-20 pb-16 md:pt-28 md:pb-20 overflow-hidden">
    {/* Background decoration */}
    <div class="absolute inset-0 overflow-hidden pointer-events-none opacity-30">
      <div class="absolute top-20 right-20 w-96 h-96 bg-brand-primary-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
      <div class="absolute top-40 left-20 w-96 h-96 bg-brand-secondary-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
      <div class="absolute -bottom-8 left-1/2 w-96 h-96 bg-accent-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6 lg:px-12 relative z-10">
      {/* Breadcrumb */}
      <nav class="flex items-center space-x-2 text-sm text-neutral-600 mb-8 animate-fade-in">
        <a href="/" class="hover:text-brand-primary-600 transition">Home</a>
        <span>/</span>
        <a href="/best" class="hover:text-brand-primary-600 transition">Best Platforms</a>
        <span>/</span>
        <span class="text-neutral-900 font-medium">Specialized</span>
      </nav>

      <div class="text-center animate-fade-in-up">
        <div class="inline-flex items-center gap-2 bg-brand-primary-100 text-brand-primary-700 px-4 py-2 rounded-full text-sm font-medium mb-6">
          <Sparkles class="h-4 w-4" />
          <span>Expert-Reviewed Specialized Therapy Platforms</span>
        </div>
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Best Specialized Therapy Platforms 2025</h1>
        <p class="font-sans text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto mb-8 leading-relaxed">
          Find specialized therapy platforms that focus on specific mental health conditions, demographics, or therapeutic approaches.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center gap-2 bg-brand-primary-600 text-white px-8 py-4 rounded-xl hover:bg-brand-primary-700 transition-all hover:scale-105 shadow-lg hover:shadow-xl font-medium">
            <Search class="h-5 w-5" />
            Find Your Perfect Match
          </a>
          <a href="/best/platforms" class="inline-flex items-center gap-2 bg-white text-brand-primary-600 border-2 border-brand-primary-200 px-8 py-4 rounded-xl hover:border-brand-primary-400 transition-all hover:scale-105 shadow-sm hover:shadow-md font-medium">
            <Users class="h-5 w-5" />
            View All Platforms
          </a>
        </div>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

        {/* Categories Overview */}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <div class="bg-white rounded-xl shadow-sm p-6">
            <div class="flex items-center mb-4">
              <Heart class="h-8 w-8 text-pink-500 mr-3" />
              <h2 class="text-xl font-bold text-neutral-900">Relationship Focused</h2>
            </div>
            <p class="text-neutral-600 mb-4">
              Platforms specializing in couples therapy, marriage counseling, and relationship issues.
            </p>
            <ul class="space-y-2 mb-4">
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-brand-primary-600 mr-2" />
                <span>ReGain</span>
              </li>
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-brand-primary-600 mr-2" />
                <span>Lasting</span>
              </li>
            </ul>
            <a href="#relationship-platforms" class="text-brand-primary-600 hover:text-indigo-800 flex items-center">
              View details <ArrowRight class="h-4 w-4 ml-1" />
            </a>
          </div>

          <div class="bg-white rounded-xl shadow-sm p-6">
            <div class="flex items-center mb-4">
              <Users class="h-8 w-8 text-purple-500 mr-3" />
              <h2 class="text-xl font-bold text-neutral-900">Identity Specific</h2>
            </div>
            <p class="text-neutral-600 mb-4">
              Platforms catering to specific demographics and identities.
            </p>
            <ul class="space-y-2 mb-4">
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-brand-primary-600 mr-2" />
                <span>Pride Counseling</span>
              </li>
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-brand-primary-600 mr-2" />
                <span>Teen Counseling</span>
              </li>
            </ul>
            <a href="#identity-platforms" class="text-brand-primary-600 hover:text-indigo-800 flex items-center">
              View details <ArrowRight class="h-4 w-4 ml-1" />
            </a>
          </div>

          <div class="bg-white rounded-xl shadow-sm p-6">
            <div class="flex items-center mb-4">
              <Brain class="h-8 w-8 text-emerald-500 mr-3" />
              <h2 class="text-xl font-bold text-neutral-900">Condition Focused</h2>
            </div>
            <p class="text-neutral-600 mb-4">
              Platforms specializing in specific mental health conditions.
            </p>
            <ul class="space-y-2 mb-4">
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-brand-primary-600 mr-2" />
                <span>NOCD</span>
              </li>
              <li class="flex items-center">
                <ArrowRight class="h-4 w-4 text-brand-primary-600 mr-2" />
                <span>Equip</span>
              </li>
            </ul>
            <a href="#condition-platforms" class="text-brand-primary-600 hover:text-indigo-800 flex items-center">
              View details <ArrowRight class="h-4 w-4 ml-1" />
            </a>
          </div>
        </div>

        {/* Detailed Platform Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-neutral-900 mb-8">Detailed Platform Comparisons</h2>

          {platforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-xl shadow-sm overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-brand-primary-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-neutral-900">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class="mr-2">
                        {renderStars(platform.rating)}
                      </div>
                      <span class="text-neutral-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-brand-primary-600 mr-2" />
                        <span class="text-neutral-600">{platform.price}</span>
                      </div>
                      <div class="bg-gradient-to-br from-brand-primary-50 to-white text-indigo-700 px-3 py-1 rounded-full text-sm font-medium inline-block">
                        {platform.category}
                      </div>
                    </div>
                    <div class="space-y-2">
                      <button class="w-full min-w-0 justify-center">Read full review</button>
                      <button class="w-full min-w-0 justify-center">Visit Website</button>
                    </div>
                  </div>

                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-neutral-900 mb-3">Platform Overview</h4>
                    <p class="text-neutral-600 mb-6">
                      {platform.description}
                    </p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-neutral-900 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-neutral-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>

                      <div>
                        <h5 class="font-bold text-neutral-900 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-neutral-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>

                    <div>
                      <h5 class="font-bold text-neutral-900 mb-3">Key Features</h5>
                      <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
                        {platform.features.map((feature, i) => (
                          <div key={i} class="bg-neutral-50 rounded-xl p-3 flex items-center">
                            <CheckCircle class="h-4 w-4 text-brand-primary-600 mr-2 flex-shrink-0" />
                            <span class="text-neutral-700 text-sm">{feature}</span>
                          </div>
                        ))}
                      </div>
                    </div>

                    <div class="mt-6 bg-gradient-to-br from-brand-primary-50 to-white rounded-xl p-4">
                      <h5 class="font-bold text-neutral-900 mb-2">Best For</h5>
                      <p class="text-neutral-700">{platform.bestFor}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* Choosing the Right Platform */}
        <div class="bg-white rounded-xl shadow-sm p-8 mb-16">
          <h2 class="text-2xl font-bold text-neutral-900 mb-6">How to Choose the Right Specialized Platform</h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <div class="bg-brand-primary-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Brain class="h-6 w-6 text-brand-primary-600" />
              </div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">Expertise Match</h3>
              <p class="text-neutral-600">
                Choose a platform that specializes in your specific needs, whether that's relationship counseling, identity-specific support, or condition-focused treatment.
              </p>
            </div>

            <div>
              <div class="bg-brand-primary-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Users class="h-6 w-6 text-brand-primary-600" />
              </div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">Cultural Competence</h3>
              <p class="text-neutral-600">
                Look for platforms with therapists who understand your background, identity, and specific challenges you may face.
              </p>
            </div>

            <div>
              <div class="bg-brand-primary-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <DollarSign class="h-6 w-6 text-brand-primary-600" />
              </div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">Cost Consideration</h3>
              <p class="text-neutral-600">
                Consider insurance coverage, subscription costs, and whether specialized care justifies potentially higher prices.
              </p>
            </div>
          </div>
        </div>

        {/* How We Review Section */}
        

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl p-8 text-white text-center mb-8">
          <h2 class="text-2xl font-bold mb-4">Ready to Find Your Perfect Therapy Match?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Take our personalized assessment to get matched with the specialized platform that best fits your unique needs.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-brand-primary-600 text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-brand-primary-700 transition">Find Your Perfect Match</a>
            <a href="/tools/assessments/mental-health-assessment" class="border-white text-white hover:bg-white hover:bg-opacity-10">Take Mental Health Assessment</a>
          </div>
        </div>
    </div>
  </section>
</BaseLayout>
