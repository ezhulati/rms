---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { platforms, getPlatformBySlug } from '../../../siteData';
import { CheckCircle, XCircle, Video, DollarSign, Monitor, Wifi, Calendar, Search, Users, Sparkles, Shield, Heart, Award, Clock } from 'lucide-react';

// Get video-focused platforms
const betterhelp = getPlatformBySlug('betterhelp');
const talkspace = getPlatformBySlug('talkspace');
const mdlive = getPlatformBySlug('mdlive');
const amwell = getPlatformBySlug('amwell');
const calmerry = getPlatformBySlug('calmerry');

const topPlatforms = [betterhelp, talkspace, mdlive, amwell, calmerry].filter(Boolean);
---

<BaseLayout title="Best Video Therapy Platforms 2025" description="Find the best online therapy platforms for live video sessions with licensed therapists. Face-to-face connection from the comfort of your home.">

  {/* Hero Section - Enhanced */}
  <section class="relative bg-gradient-to-b from-white via-brand-primary-50/20 to-white pt-20 pb-16 md:pt-28 md:pb-20 overflow-hidden">
    {/* Background decoration */}
    <div class="absolute inset-0 overflow-hidden pointer-events-none opacity-30">
      <div class="absolute top-20 right-20 w-96 h-96 bg-brand-primary-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
      <div class="absolute top-40 left-20 w-96 h-96 bg-brand-secondary-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
      <div class="absolute -bottom-8 left-1/2 w-96 h-96 bg-accent-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6 lg:px-12 relative z-10">
      {/* Breadcrumb */}
      <nav class="flex items-center space-x-2 text-sm text-neutral-600 mb-8 animate-fade-in">
        <a href="/" class="hover:text-brand-primary-600 transition">Home</a>
        <span>/</span>
        <a href="/best" class="hover:text-brand-primary-600 transition">Best Platforms</a>
        <span>/</span>
        <span class="text-neutral-900 font-medium">Video Therapy</span>
      </nav>

      <div class="text-center animate-fade-in-up">
        <div class="inline-flex items-center gap-2 bg-brand-primary-100 text-brand-primary-700 px-4 py-2 rounded-full text-sm font-medium mb-6">
          <Sparkles class="h-4 w-4" />
          <span>Expert-Reviewed Video Therapy Platforms</span>
        </div>
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Best Video Therapy Platforms 2025</h1>
        <p class="font-sans text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto mb-8 leading-relaxed">
          Find the best online therapy platforms for live video sessions with licensed therapists. Face-to-face connection from the comfort of your home.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center gap-2 bg-brand-primary-600 text-white px-8 py-4 rounded-xl hover:bg-brand-primary-700 transition-all hover:scale-105 shadow-lg hover:shadow-xl font-medium">
            <Search class="h-5 w-5" />
            Find Your Perfect Match
          </a>
          <a href="/best/platforms" class="inline-flex items-center gap-2 bg-white text-brand-primary-600 border-2 border-brand-primary-200 px-8 py-4 rounded-xl hover:border-brand-primary-400 transition-all hover:scale-105 shadow-sm hover:shadow-md font-medium">
            <Users class="h-5 w-5" />
            View All Platforms
          </a>
        </div>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

        {/* Quick Summary */}
        <div class="bg-white rounded-xl shadow-sm p-8 mb-10">
          <h2 class="text-2xl font-bold text-neutral-900 mb-6">Top Video Therapy Platforms</h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {betterhelp && (
              <div class="bg-gradient-to-br from-brand-primary-50 to-white rounded-xl p-6 relative">
                <div class="absolute top-0 right-0 bg-brand-primary-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                  Best Overall
                </div>
                <div class="flex items-center mb-3">
                  <h3 class="text-xl font-bold text-neutral-900 mr-3">{betterhelp.name}</h3>
                  <span class="text-neutral-600">{betterhelp.rating}/5</span>
                </div>
                <p class="text-neutral-600 mb-4">
                  Weekly 30-45 minute video sessions plus unlimited messaging. Largest therapist network with flexible scheduling.
                </p>
                <div class="text-sm text-neutral-600 mb-4">
                  <strong>Price:</strong> {betterhelp.price}
                </div>
                <a href={`/reviews/platforms/${betterhelp.slug}-review`} class="w-full min-w-0 justify-center">Learn More</a>
              </div>
            )}

            {mdlive && (
              <div class="bg-gradient-to-br from-brand-primary-50 to-white rounded-xl p-6 relative">
                <div class="absolute top-0 right-0 bg-brand-primary-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                  Best with Insurance
                </div>
                <div class="flex items-center mb-3">
                  <h3 class="text-xl font-bold text-neutral-900 mr-3">{mdlive.name}</h3>
                  <span class="text-neutral-600">{mdlive.rating}/5</span>
                </div>
                <p class="text-neutral-600 mb-4">
                  24/7 video sessions with insurance coverage. Same-day appointments available for urgent needs.
                </p>
                <div class="text-sm text-neutral-600 mb-4">
                  <strong>Price:</strong> {mdlive.price}
                </div>
                <a href={`/reviews/platforms/${mdlive.slug}-review`} class="w-full min-w-0 justify-center">Learn More</a>
              </div>
            )}

            {calmerry && (
              <div class="bg-gradient-to-br from-brand-primary-50 to-white rounded-xl p-6 relative">
                <div class="absolute top-0 right-0 bg-brand-primary-600 text-white px-3 py-1 rounded-bl-lg rounded-tr-lg text-sm font-medium">
                  Most Affordable
                </div>
                <div class="flex items-center mb-3">
                  <h3 class="text-xl font-bold text-neutral-900 mr-3">{calmerry.name}</h3>
                  <span class="text-neutral-600">{calmerry.rating}/5</span>
                </div>
                <p class="text-neutral-600 mb-4">
                  Budget-friendly video therapy with licensed therapists. Simple, straightforward approach to online therapy.
                </p>
                <div class="text-sm text-neutral-600 mb-4">
                  <strong>Price:</strong> {calmerry.price}
                </div>
                <a href={`/reviews/platforms/${calmerry.slug}-review`} class="w-full min-w-0 justify-center">Learn More</a>
              </div>
            )}
          </div>
        </div>

        {/* Why Choose Video Therapy */}
        <div class="bg-white rounded-xl shadow-sm p-8 mb-10">
          <h2 class="text-2xl font-bold text-neutral-900 mb-6">Why Choose Video Therapy?</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-neutral-900 mb-4">Benefits of Video Sessions</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Face-to-Face Connection:</strong> Build rapport with your therapist through visual cues and body language</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Real-Time Interaction:</strong> Immediate feedback and dynamic conversation flow like traditional therapy</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>No Commute:</strong> Save time and energy by attending sessions from home, office, or anywhere private</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Comfortable Environment:</strong> Stay in a familiar space where you feel safe and relaxed</span>
                </li>
                <li class="flex items-start">
                  <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                  <span><strong>Access Specialists:</strong> Work with therapists nationwide who specialize in your specific needs</span>
                </li>
              </ul>
            </div>

            <div>
              <h3 class="text-xl font-bold text-neutral-900 mb-4">What You'll Need</h3>
              <p class="text-neutral-600 mb-4">
                To get started with video therapy:
              </p>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <Video class="h-5 w-5 text-brand-primary-600 mr-2 mt-0.5" />
                  <span>Device with camera (computer, tablet, or smartphone)</span>
                </li>
                <li class="flex items-start">
                  <Wifi class="h-5 w-5 text-brand-primary-600 mr-2 mt-0.5" />
                  <span>Stable internet connection for smooth video streaming</span>
                </li>
                <li class="flex items-start">
                  <Monitor class="h-5 w-5 text-brand-primary-600 mr-2 mt-0.5" />
                  <span>Private, quiet space for confidential conversations</span>
                </li>
                <li class="flex items-start">
                  <Calendar class="h-5 w-5 text-brand-primary-600 mr-2 mt-0.5" />
                  <span>Scheduled time block (typically 30-50 minutes)</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        {/* Detailed Reviews */}
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-neutral-900 mb-8">Detailed Platform Reviews</h2>

          {topPlatforms.map((platform, index) => (
            <div key={platform.slug} class="bg-white rounded-xl shadow-sm overflow-hidden mb-8">
              <div class="p-8">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/4 mb-6 md:mb-0">
                    <div class="flex items-center mb-3">
                      <span class="text-3xl font-bold text-brand-primary-600 mr-3">{index + 1}</span>
                      <h3 class="text-2xl font-bold text-neutral-900">{platform.name}</h3>
                    </div>
                    <div class="flex items-center mb-4">
                      <span class="text-neutral-600">{platform.rating}/5</span>
                    </div>
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center">
                        <DollarSign class="h-5 w-5 text-brand-primary-600 mr-2" />
                        <span class="text-neutral-600">{platform.price}</span>
                      </div>
                      <div class="flex items-center">
                        <Video class="h-5 w-5 text-brand-primary-600 mr-2" />
                        <span class="text-neutral-600">Video Rating: {platform.liveSessionsRating}/5</span>
                      </div>
                    </div>
                    <div class="space-y-2">
                      <a href={`/reviews/platforms/${platform.slug}-review`} class="w-full min-w-0 justify-center">Read Full Review</a>
                    </div>
                  </div>

                  <div class="md:w-3/4 md:pl-8">
                    <h4 class="font-bold text-neutral-900 mb-3">Overview</h4>
                    <p class="text-neutral-600 mb-4">
                      {platform.description}
                    </p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                      <div>
                        <h5 class="font-bold text-neutral-900 mb-3">Pros</h5>
                        <ul class="space-y-2">
                          {platform.pros.slice(0, 4).map((pro, i) => (
                            <li key={i} class="flex items-start">
                              <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-neutral-600">{pro}</span>
                            </li>
                          ))}
                        </ul>
                      </div>

                      <div>
                        <h5 class="font-bold text-neutral-900 mb-3">Cons</h5>
                        <ul class="space-y-2">
                          {platform.cons.slice(0, 4).map((con, i) => (
                            <li key={i} class="flex items-start">
                              <XCircle class="h-5 w-5 text-red-500 mr-2 mt-0.5 flex-shrink-0" />
                              <span class="text-neutral-600">{con}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>

                    <div class="bg-gradient-to-br from-brand-primary-50 to-white rounded-xl p-4">
                      <h5 class="font-bold text-neutral-900 mb-2">Best For</h5>
                      <div class="flex flex-wrap gap-2">
                        {platform.bestFor.slice(0, 4).map((item, i) => (
                          <span key={i} class="bg-white px-3 py-1 rounded-full text-sm text-neutral-700">{item}</span>
                        ))}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* Comparison Table */}
        <div class="bg-white rounded-xl shadow-sm p-8 mb-10">
          <h2 class="text-2xl font-bold text-neutral-900 mb-6">Video Platform Comparison</h2>

          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b-2 border-gray-200">
                  <th class="text-left py-3 px-4">Platform</th>
                  <th class="text-left py-3 px-4">Price</th>
                  <th class="text-left py-3 px-4">Video Rating</th>
                  <th class="text-left py-3 px-4">Availability</th>
                  <th class="text-left py-3 px-4">Insurance</th>
                </tr>
              </thead>
              <tbody>
                {topPlatforms.map((platform) => (
                  <tr key={platform.slug} class="border-b border-gray-200 hover:bg-neutral-50">
                    <td class="py-3 px-4 font-medium">{platform.name}</td>
                    <td class="py-3 px-4">{platform.price}</td>
                    <td class="py-3 px-4">{platform.liveSessionsRating}/5</td>
                    <td class="py-3 px-4">
                      {platform.slug === 'mdlive' || platform.slug === 'amwell' ? '24/7' : 'Scheduled'}
                    </td>
                    <td class="py-3 px-4">
                      {platform.insurance ? (
                        <CheckCircle class="h-5 w-5 text-green-500" />
                      ) : (
                        <XCircle class="h-5 w-5 text-red-500" />
                      )}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>

        {/* FAQs */}
        <div class="bg-white rounded-xl shadow-sm p-8 mb-10">
          <h2 class="text-2xl font-bold text-neutral-900 mb-6">Frequently Asked Questions</h2>

          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">Is video therapy as good as in-person therapy?</h3>
              <p class="text-neutral-600">
                Yes, multiple studies show video therapy is just as effective as in-person therapy for most mental health conditions. The visual connection allows for the same therapeutic relationship and non-verbal communication as face-to-face sessions.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">What if my internet connection drops during a session?</h3>
              <p class="text-neutral-600">
                Most platforms have backup communication methods. Your therapist can typically call you by phone to continue the session, or you can reschedule if needed. A stable broadband connection is recommended for best results.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">Are video therapy sessions secure?</h3>
              <p class="text-neutral-600">
                Yes, all reputable platforms use HIPAA-compliant, encrypted video conferencing to protect your privacy. Sessions are as confidential as in-person therapy appointments.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">Can I do video therapy from my phone?</h3>
              <p class="text-neutral-600">
                Yes, most platforms have mobile apps that support video sessions. However, a larger screen (tablet or computer) may provide a better experience for both you and your therapist.
              </p>
            </div>

            <div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">How long are video therapy sessions?</h3>
              <p class="text-neutral-600">
                Most video therapy sessions last 30-50 minutes, similar to traditional in-person therapy. Frequency varies based on your needs, but weekly sessions are typical.
              </p>
            </div>
          </div>
        </div>

        {/* How to Choose */}
        <div class="bg-white rounded-xl shadow-sm p-8 mb-16">
          <h2 class="text-2xl font-bold text-neutral-900 mb-6">Choosing the Right Video Therapy Platform</h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <div>
              <div class="bg-brand-primary-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Calendar class="h-6 w-6 text-brand-primary-600" />
              </div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">Scheduling Flexibility</h3>
              <p class="text-neutral-600">
                Consider whether you need scheduled appointments or prefer 24/7 availability for urgent consultations. Some platforms offer same-day sessions.
              </p>
            </div>

            <div>
              <div class="bg-brand-primary-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <Monitor class="h-6 w-6 text-brand-primary-600" />
              </div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">Platform Quality</h3>
              <p class="text-neutral-600">
                Look for platforms with reliable video quality, user-friendly interfaces, and good technical support in case of connection issues.
              </p>
            </div>

            <div>
              <div class="bg-brand-primary-100 rounded-full w-12 h-12 flex items-center justify-center mb-4">
                <DollarSign class="h-6 w-6 text-brand-primary-600" />
              </div>
              <h3 class="text-lg font-bold text-neutral-900 mb-2">Cost Structure</h3>
              <p class="text-neutral-600">
                Compare subscription vs. per-session pricing. Check if your insurance covers video therapy, which can significantly reduce costs.
              </p>
            </div>
          </div>

          <div class="bg-gradient-to-br from-brand-primary-50 to-white rounded-xl p-6">
            <h3 class="text-lg font-bold text-neutral-900 mb-3">Our Recommendation</h3>
            <p class="text-neutral-700 mb-4">
              For video therapy:
            </p>
            <ul class="space-y-2">
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>BetterHelp</strong> offers the best overall video therapy experience with flexible scheduling and excellent therapist quality</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>MDLive</strong> is ideal if you have insurance and need 24/7 availability for urgent consultations</span>
              </li>
              <li class="flex items-start">
                <CheckCircle class="h-5 w-5 text-green-500 mr-2 mt-0.5" />
                <span><strong>Calmerry</strong> provides the most affordable video therapy option without compromising on therapist quality</span>
              </li>
            </ul>
          </div>
        </div>

        {/* CTA Section */}
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl p-8 text-white text-center">
          <h2 class="text-2xl font-bold mb-4">Ready to Start Video Therapy?</h2>
          <p class="text-lg mb-6 max-w-2xl mx-auto">
            Connect face-to-face with a licensed therapist from the comfort of your home.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center bg-white text-brand-primary-600 px-6 py-3 whitespace-nowrap rounded-md hover:bg-gray-100 transition font-medium">Find Your Match</a>
            <a href="/learn/fundamentals/therapy-types-explained" class="inline-flex items-center border-2 border-white text-white px-6 py-3 whitespace-nowrap rounded-md hover:bg-white hover:bg-opacity-10 transition">Learn More</a>
          </div>
        </div>
    </div>
  </section>
</BaseLayout>
