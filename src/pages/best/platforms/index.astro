---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { Sparkles, Search, Users } from 'lucide-react';
---

<BaseLayout
  title="Best Therapy Platforms 2025 | Expert Reviews"
  description="Find the best online therapy platforms by type. Compare top services for online therapy, text therapy, video therapy, medication management, and specialized platforms."
>
  {/* Hero Section - Enhanced */}
  <section class="relative bg-gradient-to-b from-white via-brand-primary-50/20 to-white pt-20 pb-16 md:pt-28 md:pb-20 overflow-hidden">
    {/* Background decoration */}
    <div class="absolute inset-0 overflow-hidden pointer-events-none opacity-30">
      <div class="absolute top-20 right-20 w-96 h-96 bg-brand-primary-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
      <div class="absolute top-40 left-20 w-96 h-96 bg-brand-secondary-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
      <div class="absolute -bottom-8 left-1/2 w-96 h-96 bg-accent-100 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-4000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6 lg:px-12 relative z-10">
      {/* Breadcrumb */}
      <nav class="flex items-center space-x-2 text-sm text-neutral-600 mb-8 animate-fade-in">
        <a href="/" class="hover:text-brand-primary-600 transition">Home</a>
        <span>/</span>
        <span class="text-neutral-900 font-medium">Best Platforms</span>
      </nav>

      <div class="text-center animate-fade-in-up">
        <div class="inline-flex items-center gap-2 bg-brand-primary-100 text-brand-primary-700 px-4 py-2 rounded-full text-sm font-medium mb-6">
          <Sparkles class="h-4 w-4" />
          <span>Expert-Reviewed Therapy Platforms</span>
        </div>
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">Best Therapy Platforms 2025</h1>
        <p class="font-sans text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto mb-8 leading-relaxed">
          Find the best online therapy platforms by type. Compare top services for online therapy, text therapy, video therapy, medication management, and specialized platforms.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/tools/matchers/therapy-platform-matcher" class="inline-flex items-center gap-2 bg-brand-primary-600 text-white px-8 py-4 rounded-xl hover:bg-brand-primary-700 transition-all hover:scale-105 shadow-lg hover:shadow-xl font-medium">
            <Search class="h-5 w-5" />
            Find Your Perfect Match
          </a>
          <a href="/best" class="inline-flex items-center gap-2 bg-white text-brand-primary-600 border-2 border-brand-primary-200 px-8 py-4 rounded-xl hover:border-brand-primary-400 transition-all hover:scale-105 shadow-sm hover:shadow-md font-medium">
            <Users class="h-5 w-5" />
            View All Categories
          </a>
        </div>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <a href="/best-online-therapy-platforms" class="block p-6 bg-white rounded-xl shadow-sm hover:shadow-lg transition-shadow">
        <h3 class="text-xl font-semibold text-neutral-900 mb-2">Best Overall</h3>
        <p class="text-neutral-600">Top platforms for general therapy</p>
      </a>
      <a href="/best-text-therapy-services" class="block p-6 bg-white rounded-xl shadow-sm hover:shadow-lg transition-shadow">
        <h3 class="text-xl font-semibold text-neutral-900 mb-2">Best for Text</h3>
        <p class="text-neutral-600">Text-based therapy services</p>
      </a>
    </div>
    </div>
  </section>
</BaseLayout>
